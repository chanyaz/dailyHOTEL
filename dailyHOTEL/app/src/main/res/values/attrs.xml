<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- DailyLineIndicator -->
    <declare-styleable name="dailyLineIndicator">
        <attr name="indicatorColor" format="color" />
        <attr name="indicatorBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="dailyToolbar">
        <attr name="underLineHeight" format="dimension" />
        <attr name="underLineVisible" format="boolean" />
        <attr name="themeColor" format="enum">
            <enum name="white" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="dailyCarousel">
        <attr name="topMarginHeight" format="dimension" />
        <attr name="topMarginBackgroundColor" format="color" />
        <attr name="topLineHeight" format="dimension" />
        <attr name="topLineBackgroundColor" format="color" />
        <attr name="bottomMarginHeight" format="dimension" />
        <attr name="bottomMarginBackgroundColor" format="color" />
        <attr name="bottomLineHeight" format="dimension" />
        <attr name="bottomLineBackgroundColor" format="color" />
        <attr name="useAnimation" format="boolean" />
        <attr name="usePriceLayout" format="boolean" />
        <attr name="useViewAllButton" format="boolean" />
    </declare-styleable>

    <declare-styleable name="dailyBookingAgreeThirdParty">
        <attr name="serviceType" format="enum">
            <enum name="stay_inbound" value="0"/>
            <enum name="gourmet" value="1"/>
            <enum name="stay_outbound" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ShimmerView">
        <attr name="primaryColor" format="color"/>
        <attr name="reflectionColor" format="color"/>
    </declare-styleable>
</resources>