    <declare-styleable name="TabWidget">

        <!-- Drawable used to draw the divider between tabs. -->
        <!-- <attr name="divider" format="reference"/> -->
        <!-- Determines whether the strip under the tab indicators is drawn or not. -->
        <attr name="tabStripEnabled" format="boolean" />
        <!-- Drawable used to draw the left part of the strip underneath the tabs. -->
        <attr name="tabStripLeft" format="reference" />
        <!-- Drawable used to draw the right part of the strip underneath the tabs. -->
        <attr name="tabStripRight" format="reference" />
        <!-- Layout used to organize each tab's content. -->
        <attr name="tabLayout" format="reference" />
    </declare-styleable>
    <declare-styleable name="Switch">
        <attr name="thumb" format="reference" />
        <attr name="textOn" format="string" />
        <attr name="textOff" format="string" />
    </declare-styleable>

    <attr name="textAppearance" format="reference" />

    <declare-styleable name="TextAppearanceSwitch">
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="textStyle" format="reference" />
        <attr name="typeface" format="reference" />
        <attr name="fontFamily" format="reference" />
        <attr name="textColorHighlight" format="color" />
        <attr name="textColorHint" format="color" />
        <attr name="textColorLink" format="color" />
    </declare-styleable>
    <declare-styleable name="FloatingActionButton">
        <attr name="fab_colorPressed" format="color" />
        <attr name="fab_colorNormal" format="color" />
        <attr name="fab_colorRipple" format="color" />
        <attr name="fab_colorDisabled" format="color" />
        <attr name="fab_shadow" format="boolean" />
        <attr name="fab_type" format="enum">
            <enum name="normal" value="0" />
            <enum name="mini" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ShimmerView">
        <attr name="primaryColor" format="color" />
        <attr name="reflectionColor" format="color" />
    </declare-styleable>

    <!-- DailyLineIndicator -->
    <declare-styleable name="dailyLineIndicator">
        <attr name="indicatorColor" format="color" />
        <attr name="indicatorBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="dailyToolbar">
        <attr name="underLineHeight" format="dimension" />
        <attr name="underLineVisible" format="boolean" />
        <attr name="themeColor" format="enum">
            <enum name="white" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="dailyCarousel">
        <attr name="topMarginHeight" format="dimension" />
        <attr name="topMarginBackgroundColor" format="color" />
        <attr name="topLineHeight" format="dimension" />
        <attr name="topLineBackgroundColor" format="color" />
        <attr name="bottomMarginHeight" format="dimension" />
        <attr name="bottomMarginBackgroundColor" format="color" />
        <attr name="bottomLineHeight" format="dimension" />
        <attr name="bottomLineBackgroundColor" format="color" />
        <attr name="useAnimation" format="boolean" />
        <attr name="usePriceLayout" format="boolean" />
        <attr name="useViewAllButton" format="boolean" />
    </declare-styleable>

</resources>