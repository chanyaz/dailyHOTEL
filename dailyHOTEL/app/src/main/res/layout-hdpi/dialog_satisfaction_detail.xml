<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/popup_bg_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/satisfaction_recommend_title"
                android:textColor="@color/dialog_title_text"
                android:textSize="17dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/contentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="@string/satisfaction_not_recommend_detailtext"
            android:textColor="@color/dialog_message_text"
            android:textSize="13dp"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/selectServiceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/satisfaction_selectservice_title"
            android:textColor="@color/dialog_message_text"
            android:textSize="11dp"
            android:textStyle="bold"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/selectServiceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp">

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/service01TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_satisfaction_boxcolor"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="17dp"/>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/service02TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_satisfaction_boxcolor"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/service03TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_satisfaction_boxcolor"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="17dp"/>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    />

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/service04TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_satisfaction_boxcolor"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="17dp"/>

            </LinearLayout>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/commentsHintView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/satisfaction_hotel_comments_hint01"
                android:textColor="@color/satisfaction_box_default"/>

            <com.twoheart.dailyhotel.view.widget.DailyEditText
                android:id="@+id/commentsView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_edittext_statisfaction_background"
                android:gravity="top|left"
                android:padding="5dp"
                android:textColor="@color/dialog_message_text"
                android:textSize="13dp"
                android:maxLength="190"/>

        </FrameLayout>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/positiveTextView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@color/dh_theme_color"
            android:gravity="center"
            android:text="@string/label_send_your_comments"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"/>

    </LinearLayout>
</FrameLayout>