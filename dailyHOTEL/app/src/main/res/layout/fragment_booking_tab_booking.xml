<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollLayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/mapImageView"
                android:layout_width="match_parent"
                android:layout_height="242dp"
                android:layout_marginTop="-71dp"
                android:adjustViewBounds="true"
                fresco:actualImageScaleType="centerCrop"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_map_expand"/>

            <View
                android:id="@+id/lineView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/mapImageView"
                android:background="@color/default_line_cdcdcdd"/>

            <View
                android:id="@+id/emptyView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/placeInformationTextView"
                android:layout_below="@+id/lineView"
                android:background="@color/default_background"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/emptyView"
                android:background="@color/default_background"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp"
                android:text="@string/label_booking_reservation_information"
                android:textColor="@color/default_text_c323232"
                android:textSize="14dp"
                dailyFont:style="Medium"/>

            <LinearLayout
                android:id="@+id/placeInformationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mapImageView"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-71dp"
                android:background="@drawable/shape_fillrect_l1a000000_bffffff"
                android:orientation="vertical">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/placeNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="46dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="18dp"
                    dailyFont:style="Medium"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/default_line_cf0f0f0"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="68dp">

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/viewDetailView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="@string/label_booking_view_detail"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="12dp"
                        app:drawableCompatTop="@drawable/reservation_ic_detail_info"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/default_line_cf0f0f0"/>

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/viewMapView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="@string/label_booking_view_map"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="12dp"
                        app:drawableCompatTop="@drawable/reservation_ic_directions"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/default_line_cf0f0f0"/>

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/callView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="@string/label_booking_call"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="12dp"
                        app:drawableCompatTop="@drawable/navibar_ic_call"/>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <include
            layout="@layout/fragment_booking_tab_booking_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <include
            layout="@layout/fragment_booking_tab_booking_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/default_background"/>

        <include
            layout="@layout/fragment_booking_tab_booking_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>