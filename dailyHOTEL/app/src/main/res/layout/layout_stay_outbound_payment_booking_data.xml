<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:dailyFont="http://schemas.android.com/apk/res-auto">

    <merge>

        <!-- GUI 체크시에 풀어서 사용하세요 -->
        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical">-->

        <com.daily.base.widget.DailyTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/default_background"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="25dp"
            android:text="@string/label_booking_step1"
            android:textColor="@color/default_text_c323232"
            android:textSize="14dp"
            dailyFont:style="Medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_line_cf0f0f0"/>

        <RelativeLayout
            android:id="@+id/dateInformationLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/act_booking_chkin"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="13dp"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/checkInDayTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="13dp"/>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_cdcdcdd"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/act_booking_chkout"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="13dp"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/checkOutDayTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="13dp"/>
                </LinearLayout>
            </LinearLayout>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/nightsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/payment_overnight_ic_bg"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/default_text_c666666"
                android:textSize="11dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_line_cdcdcdd"/>

        <!-- 객실 정보 -->
        <com.daily.base.widget.DailyTextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/label_booking_room_info"
            android:textColor="@color/default_text_c666666"
            android:textSize="13dp"
            dailyFont:style="Medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:minHeight="36dp"
            android:paddingBottom="11dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="11dp">

            <com.daily.base.widget.DailyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/label_booking_place_name"
                android:textColor="@color/default_text_c929292"
                android:textSize="13dp"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/placeNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="right"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="11dp">

            <com.daily.base.widget.DailyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/label_booking_room_type"
                android:textColor="@color/default_text_c929292"
                android:textSize="13dp"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/roomTypeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="right"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/default_line_cdcdcdd"/>

        <!-- 투숙자 정보 -->
        <LinearLayout
            android:id="@+id/guestLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <com.daily.base.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/act_booking_reserver_info"
                    android:textColor="@color/default_text_c666666"
                    android:textSize="13dp"
                    dailyFont:style="Medium"/>

                <com.daily.base.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/label_booking_required_fileds"
                    android:textColor="@color/default_text_cc5c5c5"
                    android:textSize="12dp"/>
            </LinearLayout>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/guideNameMemoView"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/message_guide_name_memo"
                android:textColor="@color/default_text_c929292"
                android:textSize="11dp"
                app:drawableCompatLeft="@drawable/ic_payment_notice"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <com.daily.base.widget.DailyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/label_stay_outbound_payment_last_name"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="13dp"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">

                    <com.daily.base.widget.DailyEditText
                        android:id="@+id/guestLastNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:inputType="textUri"
                        android:lines="1"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="13dp"
                        android:theme="@style/EditTextTheme"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/guestLastNameHintEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="@string/label_stay_outbound_payment_last_name_hint"
                        android:textColor="@color/default_text_cc5c5c5"
                        android:textSize="13dp"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <com.daily.base.widget.DailyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/label_stay_outbound_payment_first_name"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="13dp"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">

                    <com.daily.base.widget.DailyEditText
                        android:id="@+id/guestFirstNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:inputType="textUri"
                        android:lines="1"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="13dp"
                        android:theme="@style/EditTextTheme"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/guestFirstNameHintEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="@string/label_stay_outbound_payment_first_name_hint"
                        android:textColor="@color/default_text_cc5c5c5"
                        android:textSize="13dp"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <com.daily.base.widget.DailyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/act_booking_mobile"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="13dp"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">

                    <com.daily.base.widget.DailyEditText
                        android:id="@+id/guestPhoneEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:inputType="phone"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/default_text_c323232"
                        android:textColorHint="@color/default_text_cc5c5c5"
                        android:textSize="13dp"
                        android:theme="@style/EditTextTheme"/>

                    <View
                        android:id="@+id/fakeMobileEditView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <com.daily.base.widget.DailyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/act_booking_email"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="13dp"/>

                <com.daily.base.widget.DailyEditText
                    android:id="@+id/guestEmailEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="right|center_vertical"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/default_text_c323232"
                    android:textColorHint="@color/default_text_cc5c5c5"
                    android:textSize="13dp"
                    android:theme="@style/EditTextTheme"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <com.daily.base.widget.DailyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/label_stay_outbound_payment_people"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="13dp"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/guestPeopleEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="right|center_vertical"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="13dp"
                    android:theme="@style/EditTextTheme"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_line_cf0f0f0"/>
        <!--</LinearLayout>-->
    </merge>
</layout>

