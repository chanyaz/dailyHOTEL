<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/areaTextView1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_background_area"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@drawable/selector_selectarea_titlecolor"
            android:textSize="13dp"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/selectarea_underline"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/areaTextView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_background_area"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@drawable/selector_selectarea_titlecolor"
            android:textSize="13dp"/>
    </LinearLayout>

    <View
        android:id="@+id/underLineView"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/selectarea_underline"/>

</RelativeLayout>