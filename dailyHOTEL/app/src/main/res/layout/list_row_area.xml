<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/areaLayout1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_background_area"
            android:gravity="center"
            android:orientation="vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/areaTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_selectarea_titlecolor"
                android:textSize="15dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/areaSubTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@drawable/selector_selectarea_subtitlecolor"
                android:textSize="9dp"
                dailyFont:style="DemiLight"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/selectarea_underline"/>

        <LinearLayout
            android:id="@+id/areaLayout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_background_area"
            android:gravity="center"
            android:orientation="vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/areaTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_selectarea_titlecolor"
                android:textSize="15dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/areaSubTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@drawable/selector_selectarea_subtitlecolor"
                android:textSize="9dp"
                dailyFont:style="DemiLight"
                android:ellipsize="end"
                android:minLines="1"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/underLineView"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/selectarea_underline"/>

</RelativeLayout>