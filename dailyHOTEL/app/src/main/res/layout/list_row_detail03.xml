<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/default_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_line_cf0f0f0"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="84dp">

        <ImageView
            android:id="@+id/mapImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd"
            android:src="@drawable/detail_map_img"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="66dp"
            android:background="@drawable/detail_map_gradient"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/detailAddressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="100dp"
            android:freezesText="true"
            android:maxLines="3"
            android:textColor="@color/hoteldetail_title_text"
            android:textSize="13dp"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/default_line_cdcdcdd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/copyAddressView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/detail_ic_copy"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:freezesText="true"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/label_copy_address"
                android:textColor="@color/hoteldetail_title_text"
                android:textSize="13dp"/>
        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="@color/default_line_ce8e8e9"/>

        <LinearLayout
            android:id="@+id/navigatorView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/detail_ic_directions"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:freezesText="true"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/label_navigator"
                android:textColor="@color/hoteldetail_title_text"
                android:textSize="13dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_line_cf0f0f0"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/default_background"/>
</LinearLayout>