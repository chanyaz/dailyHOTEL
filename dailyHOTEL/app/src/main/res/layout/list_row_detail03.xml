<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/info_ic_map_small"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:orientation="vertical">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/hotelAddressTextView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:freezesText="true"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="13dp"
                dailyFont:style="DemiLight"/>/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/hotelAddressTextView02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:freezesText="true"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:visibility="gone"
                dailyFont:style="DemiLight"/>/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/hotelAddressTextView03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:freezesText="true"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:visibility="gone"
                dailyFont:style="DemiLight"/>/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/selectarea_underline"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/mapImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        fresco:actualImageScaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/selectarea_underline"/>
</LinearLayout>