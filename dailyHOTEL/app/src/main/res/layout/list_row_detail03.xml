<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/default_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/default_line_cf0f0f0"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/mapImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        fresco:actualImageScaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/default_line_cf0f0f0"/>


    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/detailAddressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:freezesText="true"
        android:gravity="center"
        android:textColor="@color/hoteldetail_title_text"
        android:textSize="13dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/navigatorView"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:background="@drawable/more_btn_padding"
            android:freezesText="true"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/label_navigator"
            android:textColor="@color/hoteldetail_title_text"
            android:textSize="11dp"
            />

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/copyAddressView"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/more_btn_padding"
            android:freezesText="true"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/label_copy_address"
            android:textColor="@color/hoteldetail_title_text"
            android:textSize="11dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/default_line_cf0f0f0"/>
</LinearLayout>