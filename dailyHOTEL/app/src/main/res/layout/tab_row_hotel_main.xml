<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_centerInParent="true"
              android:orientation="vertical"
              android:gravity="center">

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/tab_indicator_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:textColor="@drawable/selector_tab_text_defaultcolor"
        android:textSize="16dp"/>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/tab_indicator_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@drawable/selector_tab_subtext_defaultcolor"
        android:textSize="12dp"/>

</LinearLayout>