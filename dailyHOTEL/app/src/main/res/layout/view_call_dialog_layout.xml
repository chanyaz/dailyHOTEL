<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/popup_bg_white_full"
              android:orientation="vertical"
              android:paddingBottom="10dp"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:paddingTop="24dp">

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="@string/label_call_service"
        android:textColor="@color/default_text_c323232"
        android:textSize="17dp"
        dailyFont:style="Medium"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/callPlaceView"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/default_text_c323232"
            android:textSize="14dp"
            app:drawableCompatLeft="@drawable/popup_ic_ops_01_store_call"
            dailyFont:style="Medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/callPlaceView"
            android:background="@color/default_line_cf0f0f0"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/kakaoDailyView"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_below="@id/callPlaceView"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/label_daily_kakaotalk"
            android:textColor="@color/default_text_c323232"
            android:textSize="14dp"
            app:drawableCompatLeft="@drawable/popup_ic_ops_02_daily_kakao"
            dailyFont:style="Medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/kakaoDailyView"
            android:background="@color/default_line_cf0f0f0"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/callDailyView"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_below="@id/kakaoDailyView"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/label_daily_customer_service"
            android:textColor="@color/default_text_c323232"
            android:textSize="14dp"
            app:drawableCompatLeft="@drawable/popup_ic_ops_03_daily_call"
            dailyFont:style="Medium"/>
    </RelativeLayout>
</LinearLayout>