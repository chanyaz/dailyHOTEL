<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="#ffffff"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <include layout="@layout/toolbar_default"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/receiptLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="7dp">

            <!-- 예약 세부정보 -->


            <!-- 결제 정보 -->

            <RelativeLayout
                android:id="@+id/paymentInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_below="@+id/bookingInfoLayout"
                android:background="@drawable/receipt_bg_middle"
                android:paddingLeft="11dp"
                android:paddingRight="11dp">

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/label_receipt_paymentinfo"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:textStyle="bold"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView21"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_paymentday"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView21"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView22"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_supplyvalue"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView22"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView24"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_vat"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView24"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView26"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_discount"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView26"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView28"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_payment"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView28"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView30"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_paymenttype"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView30"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp"/>
            </RelativeLayout>

            <!-- 공급자 -->

            <RelativeLayout
                android:id="@+id/providerInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paymentInfoLayout"
                android:background="@drawable/receipt_bg_bottom"
                android:paddingBottom="15dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:minHeight="180dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/tile_receipt_bottom_underline"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="21dp"
                    android:text="@string/label_receipt_provider"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/receipt_logo"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_below="@id/imageView1"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_below="@id/imageView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/imageView1"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView45"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_below="@id/textView42"
                    android:layout_marginTop="8dp"
                    android:text="@string/label_receipt_address"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView42"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/textView45"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView47"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="false"
                    android:layout_below="@+id/textView46"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp"
                    android:layout_alignParentLeft="true"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView46"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/textView49"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView48"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/dh_theme_color"
                    android:textSize="10dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/toolbarUnderline"
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/navibar_gradation"/>
</RelativeLayout>