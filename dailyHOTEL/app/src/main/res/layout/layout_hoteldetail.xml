<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/defaultHotelImageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.twoheart.dailyhotel.view.LoopViewPager
            android:id="@+id/defaultHotelImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_hoteldetail_viewpager"/>

        <com.twoheart.dailyhotel.view.widget.DailyViewPagerIndicator
            android:id="@+id/viewpagerIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="false"
            android:layout_alignBaseline="@+id/defaultHotelImageView"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/defaultHotelImageView"/>
    </RelativeLayout>

    <View
        android:id="@+id/imageViewBlur"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_alignBottom="@id/defaultHotelImageLayout"
        android:background="@drawable/blur"
        android:visibility="invisible"/>

    <com.twoheart.dailyhotel.view.HotelDetailListView
        android:id="@+id/hotelListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"/>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/actionBarTextView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:ellipsize="end"
        android:freezesText="true"
        android:gravity="center_vertical"
        android:paddingLeft="55dp"
        android:paddingRight="40dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:visibility="invisible"/>

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <View
        android:id="@+id/toolbar_actionbarUnderLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBaseline="@id/toolbar_actionbar"
        android:layout_alignBottom="@id/toolbar_actionbar"
        android:background="@color/actionbar_underline"/>

    <View
        android:id="@+id/roomTypeBackgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textView_textColor_shadow_soldout"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/roomTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            android:id="@+id/roomType01View"
            layout="@layout/list_row_detail_roomtype"
            android:layout_width="match_parent"
            android:layout_height="92dp"/>

        <include
            android:id="@+id/roomType02View"
            layout="@layout/list_row_detail_roomtype"
            android:layout_width="match_parent"
            android:layout_height="92dp"/>

        <include
            android:id="@+id/roomType03View"
            layout="@layout/list_row_detail_roomtype"
            android:layout_width="match_parent"
            android:layout_height="92dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/bookingTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/actionbar_hamburger"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:visibility="gone"/>

        <com.twoheart.dailyhotel.view.widget.DailyButton
            android:id="@+id/soldoutTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/hoteldetail_soldout_background"
            android:gravity="center"
            android:text="@string/act_hotel_soldout"
            android:textColor="@color/hoteldetail_soldout_text"
            android:textSize="20dp"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>