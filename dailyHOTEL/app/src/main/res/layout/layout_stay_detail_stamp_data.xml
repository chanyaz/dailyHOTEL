<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/stampLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="99dp"
        android:visibility="gone">

        <View
            android:id="@+id/stampDividerView"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:background="@drawable/layerlist_divider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/stampImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/detail_ic_stamp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stampDividerView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/stampMessage1TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/default_text_c323232"
            android:textSize="13dp"
            app:layout_constraintBottom_toTopOf="@+id/stampMessage2TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/stampImageView"
            app:layout_constraintTop_toBottomOf="@id/stampDividerView"
            app:layout_constraintVertical_chainStyle="packed"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/stampMessage2TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/default_text_c666666"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/stampMessage3TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/stampImageView"
            app:layout_constraintTop_toBottomOf="@id/stampMessage1TextView"
            app:layout_constraintVertical_chainStyle="packed"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/stampMessage3TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:text="@string/label_view_detail"
            android:textColor="@color/default_text_c929292"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stampMessage2TextView"
            app:layout_constraintVertical_chainStyle="packed"/>
    </android.support.constraint.ConstraintLayout>
</layout>