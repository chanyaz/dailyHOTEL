<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/gourmetTitleLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="19dp">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/gourmetGradeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@color/default_background_c929292"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:textColor="@android:color/white"
                android:textSize="11dp"
                android:visibility="invisible"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/gourmetNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:ellipsize="marquee"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                dailyFont:style="Medium"
                android:textColor="@color/hoteldetail_title_text"
                android:textSize="18dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/satisfactionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="3dp"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_c929292"
                android:textSize="13dp"
                android:visibility="visible"
                dailyFont:style="DemiLight"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/couponLayout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:visibility="gone">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/label_detail_special_discount"
            android:textColor="@color/default_text_c323232"
            android:textSize="13dp"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/downloadCouponView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_rect_cdcdcdd"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/ic_detail_coupon_down"
            android:paddingBottom="4dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="4dp"
            android:text="@string/label_detail_download_coupon"
            android:textColor="@color/default_text_c323232"
            android:textSize="11dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_line_cdcdcdd"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_line_cf0f0f0"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/default_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_line_cf0f0f0"/>

    <LinearLayout
        android:id="@+id/dateInformationLayout"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/white">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_visit_day"
            android:textColor="@color/default_text_c929292"
            android:textSize="13dp"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/dayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/navibar_m_burg_ic_v"
            android:textColor="@color/default_text_c900034"
            android:textSize="15dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_line_cf0f0f0"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/default_background"/>
</LinearLayout>
