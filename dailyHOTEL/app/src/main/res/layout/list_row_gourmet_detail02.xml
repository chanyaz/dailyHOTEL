<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/gourmetTitleLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:background="@color/white"
        android:paddingTop="19dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/gourmetGradeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/default_background_c929292"
                android:gravity="center"
                android:paddingBottom="1px"
                android:paddingLeft="5.5dp"
                android:paddingRight="5.5dp"
                android:paddingTop="2px"
                android:textColor="@android:color/white"
                android:textSize="11dp"
                android:visibility="invisible"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/gourmetSubGradeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1px"
                android:background="@color/default_background_ca9a9a9"
                android:gravity="center"
                android:paddingBottom="1px"
                android:paddingLeft="5.5dp"
                android:paddingRight="5.5dp"
                android:paddingTop="2px"
                android:textColor="@android:color/white"
                android:textSize="11dp"
                android:visibility="invisible"/>
        </LinearLayout>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/gourmetNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:freezesText="true"
            android:gravity="center_vertical"
            android:textColor="@color/hoteldetail_title_text"
            android:textSize="18dp"
            dailyFont:style="Medium"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/satisfactionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:freezesText="true"
            android:gravity="center_vertical"
            android:textColor="@color/default_text_c929292"
            android:textSize="13dp"
            android:visibility="visible"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/trueReviewTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:drawablePadding="4dp"
            android:freezesText="true"
            android:gravity="center_vertical"
            android:textColor="@color/default_text_cb70038"
            android:textSize="13dp"
            android:visibility="visible"
            app:drawableCompatLeft="@drawable/detail_ic_review"
            app:drawableCompatRight="@drawable/ic_right_burgundy"/>
    </LinearLayout>

    <include layout="@layout/view_separate_line_no_linear"/>

    <LinearLayout
        android:id="@+id/couponLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/white">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/label_detail_special_discount"
                android:textColor="@color/default_text_c666666"
                android:textSize="13dp"/>

            <LinearLayout
                android:id="@+id/downloadCouponLayout"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/img_detail_coupon_down"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="26dp">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_detail_download_coupon01"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="13dp"
                    dailyFont:style="Medium"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1dp"
                    android:text="@string/label_detail_download_coupon02"
                    android:textColor="@color/default_text_c666666"
                    android:textSize="11dp"/>
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/view_separate_line_no_linear"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateInformationLayout"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_visit_day"
            android:textColor="@color/default_text_c929292"
            android:textSize="13dp"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/dayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:drawablePadding="4dp"
            android:textColor="@color/default_text_cb70038"
            android:textSize="15dp"
            app:drawableCompatRight="@drawable/navibar_m_burg_ic_v"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_line_cf0f0f0"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/default_background"/>
</LinearLayout>
