<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:dailyFont="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="19dp">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/gradeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@color/black"
                android:gravity="center"
                android:paddingBottom="1px"
                android:paddingLeft="5.5dp"
                android:paddingRight="5.5dp"
                android:paddingTop="2px"
                android:textColor="@android:color/white"
                android:textSize="11dp"
                android:visibility="invisible"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_c323232"
                android:textSize="18dp"
                dailyFont:style="Medium"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/satisfactionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="3dp"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_c929292"
                android:textSize="13dp"
                android:visibility="visible"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/trueReviewTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:drawablePadding="4dp"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_cb70038"
                android:textSize="13dp"
                android:visibility="gone"
                app:drawableCompatLeft="@drawable/detail_ic_review"
                app:drawableCompatRight="@drawable/ic_arrow_right_b"/>
        </LinearLayout>

        <include layout="@layout/view_separate_line_no_linear"/>

        <LinearLayout
            android:id="@+id/couponLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@color/white">

                <com.daily.base.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/label_detail_special_discount"
                    android:textColor="@color/default_text_c666666"
                    android:textSize="13dp"/>

                <LinearLayout
                    android:id="@+id/downloadCouponLayout"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/img_detail_coupon_down"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="26dp">

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_detail_download_coupon01"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="13dp"
                        dailyFont:style="Medium"/>

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-1dp"
                        android:text="@string/label_detail_download_coupon02"
                        android:textColor="@color/default_text_c666666"
                        android:textSize="11dp"/>
                </LinearLayout>
            </RelativeLayout>

            <include layout="@layout/view_separate_line_no_linear"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stampLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/stampClickLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="87dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/stampImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/detail_ic_stamp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/stampImageView"
                    android:orientation="vertical">

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/stampMessage1TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="13dp"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/stampMessage2TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/default_text_c666666"
                        android:textSize="12dp"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/stampMessage3TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/label_view_detail"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="12dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </RelativeLayout>

            <include layout="@layout/view_separate_line_no_linear"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/dateLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/act_booking_chkin"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="13dp"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/checkInDayTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:drawablePadding="4dp"
                        android:textColor="@color/default_text_cb70038"
                        android:textSize="15dp"
                        app:drawableCompatRight="@drawable/navibar_m_burg_ic_v"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/default_line_cf0f0f0"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/act_booking_chkout"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="13dp"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/checkOutDayTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:drawablePadding="4dp"
                        android:textColor="@color/default_text_cb70038"
                        android:textSize="15dp"
                        app:drawableCompatRight="@drawable/navibar_m_burg_ic_v"/>
                </LinearLayout>
            </LinearLayout>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/nightsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/payment_overnight_ic_bg"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/default_text_c666666"
                android:textSize="11dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_line_cf0f0f0"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/default_background"/>
    </LinearLayout>
</layout>