<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                xmlns:dailyLineIndicator="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/toolbar_default"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBarLineView"
        android:layout_below="@+id/toolbar"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/scrollLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/defaultImageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.twoheart.dailyhotel.widget.DailyLoopViewPager
                    android:id="@+id/defaulLoopViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignBottom="@id/defaulLoopViewPager"
                    android:background="@drawable/img_detail_bottom_gradient"/>

                <View
                    android:id="@+id/viewPagerBottomLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/defaulLoopViewPager"/>

                <com.twoheart.dailyhotel.widget.DailyLineIndicator
                    android:id="@+id/viewpagerIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_above="@id/viewPagerBottomLine"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    dailyLineIndicator:indicatorBackgroundColor="@color/white_a40"
                    dailyLineIndicator:indicatorColor="@color/white"/>

                <RelativeLayout
                    android:id="@+id/descriptionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/viewpagerIndicator"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <View
                        android:id="@+id/moreIconView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/detail_ic_more_img"/>

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/descriptionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="72dp"
                        android:layout_marginRight="72dp"
                        android:background="@drawable/background_image_information_detail"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:paddingBottom="7dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="7dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="invisible"/>
                </RelativeLayout>
            </RelativeLayout>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/productNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:minHeight="59dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textColor="@color/default_text_c323232"
                android:textSize="18dp"
                dailyFont:style="Medium"/>

            <LinearLayout
                android:id="@+id/defaultInformationTopLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/default_line_cf0f0f0"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/default_background"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/default_line_cf0f0f0"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/benefitLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="15dp"
                android:minHeight="44dp">

                <ImageView
                    android:id="@+id/benefitImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_detail_item_02_benefit_02"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/benefitTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/benefitImageView"
                    android:freezesText="true"
                    android:textColor="@color/default_text_cb70038"
                    android:textSize="13dp"/>

                <View
                    android:id="@+id/benefitLineView"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="1dp"
                    android:background="@color/default_line_cdcdcdd"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/timeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:freezesText="true"
                    android:gravity="center_vertical"
                    android:text="@string/label_office_hours"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="13dp"
                    app:drawableCompatLeft="@drawable/ic_detail_item_03_time"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/timeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:freezesText="true"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="13dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/checkLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:freezesText="true"
                    android:gravity="center_vertical"
                    android:text="@string/label_checklist"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="13dp"
                    app:drawableCompatLeft="@drawable/ic_detail_item_01_info"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/checkTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:freezesText="true"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="13dp"/>
            </LinearLayout>

            <View
                android:id="@+id/bottomMarginView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/white"/>

            <LinearLayout
                android:id="@+id/menuInformationTopLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/default_line_cf0f0f0"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/default_background"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/default_line_cf0f0f0"/>
            </LinearLayout>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/menuTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_gourmet_product_detail_menu_description"
                android:textColor="@color/default_text_c323232"
                android:textSize="15dp"
                dailyFont:style="Medium"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/menuSummaryTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_fillrect_ld1d1d1_bfafafb_r1"
                android:paddingBottom="16dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="16dp"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"/>

            <LinearLayout
                android:id="@+id/menuDetailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <View
        android:id="@+id/bottomBarLineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/bottomBarLayout"
        android:background="@color/default_line_ce7e7e7"/>

    <RelativeLayout
        android:id="@+id/bottomBarLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="10dp">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/discountPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/default_text_cb70038"
            android:textSize="18dp"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/discountPriceTextView"
            android:textColor="@color/default_text_cc5c5c5"
            android:textSize="12dp"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/reservationTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_fillrect_bb70038_r2"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/label_gourmet_product_detail_reservation"
            android:textColor="@color/white"
            android:textSize="17dp"
            dailyFont:style="Medium"/>
    </RelativeLayout>
</RelativeLayout>