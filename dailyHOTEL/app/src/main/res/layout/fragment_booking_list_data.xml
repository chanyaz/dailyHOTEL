<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    xmlns:dailyToolbar="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.daily.dailyhotel.view.DailyToolbarView
            android:id="@+id/toolbarView"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/white"
            android:elevation="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            dailyToolbar:underLineHeight="@dimen/gradient_1dp_line_height_under_21"/>

        <com.twoheart.dailyhotel.widget.PinnedSectionRecyclerView
            android:id="@+id/bookingRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:fadingEdge="none"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarView"/>

        <RelativeLayout
            android:id="@+id/emptyListLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarView">

            <LinearLayout
                android:id="@+id/textLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/messageTextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/frag_booking_no_hotels"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="18dp"
                    dailyFont:style="Medium"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/messageTextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:text="@string/frag_booking_line"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="14dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                app:srcCompat="@drawable/no_event_ic"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/loginView"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_below="@+id/textLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_button_common_background"
                android:gravity="center"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:text="@string/frag_booking_btn_login"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                dailyFont:style="Medium"/>
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/logoutLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarView">

            <!-- 윗줄 -->
            <View
                android:id="@+id/verticalLineView01"
                android:layout_width="2dp"
                android:layout_height="108dp"
                android:layout_marginLeft="26dp"
                android:background="@drawable/bitmap_timeline_light_tile"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- 점 -->
            <View
                android:id="@+id/circleView"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/shape_circle_be6e6e6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/verticalLineView01"/>

            <!-- 아랫줄 -->
            <View
                android:id="@+id/verticalLineView02"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_marginLeft="26dp"
                android:background="@drawable/bitmap_timeline_light_tile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/circleView"/>

            <View
                android:id="@+id/view01"
                android:layout_width="199dp"
                android:layout_height="14dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="109dp"
                android:background="@drawable/shape_fillrect_gradient_cf4f4f6_cf9f9fb"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/loginLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/reservation_empty"
                app:layout_constraintDimensionRatio="H,21:9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view01">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/img_reservation_empty"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/textView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/message_booking_do_login"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/loginTextView"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    dailyFont:style="Medium"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/loginTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_button_common_background"
                    android:gravity="center"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:text="@string/frag_booking_btn_login"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView01"
                    app:layout_constraintVertical_chainStyle="packed"
                    dailyFont:style="Medium"/>
            </android.support.constraint.ConstraintLayout>

            <View
                android:id="@+id/view02"
                android:layout_width="132dp"
                android:layout_height="17dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_fillrect_gradient_cf4f4f6_cf9f9fb"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginLayout"/>

            <View
                android:id="@+id/view03"
                android:layout_width="224dp"
                android:layout_height="16dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_fillrect_gradient_cf4f4f6_cf9f9fb"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view02"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>