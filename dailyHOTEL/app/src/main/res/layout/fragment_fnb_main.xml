<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <com.twoheart.dailyhotel.view.widget.FragmentViewPager
        android:id="@+id/fragmentViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/headerSectionBar"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginTop="56dp"
        android:background="@color/headersectionbar"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="19dp"
        android:visibility="invisible">

        <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/label_dailygourmet"
            android:textColor="@color/headersectionbar_text"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <View
            android:layout_width="53dp"
            android:layout_height="2dp"
            android:layout_marginTop="9dp"
            android:background="@color/headersectionbar_text"
            android:gravity="center_vertical"/>

        <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5dp"
            android:text="@string/label_fnblistfragment_header_text"
            android:textColor="@color/headersectionbar_text"
            android:textSize="13dp"
            />
    </LinearLayout>
</RelativeLayout>