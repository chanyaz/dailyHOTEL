<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <com.twoheart.dailyhotel.view.widget.FragmentViewPager
        android:id="@+id/fragmentViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
        android:id="@+id/headerSectionBar"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="56dp"
        android:background="@color/headersectionbar"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/label_headersectionbar_title"
        android:textColor="@color/headersectionbar_text"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="invisible"/>

</RelativeLayout>