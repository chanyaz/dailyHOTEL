<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/topLineView"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/default_line_cf0f0f0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/capitalAreaTextView"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/label_area_capital_area"
            android:textColor="@color/default_text_c929292"
            android:textSize="13dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/busanAreaTextView"
            app:layout_constraintTop_toBottomOf="@+id/topLineView"/>

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/default_line_cdcdcdd"
            app:layout_constraintBottom_toBottomOf="@+id/bottomLineView"
            app:layout_constraintLeft_toRightOf="@+id/capitalAreaTextView"
            app:layout_constraintRight_toLeftOf="@+id/busanAreaTextView"
            app:layout_constraintTop_toTopOf="@id/topLineView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/busanAreaTextView"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/label_area_busan"
            android:textColor="@color/default_text_c929292"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@+id/capitalAreaTextView"
            app:layout_constraintRight_toLeftOf="@+id/daeguAreaTextView"
            app:layout_constraintTop_toBottomOf="@+id/topLineView"/>

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/default_line_cdcdcdd"
            app:layout_constraintBottom_toBottomOf="@+id/bottomLineView"
            app:layout_constraintLeft_toRightOf="@+id/busanAreaTextView"
            app:layout_constraintRight_toLeftOf="@+id/daeguAreaTextView"
            app:layout_constraintTop_toTopOf="@id/topLineView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/daeguAreaTextView"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/label_area_daegu"
            android:textColor="@color/default_text_c929292"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@+id/busanAreaTextView"
            app:layout_constraintRight_toLeftOf="@+id/gwangjuAreaTextView"
            app:layout_constraintTop_toBottomOf="@+id/topLineView"/>

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/default_line_cdcdcdd"
            app:layout_constraintBottom_toBottomOf="@+id/bottomLineView"
            app:layout_constraintLeft_toRightOf="@+id/daeguAreaTextView"
            app:layout_constraintRight_toLeftOf="@+id/gwangjuAreaTextView"
            app:layout_constraintTop_toTopOf="@id/topLineView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/gwangjuAreaTextView"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/label_area_gwangju"
            android:textColor="@color/default_text_c929292"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@+id/daeguAreaTextView"
            app:layout_constraintRight_toLeftOf="@+id/daejeonAreaTextView"
            app:layout_constraintTop_toBottomOf="@+id/topLineView"/>

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/default_line_cdcdcdd"
            app:layout_constraintBottom_toBottomOf="@+id/bottomLineView"
            app:layout_constraintLeft_toRightOf="@+id/gwangjuAreaTextView"
            app:layout_constraintRight_toLeftOf="@+id/daejeonAreaTextView"
            app:layout_constraintTop_toTopOf="@id/topLineView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/daejeonAreaTextView"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/label_area_daejeon"
            android:textColor="@color/default_text_c929292"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@+id/gwangjuAreaTextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topLineView"/>

        <View
            android:id="@+id/bottomLineView"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/default_line_cf0f0f0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/capitalAreaTextView"/>

        <com.twoheart.dailyhotel.widget.DailyAnimatedExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:fadingEdge="none"
            android:groupIndicator="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:smoothScrollbar="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottomLineView"/>
    </android.support.constraint.ConstraintLayout>
</layout>