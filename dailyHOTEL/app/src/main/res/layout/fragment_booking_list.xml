<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/toolbar_default"/>

    <com.twoheart.dailyhotel.widget.PinnedSectionListView
        android:id="@+id/listview_booking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="@dimen/menubar_height"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:fadingEdge="none"/>

    <RelativeLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="@dimen/menubar_height"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/messageTextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag_booking_no_hotels"
                android:textColor="@color/default_text_c323232"
                android:textSize="18dp"
                dailyFont:style="Medium"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/messageTextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="@string/frag_booking_line"
                android:textColor="@color/default_text_c929292"
                android:textSize="14dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            app:srcCompat="@drawable/no_event_ic"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/loginView"
            android:layout_width="141dp"
            android:layout_height="38dp"
            android:layout_below="@+id/textLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_button_common_background"
            android:gravity="center"
            android:text="@string/frag_booking_btn_login"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            dailyFont:style="Medium"/>
    </RelativeLayout>
</RelativeLayout>