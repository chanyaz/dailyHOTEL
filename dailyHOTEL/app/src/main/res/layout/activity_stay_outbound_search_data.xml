<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:dailyFont="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_default"/>

        <RelativeLayout
            android:id="@+id/suggestLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:background="@color/white"
            android:paddingTop="4dp">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/suggestTextView"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:background="@color/default_background_cf4f4f6"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="@string/label_search_keyword_hint"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="24dp"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textColorHint="@color/default_text_cc5c5c5"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/search_ic_01_search"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                app:srcCompat="@drawable/navibar_m_ic_v"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/calendarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/suggestLayout"
            android:background="@color/white"
            android:paddingTop="4dp">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/calendarTextView"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:background="@color/default_background_cf4f4f6"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="24dp"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/search_ic_01_date"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                app:srcCompat="@drawable/navibar_m_ic_v"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/peopleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/calendarLayout"
            android:background="@color/white"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/peopleTextView"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:background="@color/default_background_cf4f4f6"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="24dp"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/vector_search_ic_02_people"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                app:srcCompat="@drawable/navibar_m_ic_v"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/peopleLayout"
            android:background="@color/default_line_ce7e7e7"/>

        <RelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/default_line_ce7e7e7"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/doSearchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/shape_fillrect_bb70038_r2"
                android:gravity="center"
                android:text="@string/label_do_search"
                android:textColor="@color/white"
                android:textSize="17dp"
                dailyFont:style="Medium"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>