<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    xmlns:dailyToolbar="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.daily.dailyhotel.view.DailyToolbarView
            android:id="@+id/toolbarView"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            dailyToolbar:underLineHeight="1px"/>

        <FrameLayout
            android:id="@+id/suggestLayout"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_below="@id/toolbarView"
            android:background="@color/white"
            android:paddingTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarView">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/suggestTextView"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/default_background_cf4f4f6"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="@string/label_stay_outbound_search_keyword_hint"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="9dp"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textColorHint="@color/default_text_cc5c5c5"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/search_ic_01_search"
                app:drawableCompatRight="@drawable/navibar_m_ic_v"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/calendarLayout"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="@color/white"
            android:paddingTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/suggestLayout">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/calendarTextView"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/default_background_cf4f4f6"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="9dp"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/search_ic_01_date"
                app:drawableCompatRight="@drawable/navibar_m_ic_v"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/peopleLayout"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarLayout">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/peopleTextView"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/default_background_cf4f4f6"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="9dp"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/vector_search_ic_02_people"
                app:drawableCompatRight="@drawable/navibar_m_ic_v"/>
        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/default_line_ce7e7e7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/peopleLayout"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@drawable/shape_gradient_bottom_up"
            android:elevation="2dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/bottomLayout"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:background="@color/white"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/default_line_ce7e7e7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/doSearchView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:background="@drawable/selector_dialog_button_positive"
                android:gravity="center"
                android:text="@string/label_do_search"
                android:textColor="@drawable/selector_dialog_button_text_positive"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                dailyFont:style="Medium"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>