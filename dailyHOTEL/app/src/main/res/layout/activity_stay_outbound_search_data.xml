<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:dailyFont="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/white">

            <com.daily.base.widget.DailyImageView
                android:id="@+id/backImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:srcCompat="@drawable/navibar_ic_back_01_black"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="72dp"
                android:singleLine="true"
                android:textColor="@color/actionbar_title"
                android:textSize="18dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/default_line_ce7e7e7"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/suggestLayout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@id/toolbar"
            android:background="@color/white"
            android:paddingTop="8dp">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/suggestTextView"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/default_background_cf4f4f6"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="@string/label_stay_outbound_search_keyword_hint"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="9dp"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textColorHint="@color/default_text_cc5c5c5"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/search_ic_01_search"
                app:drawableCompatRight="@drawable/navibar_m_ic_v"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/calendarLayout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@id/suggestLayout"
            android:background="@color/white"
            android:paddingTop="8dp">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/calendarTextView"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/default_background_cf4f4f6"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="9dp"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/search_ic_01_date"
                app:drawableCompatRight="@drawable/navibar_m_ic_v"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/peopleLayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/calendarLayout"
            android:background="@color/white">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/peopleTextView"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/default_background_cf4f4f6"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="9dp"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/vector_search_ic_02_people"
                app:drawableCompatRight="@drawable/navibar_m_ic_v"/>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/gradient_2dp_line_height_over_21"
            android:layout_above="@+id/bottomLayout"
            android:background="@drawable/shape_gradient_bottom_up"
            android:elevation="2dp"/>

        <RelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:elevation="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/default_line_ce7e7e7"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/doSearchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/selector_dialog_button_positive"
                android:gravity="center"
                android:text="@string/label_do_search"
                android:textColor="@drawable/selector_dialog_button_text_positive"
                android:textSize="17dp"
                dailyFont:style="Medium"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>