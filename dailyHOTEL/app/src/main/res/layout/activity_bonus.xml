<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/information_background">

    <include layout="@layout/toolbar_default"/>

    <RelativeLayout
        android:id="@+id/rl_credit_not_logged_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/empty_background_event"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="@drawable/no_event_bg"/>

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/tv_wait_timer_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/act_credit_recom"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/tv_wait_timer_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="@string/act_credit_line1"
                android:textColor="@color/white"
                android:textSize="16dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/textLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:src="@drawable/ic_coin"/>

        <LinearLayout
            android:id="@+id/btn_no_login_signup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="25dp"
            android:background="@drawable/open_stanby_btn_alert"
            android:gravity="center_horizontal">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:gravity="center"
                android:text="@string/act_credit_sign_up"
                android:textColor="@android:color/white"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_no_login_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_above="@id/btn_no_login_signup"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/open_stanby_btn_alert"
            android:gravity="center_horizontal">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:gravity="center"
                android:text="@string/frag_booking_btn_login"
                android:textColor="@android:color/white"
                android:textSize="18dp"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_credit_logged_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/calendar_month_line"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/act_credit_view_credit"
                android:textColor="@color/curation_title_text"
                android:textSize="13dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/curation_information_line"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/curation_information_line"/>

            <FrameLayout
                android:id="@+id/historyLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/curation_title_text"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/act_credit_history"
                    android:textColor="@color/calendar_month_line"
                    android:textSize="10dp"/>
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:minHeight="55dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/act_credit_current_credit"
                android:textColor="@color/curation_title_text"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/tv_credit_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="right|center_vertical"
                android:lineSpacingExtra="-2dp"
                android:textColor="@color/curation_information_text"
                android:textSize="13dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            >

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/calendar_month_line"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/act_credit_recom_code"
                android:textColor="@color/curation_title_text"
                android:textSize="13dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/curation_information_line"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/curation_information_line"/>

            <FrameLayout
                android:id="@+id/recommenderLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/curation_title_text"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/label_copy_recommendar_code"
                    android:textColor="@color/calendar_month_line"
                    android:textSize="10dp"/>
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:minHeight="55dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/act_credit_my_recom_code"
                android:textColor="@color/curation_title_text"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/tv_credit_recommender_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="right|center_vertical"
                android:lineSpacingExtra="-2dp"
                android:textColor="@color/curation_information_text"
                android:textSize="13dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/curation_information_line"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/tv_credit_recommender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:text="@string/act_credit_line4"
            android:textColor="@color/curation_title_text"
            android:textSize="13dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_credit_invite_frd"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/kakaotalk_background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:src="@drawable/ic_detail_share_kakao"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="@string/act_credit_kakao"
                    android:textColor="@color/kakaotalk_textcolkr"
                    android:textSize="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/navibar_gradation"/>
</RelativeLayout>