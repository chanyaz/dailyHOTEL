<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/default_background">

    <RelativeLayout
        android:id="@+id/homeMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/shape_home_message_background">

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:gravity="center"
                android:textColor="@color/default_text_c666666"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/descriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:textColor="@color/default_text_c929292"
                android:textSize="11dp"/>

        </LinearLayout>

        <View
            android:id="@+id/horizontalLine"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_line_cdcdcdd"
            android:layout_below="@id/textLayout"/>

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_below="@id/horizontalLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="22dp"
            android:paddingRight="22dp">

            <RelativeLayout
                android:id="@+id/badEmoticonView"
                android:layout_width="100dp"
                android:layout_height="130dp">

                <com.twoheart.dailyhotel.widget.DailyEmoticonImageView
                    android:id="@+id/badEmoticonImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/badEmoticonTextView"
                    android:layout_width="84dp"
                    android:layout_height="28dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/selector_review_dialog_text_background"
                    android:gravity="center"
                    android:text="@string/message_review_bad"
                    android:textColor="@drawable/selector_review_dialog_text_color"
                    android:textSize="16dp"/>

                <View
                    android:id="@+id/badEmoticonDimView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white_a50"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/goodEmoticonView"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_marginLeft="38dp">

                <com.twoheart.dailyhotel.widget.DailyEmoticonImageView
                    android:id="@+id/goodEmoticonImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/goodEmoticonTextView"
                    android:layout_width="84dp"
                    android:layout_height="28dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/selector_review_dialog_text_background"
                    android:gravity="center"
                    android:text="@string/message_review_good"
                    android:textColor="@drawable/selector_review_dialog_text_color"
                    android:textSize="16dp"/>

                <View
                    android:id="@+id/goodEmoticonDimView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white_a50"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>

        <com.twoheart.dailyhotel.widget.DailyImageView
            android:id="@+id/closeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_delete_grey_small"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/homeMessageLayout"
        android:background="@color/default_line_cf0f0f0"/>

</RelativeLayout>