<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <FrameLayout
        android:id="@+id/mapLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/placeholderMapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/label_google_map"
            android:textColor="@color/booking_subtext"
            android:textSize="20dp"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="false"
            android:layout_marginBottom="10dp"
            android:layout_alignParentEnd="true">

            <RelativeLayout
                android:id="@+id/rl_hotel_upper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/hv_hotel_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5.5dp"
                    android:gravity="center"
                    android:paddingBottom="1px"
                    android:paddingLeft="5.5dp"
                    android:paddingRight="5.5dp"
                    android:paddingTop="2px"
                    android:textColor="@android:color/white"
                    android:textSize="11.5dp"/>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/tv_hotel_tab_map_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/hv_hotel_grade"
                    android:ellipsize="marquee"
                    android:freezesText="true"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/hoteldetail_title_text"
                    android:textSize="18dp"/>
            </RelativeLayout>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/tv_hotel_tab_map_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_hotel_upper"
                android:ellipsize="marquee"
                android:freezesText="true"
                android:textColor="@color/black"
                android:textSize="13dp"
                dailyFont:style="DemiLight"/>
        </RelativeLayout>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/searchMapView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/dh_theme_color"
            android:gravity="center"
            android:text="@string/label_map_searchmap"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>