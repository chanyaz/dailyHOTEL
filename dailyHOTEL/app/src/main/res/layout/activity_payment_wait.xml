<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBaseline="@id/toolbar_actionbar"
        android:layout_alignBottom="@id/toolbar_actionbar"
        android:background="@color/actionbar_underline"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_actionbar"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/tv_payment_wait_hotel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_section_background"
                android:gravity="center"
                android:padding="15dp"
                android:text="데일리 슈퍼 프리미어 호텔"
                android:textColor="@color/textView_textColor_section"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_section_background"
                    android:orientation="horizontal"
                    android:paddingBottom="9dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="20dp">

                    <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/act_wait_payment_payinfo"
                        android:textColor="@color/textView_textColor_section"
                        android:textSize="15dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="15dp"
                    android:paddingTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:orientation="horizontal">

                            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/act_wait_payment_accounts_no"
                                android:textColor="@color/textView_textColor_section"
                                android:textSize="15dp"/>
                        </LinearLayout>

                        <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                            android:id="@+id/tv_payment_wait_account"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:ellipsize="marquee"
                            android:freezesText="true"
                            android:gravity="right|center_vertical"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textColor="@drawable/selector_textview_textcolor"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:orientation="horizontal">

                            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/act_wait_payment_name"
                                android:textColor="@color/textView_textColor_section"
                                android:textSize="15dp"/>
                        </LinearLayout>

                        <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                            android:id="@+id/tv_payment_wait_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:ellipsize="marquee"
                            android:freezesText="true"
                            android:gravity="right|center_vertical"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textColor="@drawable/selector_textview_textcolor"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:orientation="horizontal">

                            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/act_wait_payment_price"
                                android:textColor="@color/textView_textColor_section"
                                android:textSize="15dp"/>
                        </LinearLayout>

                        <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                            android:id="@+id/tv_payment_wait_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:ellipsize="marquee"
                            android:freezesText="true"
                            android:gravity="right|center_vertical"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textColor="@drawable/selector_textview_textcolor"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:orientation="horizontal">

                            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/act_wait_payment_limit"
                                android:textColor="@color/textView_textColor_section"
                                android:textSize="15dp"/>
                        </LinearLayout>

                        <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                            android:id="@+id/tv_payment_wait_deadline"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:ellipsize="marquee"
                            android:freezesText="true"
                            android:gravity="right|center_vertical"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textColor="@drawable/selector_textview_textcolor"
                            android:textSize="15dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_section_background"
                    android:orientation="horizontal"
                    android:paddingBottom="9dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="20dp">

                    <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/act_wait_payment_confirm"
                        android:textColor="@color/textView_textColor_section"
                        android:textSize="15dp"/>
                </LinearLayout>

                <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                    android:id="@+id/tv_payment_wait_guide1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="2dp"
                    android:padding="10dp"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_section_background"
                    android:orientation="horizontal"
                    android:paddingBottom="9dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="20dp">

                    <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/act_wait_payment_msg1"
                        android:textColor="@color/textView_textColor_section"
                        android:textSize="15dp"/>
                </LinearLayout>

                <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                    android:id="@+id/tv_payment_wait_guide2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:textSize="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>