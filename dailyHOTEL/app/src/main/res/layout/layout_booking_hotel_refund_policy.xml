<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_line_cf0f0f0"/>

    <com.daily.base.widget.DailyTextView
        android:id="@+id/refundPolicyTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/default_background"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="25dp"
        android:text="@string/label_booking_step4"
        android:textColor="@color/default_text_c4d4d4d"
        android:textSize="14dp"
        dailyFont:style="Medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/default_line_cf0f0f0"/>

    <LinearLayout
        android:id="@+id/refundPolicyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.daily.base.widget.DailyTextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/label_booking_refund_policy"
            android:textColor="@color/default_text_c666666"
            android:textSize="13dp"
            dailyFont:style="Medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/info_ic_text_dot_black"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/refundPolicyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:freezesText="true"
                android:lineSpacingExtra="-2dp"
                android:textColor="@color/default_text_c4d4d4d"
                android:textSize="13dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="9dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/info_ic_text_dot_black"/>

        <com.daily.base.widget.DailyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:freezesText="true"
            android:lineSpacingExtra="-2dp"
            android:text="@string/message_booking_click_process_payment"
            android:textColor="@color/default_text_c4d4d4d"
            android:textSize="13dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="19dp"
        android:background="@color/default_line_cdcdcdd"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="10dp">

        <com.daily.base.widget.DailyCheckBox
            android:id="@+id/agreePersonalInformationCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:theme="@style/CheckBoxTheme"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/agreePersonalInformationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/agreePersonalInformationCheckBox"
            android:text="@string/message_payment_agree_personal_information"
            android:textColor="@color/default_text_c666666"
            android:textSize="13dp"
            dailyFont:style="Medium"/>

        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_region_ic_sub_v"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/thirdPartyTermsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingEnd="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <com.daily.base.widget.DailyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_payment_agree_personal_information00"
            android:textColor="@color/default_text_c4a4a4a"
            android:textSize="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/default_line_c979797"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/default_line_c979797"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:background="@color/default_background"
                android:gravity="center"
                android:text="@string/label_payment_agree_personal_information02"
                android:textColor="@color/default_text_c666666"
                android:textSize="11dp"
                dailyFont:style="Medium"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/default_line_c979797"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/vendorNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:textColor="@color/default_text_ceb2135"
                android:textSize="11dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/default_line_c979797"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_line_c979797"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/default_line_c979797"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:background="@color/default_background"
                android:gravity="center"
                android:text="@string/label_payment_agree_personal_information03"
                android:textColor="@color/default_text_c666666"
                android:textSize="11dp"
                dailyFont:style="Medium"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/default_line_c979797"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="@string/message_payment_agree_personal_information03"
                android:textColor="@color/default_text_c929292"
                android:textSize="11dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/default_line_c979797"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_line_c979797"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/default_line_c979797"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:background="@color/default_background"
                android:gravity="center"
                android:text="@string/label_payment_agree_personal_information04"
                android:textColor="@color/default_text_c666666"
                android:textSize="11dp"
                dailyFont:style="Medium"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/default_line_c979797"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="@string/message_payment_agree_personal_information04"
                android:textColor="@color/default_text_c929292"
                android:textSize="11dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/default_line_c979797"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_line_c979797"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/default_line_c979797"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:background="@color/default_background"
                android:gravity="center"
                android:text="@string/label_payment_agree_personal_information05"
                android:textColor="@color/default_text_c666666"
                android:textSize="11dp"
                dailyFont:style="Medium"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/default_line_c979797"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:minHeight="42dp"
                android:padding="6dp"
                android:text="@string/message_payment_agree_personal_information05"
                android:textColor="@color/default_text_c929292"
                android:textSize="11dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/default_line_c979797"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_line_c979797"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_payment_notice"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:freezesText="true"
                android:lineSpacingExtra="-2dp"
                android:text="@string/message_payment_agree_personal_information06"
                android:textColor="@color/default_text_c929292"
                android:textSize="11dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>