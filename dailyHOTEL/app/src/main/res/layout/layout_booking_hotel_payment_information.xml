<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <!-- 결제 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/calendar_month_line"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/act_booking_payment"
            android:textColor="@color/curation_title_text"
            android:textSize="13dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/curation_information_line"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/curation_information_line"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/act_booking_credit_use"
                android:textColor="@color/curation_information_text"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.view.widget.DailySwitchCompat
                android:id="@+id/btn_on_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="-3dp"
                android:background="@null"
                android:checked="false"
                android:gravity="center"
                android:paddingRight="0dp"
                android:textOff=""
                android:textOn=""/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/priceLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:text="@string/act_booking_price"
                android:textColor="@drawable/selector_textview_bookingcolor"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/tv_hotel_payment_original_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:duplicateParentState="true"
                android:text="@string/act_booking_0won"
                android:textColor="@drawable/selector_textview_bookingcolor"
                android:textSize="13dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bonusLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:text="@string/act_booking_credit_discount"
                android:textColor="@drawable/selector_textview_bookingcolor"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/tv_hotel_payment_credit_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:duplicateParentState="true"
                android:text="@string/act_booking_0won"
                android:textColor="@drawable/selector_textview_bookingcolor"
                android:textSize="13dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/curation_information_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/act_booking_price_real"
                android:textColor="@color/curation_information_text"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/tv_hotel_payment_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:text="@string/act_booking_0won"
                android:textColor="@color/curation_information_text"
                android:textSize="13dp"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/curation_information_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <!-- 카드 관리 버튼 -->

        <RelativeLayout
            android:id="@+id/cardManagerButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:paddingLeft="15dp"
            android:visibility="invisible">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:layout_width="28dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="false"
                android:layout_gravity="center_vertical|right"
                android:background="@color/dh_theme_color"
                android:gravity="center"
                android:text="@string/label_manager"
                android:textColor="@color/white"
                android:textSize="10dp"/>
        </RelativeLayout>

        <!-- 결제 종류 선택 -->

        <RadioGroup
            android:id="@+id/rg_payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/cardManagerButton"
            android:orientation="vertical">

            <com.twoheart.dailyhotel.view.widget.DailyRadioButton
                android:id="@+id/easyPaymentRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:button="@drawable/abc_btn_radio_material"
                android:buttonTint="@color/actionbar_hamburger"
                android:text="@string/label_booking_easypayment"
                android:textColor="@color/curation_information_text"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/tv_card_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-12dp"
                android:text="@string/label_booking_corporate_card"
                android:textColor="@color/curation_title_text"
                android:textSize="12dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyRadioButton
                android:id="@+id/rb_payment_card"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:button="@drawable/abc_btn_radio_material"
                android:buttonTint="@color/actionbar_hamburger"
                android:text="@string/act_booking_pay_card"
                android:textColor="@color/curation_information_text"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyRadioButton
                android:id="@+id/rb_payment_hp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:button="@drawable/abc_btn_radio_material"
                android:buttonTint="@color/actionbar_hamburger"
                android:text="@string/act_booking_pay_mobile"
                android:textColor="@color/curation_information_text"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyRadioButton
                android:id="@+id/rb_payment_account"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:button="@drawable/abc_btn_radio_material"
                android:buttonTint="@color/actionbar_hamburger"
                android:paddingRight="15dp"
                android:text="@string/act_booking_pay_account"
                android:textColor="@color/curation_information_text"
                android:textSize="13dp"/>
        </RadioGroup>
    </RelativeLayout>
</LinearLayout>