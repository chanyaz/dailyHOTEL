<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <include layout="@layout/toolbar_default"/>

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/couponTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:text="@string/register_coupon_title"
        android:textColor="@color/dh_theme_color"
        android:textSize="12dp"/>

    <com.twoheart.dailyhotel.widget.DailyEditText
        android:id="@+id/couponEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/couponTitleView"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_edittext_background"
        android:hint="@string/register_coupon_edittext_hint"
        android:inputType="text"
        android:maxLength="50"
        android:singleLine="true"
        android:textColor="@color/default_text_c323232"
        android:textColorHint="@color/search_hint_text"
        android:textSize="16dp"
        android:theme="@style/EditTextTheme"/>

    <ImageView
        android:id="@+id/deleteView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/couponEditText"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:padding="2dp"
        app:srcCompat="@drawable/search_ic_01_delete"/>

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/registerCouponCompleteView"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/couponEditText"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_button_default_background"
        android:gravity="center"
        android:text="@string/register_coupon_complete"
        android:textColor="@drawable/selector_button_default_text_color"
        android:textSize="17dp"
        dailyFont:style="Medium"/>

</RelativeLayout>