<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <com.twoheart.dailyhotel.view.LoopViewPager
        android:id="@+id/loopViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.twoheart.dailyhotel.view.widget.DailyViewPagerCircleIndicator
        android:id="@+id/viewpagerCircleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loopViewPager"
        android:layout_alignBottom="@+id/loopViewPager"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>