<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <include layout="@layout/toolbar_default"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout"
        android:layout_below="@+id/toolbar"
        android:fadingEdge="none">

        <RelativeLayout
            android:id="@+id/receiptLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="8dp">

            <!-- 예약 세부정보 -->

            <RelativeLayout
                android:id="@+id/bookingInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/receipt_bg_top"
                android:minWidth="165dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/label_receipt_bookinginfo"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="13dp"
                    dailyFont:style="Bold"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView1"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_reservation_index"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView1"
                    android:layout_marginLeft="69dp"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:gravity="right"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="11dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView12"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_hotelname"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView12"
                    android:layout_marginLeft="69dp"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:layout_toRightOf="@id/textView2"
                    android:gravity="right"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="11dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_hoteladdress"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginLeft="58dp"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:layout_toRightOf="@id/textView4"
                    android:gravity="right"
                    android:maxLines="2"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="11dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView5"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_customerinfo"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView5"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="11dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView6"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_checkinout"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView6"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="11dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView8"
                    android:layout_marginBottom="@dimen/issuingreceipt_linespacing"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_nights_rooms"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView8"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="11dp"/>
            </RelativeLayout>

            <!-- 결제 정보 -->

            <LinearLayout
                android:id="@+id/paymentInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookingInfoLayout"
                android:background="@drawable/receipt_bg_middle"
                android:orientation="vertical">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/label_receipt_paymentinfo"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="13dp"
                    dailyFont:style="Bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing">

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:gravity="center_vertical"
                        android:text="@string/label_receipt_paymentday"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="10dp"/>

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="11dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/paymentTypeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing">

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:gravity="center_vertical"
                        android:text="@string/label_receipt_paymenttype"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="10dp"/>

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/textView33"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="11dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing">

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:gravity="center_vertical"
                        android:text="@string/label_receipt_supplyvalue"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="10dp"/>

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="11dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing">

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:gravity="center_vertical"
                        android:text="@string/label_receipt_vat"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="10dp"/>

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="11dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/saleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/issuingreceipt_linespacing">

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:id="@+id/textView28"
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:gravity="center_vertical"
                            android:text="@string/label_receipt_discount"
                            android:textColor="@color/default_text_c929292"
                            android:textSize="10dp"/>

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:id="@+id/textView29"
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/default_text_c323232"
                            android:textSize="11dp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                        android:background="@color/default_line_ce6e6e6"/>

                    <RelativeLayout
                        android:id="@+id/bonusLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/issuingreceipt_linespacing">

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:gravity="center_vertical"
                            android:text="@string/label_receipt_bonus"
                            android:textColor="@color/default_text_c929292"
                            android:textSize="10dp"/>

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:id="@+id/bonusTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/default_text_c323232"
                            android:textSize="11dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/couponLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/issuingreceipt_linespacing">

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:gravity="center_vertical"
                            android:text="@string/label_receipt_coupon"
                            android:textColor="@color/default_text_c929292"
                            android:textSize="10dp"/>

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:id="@+id/couponTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/default_text_c323232"
                            android:textSize="11dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="@dimen/issuingreceipt_linespacing"
                    android:background="@color/default_background_cfafafb"
                    android:gravity="center_vertical"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp">

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:gravity="center_vertical"
                        android:text="@string/label_receipt_total_payment"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="12dp"
                        dailyFont:style="Medium"/>

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/totalPaymentTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/default_text_cb70038"
                        android:textSize="11dp"
                        dailyFont:style="Bold"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- 공급자 -->

            <RelativeLayout
                android:id="@+id/providerInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/paymentInfoLayout"
                android:background="@drawable/receipt_bg_bottom"
                android:paddingBottom="15dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/tile_receipt_bottom_underline"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="21dp"
                    android:text="@string/label_receipt_provider"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="13dp"
                    dailyFont:style="Bold"/>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/receipt_logo"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_below="@id/imageView1"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_below="@id/imageView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/imageView1"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_below="@id/textView42"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView47"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="false"
                    android:layout_below="@+id/textView46"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView46"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="10dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/textView49"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView48"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/default_text_cb70038"
                    android:textSize="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_line_ce7e7e7"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/sendEmailView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/shape_fillrect_bb70038_r2"
            android:gravity="center"
            android:text="@string/label_send_email"
            android:textColor="@color/white"
            android:textSize="17dp"
            dailyFont:style="Medium"/>
    </RelativeLayout>
</RelativeLayout>