<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <merge
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:parentTag="android.support.constraint.ConstraintLayout">

        <!--<android.support.constraint.ConstraintLayout-->
        <!--android:id="@+id/stayOutboundLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:background="@drawable/search_box_bottom"-->
        <!--android:paddingBottom="15dp"-->
        <!--android:paddingLeft="27dp"-->
        <!--android:paddingRight="27dp"-->
        <!--android:paddingTop="14dp"-->
        <!--android:visibility="gone">-->

        <View
            android:id="@+id/suggestBackgroundView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_fillrect_bf8f8f9_r2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/suggestTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="7dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/label_search_stayoutbound_suggest_hint"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/default_text_c323232"
            android:textColorHint="@color/default_text_c929292"
            android:textSize="13dp"
            app:drawableCompatLeft="@drawable/search_ic_01_search"
            app:layout_constraintBottom_toBottomOf="@+id/suggestBackgroundView"
            app:layout_constraintLeft_toLeftOf="@+id/suggestBackgroundView"
            app:layout_constraintRight_toRightOf="@+id/suggestBackgroundView"
            app:layout_constraintTop_toTopOf="@+id/suggestBackgroundView"/>

        <View
            android:id="@+id/calendarBackgroundView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_fillrect_bf8f8f9_r2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/suggestBackgroundView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/calendarTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="7dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/default_text_c323232"
            android:textSize="13dp"
            app:drawableCompatLeft="@drawable/search_ic_01_date"
            app:layout_constraintBottom_toBottomOf="@+id/calendarBackgroundView"
            app:layout_constraintLeft_toLeftOf="@+id/calendarBackgroundView"
            app:layout_constraintRight_toRightOf="@+id/calendarBackgroundView"
            app:layout_constraintTop_toTopOf="@+id/calendarBackgroundView"/>

        <View
            android:id="@+id/peopleBackgroundView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_fillrect_bf8f8f9_r2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarBackgroundView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/peopleTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="7dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/default_text_c323232"
            android:textSize="13dp"
            app:drawableCompatLeft="@drawable/vector_search_ic_02_people"
            app:layout_constraintBottom_toBottomOf="@+id/peopleBackgroundView"
            app:layout_constraintLeft_toLeftOf="@+id/peopleBackgroundView"
            app:layout_constraintRight_toRightOf="@+id/peopleBackgroundView"
            app:layout_constraintTop_toTopOf="@+id/peopleBackgroundView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/searchTextView"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_button_default_background"
            android:gravity="center"
            android:text="@string/label_search_do_search"
            android:textColor="@drawable/selector_button_default_text_color"
            android:textSize="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/peopleBackgroundView"/>
        <!--</android.support.constraint.ConstraintLayout>-->
    </merge>
</layout>