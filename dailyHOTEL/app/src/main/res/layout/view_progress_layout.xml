<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="11dp">

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/titleTextView"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="청결"
        android:textColor="@color/default_background_section_c323232"
        android:textSize="12dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/valueTextView"
        android:layout_toRightOf="@+id/titleTextView"
        android:max="50"
        android:progressDrawable="@drawable/layerlist_progressbar"/>

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/valueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/slashTextView"
        android:text="0.0"
        android:textColor="@color/default_text_cbe945b"
        android:textSize="12dp"/>

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/slashTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toLeftOf="@+id/totalTextView"
        android:text="/"
        android:textColor="@color/default_text_cc5c5c5"
        android:textSize="9dp"/>

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/totalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:text="5"
        android:textColor="@color/default_text_cc5c5c5"
        android:textSize="11dp"/>
</RelativeLayout>