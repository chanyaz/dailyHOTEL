<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <include layout="@layout/toolbar_default"/>

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/emailView"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:text="@string/label_email"
        android:textColor="@drawable/selector_label_textcolor"
        android:textSize="12dp"/>

    <com.twoheart.dailyhotel.widget.DailyEditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector_edittext_background"
        android:hint="@string/label_necessary"
        android:inputType="textEmailAddress"
        android:maxLength="50"
        android:singleLine="true"
        android:textColor="@color/curation_information_text"
        android:textColorHint="@color/search_hint_text"
        android:textSize="16dp"
        android:theme="@style/EditTextTheme"
        android:layout_below="@+id/emailView"/>

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/passwordView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/label_password_4over"
        android:textColor="@drawable/selector_label_textcolor"
        android:textSize="12dp"
        android:layout_below="@+id/emailEditText"/>

    <com.twoheart.dailyhotel.widget.DailyEditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector_edittext_background"
        android:hint="@string/label_necessary"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1"
        android:nextFocusDown="@+id/confirmPasswordEditText"
        android:singleLine="true"
        android:textColor="@color/curation_information_text"
        android:textColorHint="@color/search_hint_text"
        android:textSize="16dp"
        android:theme="@style/EditTextTheme"
        android:layout_below="@+id/passwordView"/>

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/signinView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_button_common_background"
        android:gravity="center"
        android:text="@string/act_login_btn_login"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        android:layout_below="@+id/passwordEditText"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/signinView">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/findPasswordView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="30dp"
            android:text="@string/act_login_forgot_pwd"
            android:textColor="@color/information_title"
            android:textSize="12dp"
            android:paddingLeft="15dp"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/signupView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/findPasswordView"
            android:paddingBottom="10dp"
            android:paddingTop="30dp"
            android:text="@string/act_login_signup"
            android:textColor="@color/information_title"
            android:textSize="12dp"
            android:paddingRight="30dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/facebookLoginView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/kakaoLoginView"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_button_facebooklogin_background"
        android:gravity="center">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:scaleType="fitEnd"
            android:src="@drawable/facebook_icon"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.7"
            android:gravity="left|center_vertical"
            android:text="@string/act_login_facebook"
            android:textColor="@color/white"
            android:textSize="17dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kakaoLoginView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/shape_button_kakaologin_background"
        android:gravity="center">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.3"
            android:scaleType="fitEnd"
            android:src="@drawable/kakao_login_symbol"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.7"
            android:gravity="left|center_vertical"
            android:text="@string/act_login_kakao"
            android:textColor="@color/com_kakao_brown"
            android:textSize="17dp"/>

    </LinearLayout>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebookLoginButton"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"/>

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/kakaoLoginButton"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/navibar_gradation"/>
</RelativeLayout>