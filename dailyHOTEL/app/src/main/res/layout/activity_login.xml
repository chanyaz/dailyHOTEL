<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBaseline="@id/toolbar_actionbar"
        android:layout_alignBottom="@id/toolbar_actionbar"
        android:background="@color/actionbar_underline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_actionbar"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <com.twoheart.dailyhotel.view.widget.DailyCustomFontEditText
            android:id="@+id/et_login_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="@string/act_login_email"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@color/textView_textColor_disabled">

            <requestFocus/>
        </com.twoheart.dailyhotel.view.widget.DailyCustomFontEditText>

        <com.twoheart.dailyhotel.view.widget.DailyCustomFontEditText
            android:id="@+id/et_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/act_login_pwd"
            android:imeActionId="@+id/btn_login"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@color/textView_textColor_disabled"/>

        <com.twoheart.dailyhotel.view.widget.DailyCustomFontSwitchCompat
            android:id="@+id/cb_login_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingRight="4dp"
            android:paddingTop="10dp"
            android:text="@string/act_login_autologin"
            android:textColor="@color/textView_textColor_main"
            android:textOff=""
            android:textOn=""/>

        <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_button_common_background"
            android:gravity="center"
            android:text="@string/act_login_btn_login"
            android:textColor="@android:color/white"
            android:textSize="17dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/tv_login_forgot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/act_login_forgot_pwd"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="12dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="|"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="14.5dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/tv_login_signup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/act_login_signup"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="12dp"/>
        </LinearLayout>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebookLoginButton"
            xmlns:facebook="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textSize="17dp"
            facebook:com_facebook_login_text="@string/act_login_facebook"/>

        <LinearLayout
            android:id="@+id/kakaoLoginView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/kakao_login_button_background">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/kakao_login_symbol"/>

            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/kakao_login_bar"/>

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/com_kakao_login_button"
                android:textColor="@color/com_kakao_brown"
                android:textSize="17dp"/>

        </LinearLayout>

        <com.kakao.usermgmt.LoginButton
            android:id="@+id/kakaoLoginButton"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="invisible"
            />
    </LinearLayout>

</RelativeLayout>