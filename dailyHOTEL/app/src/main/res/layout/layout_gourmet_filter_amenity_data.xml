<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/amenityFlexboxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:paddingBottom="20dp"
        app:flexDirection="row"
        app:flexWrap="wrap">

        <com.daily.base.widget.DailyTextView
            android:id="@+id/parkingCheckView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_rect_ce8e8e9_ceb2135_r3"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/label_parking"
            android:textColor="@drawable/selector_text_color_c929292_ceb2135"
            android:textSize="14dp"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/valetCheckView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_rect_ce8e8e9_ceb2135_r3"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/label_valet_available"
            android:textColor="@drawable/selector_text_color_c929292_ceb2135"
            android:textSize="14dp"/>


        <com.daily.base.widget.DailyTextView
            android:id="@+id/privateRoomCheckView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_rect_ce8e8e9_ceb2135_r3"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/label_private_room"
            android:textColor="@drawable/selector_text_color_c929292_ceb2135"
            android:textSize="14dp"/>


        <com.daily.base.widget.DailyTextView
            android:id="@+id/groupBookingCheckView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_rect_ce8e8e9_ceb2135_r3"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/label_group_booking"
            android:textColor="@drawable/selector_text_color_c929292_ceb2135"
            android:textSize="14dp"/>


        <com.daily.base.widget.DailyTextView
            android:id="@+id/babySeatCheckView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_rect_ce8e8e9_ceb2135_r3"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/label_baby_seat"
            android:textColor="@drawable/selector_text_color_c929292_ceb2135"
            android:textSize="14dp"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/corkageCheckView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_rect_ce8e8e9_ceb2135_r3"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/label_corkage"
            android:textColor="@drawable/selector_text_color_c929292_ceb2135"
            android:textSize="14dp"/>
    </com.google.android.flexbox.FlexboxLayout>
</layout>