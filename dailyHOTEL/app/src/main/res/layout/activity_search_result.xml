<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white">

        <com.daily.base.widget.DailyImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:srcCompat="@drawable/navibar_ic_back_01_black"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/searchCancelView"
            android:layout_toRightOf="@+id/backImageView"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="검색 결과 타이틀"
            android:textColor="@color/default_text_c323232"
            android:textSize="18dp"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/searchCancelView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="@string/label_searchresult_cancelsearch"
            android:textColor="@color/dh_theme_color"
            android:textSize="15dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/calendarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/default_line_ce7e7e7"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_margin="8dp"
            android:background="@color/default_background_cf4f4f6">

            <ImageView
                android:id="@+id/calendarImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                app:srcCompat="@drawable/search_ic_01_date"/>

            <ImageView
                android:id="@+id/calendarDownArrowView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="9dp"
                app:srcCompat="@drawable/navibar_m_ic_v"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/calendarTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toLeftOf="@id/calendarDownArrowView"
                android:layout_toRightOf="@id/calendarImageView"
                android:gravity="center_vertical"
                android:paddingRight="8dp"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"/>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/calendarUnderLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/calendarLayout"
        android:background="@color/default_line_ce7e7e7"/>

    <RelativeLayout
        android:id="@+id/categoryLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/calendarUnderLine"
        android:background="@drawable/layerlist_fillrect_ule7e7e7_bffffff"
        android:visibility="gone">

        <android.support.design.widget.TabLayout
            android:id="@+id/categoryTabLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/distanceSpinner"
            android:layout_marginLeft="8dp"
            app:tabIndicatorHeight="2dp"
            app:tabMinWidth="0dp"
            app:tabMode="scrollable"
            app:tabPadding="0dp"
            app:tabSelectedTextColor="@color/default_text_cb70038"
            app:tabTextAppearance="@style/CategoryTabLayoutTextAppearance"
            app:tabTextColor="@color/default_text_c929292"/>

        <Spinner
            android:id="@+id/distanceSpinner"
            android:layout_width="68dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_coupon_sorting_button_backround"
            android:dropDownWidth="73dp"
            android:spinnerMode="dropdown"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/calendarLayout"
        android:fillViewport="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/emptyIconImageView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:minHeight="110dp"
                android:scaleType="fitEnd"/>

            <LinearLayout
                android:id="@+id/textLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/messageTextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_searchresult_empty"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="18dp"
                    dailyFont:style="Medium"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/messageTextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:text="@string/label_searchresult_text01"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="14dp"/>
            </LinearLayout>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/changeDateView"
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_button_common_background"
                android:gravity="center"
                android:text="@string/label_searchresult_change_date"
                android:textColor="@color/white"
                android:textSize="14dp"
                dailyFont:style="Medium"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/researchView"
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button_common_background"
                android:gravity="center"
                android:text="@string/label_searchresult_research"
                android:textColor="@color/white"
                android:textSize="14dp"
                dailyFont:style="Medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:minHeight="60dp"
                android:orientation="vertical">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/callUnderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/label_searchresult_text02"
                    android:textColor="@color/default_text_cc5c5c5"
                    android:textSize="12dp"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/callTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center_horizontal"
                    android:paddingBottom="15dp"
                    android:text="@string/label_searchresult_call_customercenter"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/categoryLayout"
        android:visibility="gone">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/bottomOptionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/viewTypeOptionImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/fab_01_map"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/filterOptionImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_floatingactionview"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>