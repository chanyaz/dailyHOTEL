<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/navibar_ic_back_01_black"/>

        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/searchCancelView"
            android:layout_toRightOf="@+id/backImageView"
            android:orientation="vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/search_text"
                android:textSize="15dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/dateView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/search_autocomplete_pricetext"
                android:textSize="11dp"/>
        </LinearLayout>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/searchCancelView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="@string/label_searchresult_cancelsearch"
            android:textColor="@color/dh_theme_color"
            android:textSize="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/default_line_ce7e7e7"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/calendarTextView"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_margin="8dp"
            android:background="@color/default_background_cf4f4f6"
            android:drawableLeft="@drawable/search_ic_01_date"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="8dp"
            android:textColor="@color/default_text_c323232"
            android:textSize="13dp"/>

        <View
            android:id="@+id/dateUnderLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/default_line_ce7e7e7"/>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/categoryTabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/dateLayout"
        android:background="@drawable/layerlist_fillrect_ule7e7e7_bffffff"
        android:visibility="visible"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabPadding="0dp"
        app:tabPaddingEnd="12dp"
        app:tabPaddingStart="12dp"
        app:tabSelectedTextColor="@color/default_text_c900034"
        app:tabTextAppearance="@style/CategoryTabLayoutTextAppearance"
        app:tabTextColor="@color/default_text_c929292"
        />

    <RelativeLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/emptyIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/textLayout"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/messageTextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_searchresult_empty"
                android:textColor="@color/default_text_c323232"
                android:textSize="18dp"
                dailyFont:style="Medium"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/messageTextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="@string/label_searchresult_text01"
                android:textColor="@color/default_text_c929292"
                android:textSize="14dp"/>
        </LinearLayout>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/researchView"
            android:layout_width="125dp"
            android:layout_height="38dp"
            android:layout_below="@+id/textLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_button_common_background"
            android:gravity="center"
            android:text="@string/label_searchresult_research"
            android:textColor="@color/white"
            android:textSize="14dp"
            dailyFont:style="Medium"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/callUnderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/callTextView"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:text="@string/label_searchresult_text02"
            android:textColor="@color/default_text_cc5c5c5"
            android:textSize="12dp"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/callTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1dp"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:text="@string/label_searchresult_call_customercenter"
            android:textColor="@color/default_text_c323232"
            android:textSize="12dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/categoryTabLayout"
        android:visibility="visible">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/resultCountView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/default_background_section_c323232"
            android:gravity="center_vertical"
            android:paddingLeft="11dp"
            android:text="결과N건"
            android:textColor="@android:color/white"
            android:textSize="12dp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultCountView"/>

        <LinearLayout
            android:id="@+id/bottomOptionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="59dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/viewTypeOptionImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:background="@drawable/fab_01_map"/>

            <ImageView
                android:id="@+id/filterOptionImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/selector_floatingactionview"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>