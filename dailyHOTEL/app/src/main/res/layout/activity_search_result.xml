<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white">

        <com.daily.base.widget.DailyImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/navibar_ic_back_01_black"/>

        <View
            android:id="@+id/titleBackgroundView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:background="@color/default_background_cf7f7f8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/backImageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/titleIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/titleBackgroundView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/search_ic_01_search"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/titleView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/default_text_c323232"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/calendarTextView"
            app:layout_constraintLeft_toRightOf="@+id/titleIconImageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/calendarTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/default_text_c929292"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/titleIconImageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleView"/>

        <View
            android:id="@+id/verticalLineView"
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_marginRight="11dp"
            android:background="@color/default_line_cd2d2d2"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/titleBackgroundView"
            app:layout_constraintRight_toLeftOf="@+id/distanceSpinner"
            app:layout_constraintTop_toTopOf="@+id/titleBackgroundView"/>

        <Spinner
            android:id="@+id/distanceSpinner"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/default_background_cf4f4f6"
            android:dropDownWidth="66dp"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/titleBackgroundView"
            app:layout_constraintRight_toRightOf="@+id/titleBackgroundView"
            app:layout_constraintTop_toTopOf="@+id/titleBackgroundView"/>
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/categoryLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/layerlist_fillrect_ule7e7e7_bffffff"
        android:visibility="gone">

        <android.support.design.widget.TabLayout
            android:id="@+id/categoryTabLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            app:tabIndicatorHeight="2dp"
            app:tabMinWidth="0dp"
            app:tabMode="scrollable"
            app:tabPadding="0dp"
            app:tabSelectedTextColor="@color/default_text_cb70038"
            app:tabTextAppearance="@style/CategoryTabLayoutTextAppearance"
            app:tabTextColor="@color/default_text_c929292"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/searchLocationLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/calendarAndDistanceLayout"
        android:background="@color/default_background"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressBarTextView"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:indeterminateOnly="true"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/progressBarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="12dp"
            android:text="@string/label_searching_around_location"
            android:textColor="@color/default_text_cb4b4b4"
            android:textSize="12dp"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/calendarAndDistanceLayout"
        android:fillViewport="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/emptyIconImageView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:minHeight="110dp"
                android:scaleType="fitEnd"/>

            <LinearLayout
                android:id="@+id/textLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/messageTextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_searchresult_empty"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="18dp"
                    dailyFont:style="Medium"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/messageTextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:text="@string/label_searchresult_text01"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="14dp"/>
            </LinearLayout>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/changeDateView"
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_button_common_background"
                android:gravity="center"
                android:text="@string/label_searchresult_change_date"
                android:textColor="@color/white"
                android:textSize="14dp"
                dailyFont:style="Medium"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/researchView"
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button_common_background"
                android:gravity="center"
                android:text="@string/label_searchresult_research"
                android:textColor="@color/white"
                android:textSize="14dp"
                dailyFont:style="Medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:minHeight="60dp"
                android:orientation="vertical">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/callUnderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/label_searchresult_text02"
                    android:textColor="@color/default_text_cc5c5c5"
                    android:textSize="12dp"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/callTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center_horizontal"
                    android:paddingBottom="15dp"
                    android:text="@string/label_searchresult_call_customercenter"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/categoryLayout"
        android:visibility="gone">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.daily.dailyhotel.view.DailyFloatingActionView
            android:id="@+id/floatingActionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"/>
    </RelativeLayout>
</RelativeLayout>