<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/information_background">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/navibar_ic_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/searchCancelView"
            android:layout_toRightOf="@+id/backImageView"
            android:orientation="vertical">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/search_text"
                android:textSize="15dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/dateView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/search_autocomplete_pricetext"
                android:textSize="11dp"/>
        </LinearLayout>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/searchCancelView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="@string/label_searchresult_cancelsearch"
            android:textColor="@color/dh_theme_color"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_search_ic"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/textLayout"
            android:layout_marginBottom="35dp"/>

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:paddingBottom="40dp">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/searcyEmptyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="true"
                android:text="@string/label_searchresult_empty"
                android:textColor="@color/search_hint_text"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/researchUnderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/callView"
                android:layout_alignParentRight="true"
                android:layout_marginTop="18dp"
                android:gravity="center_horizontal"
                android:text="@string/label_searchresult_text01"
                android:textColor="@color/search_hint_text"
                android:textSize="16dp"/>
        </LinearLayout>



        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/researchView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_button_common_background"
            android:gravity="center"
            android:text="@string/label_searchresult_research"
            android:textColor="@android:color/white"
            android:textSize="17dp"
            android:visibility="visible"
            android:layout_alignParentBottom="false"
            android:layout_above="@+id/callUnderTextView"/>


        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/callUnderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:text="@string/label_searchresult_text02"
            android:textColor="@color/search_hint_text"
            android:textSize="12dp"
            android:layout_above="@+id/callTextView"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/callTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_searchresult_call_customercenter"
            android:textColor="@color/information_title"
            android:textSize="12dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:paddingBottom="25dp"
            android:layout_marginTop="1dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/resultListLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:visibility="gone">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/resultCountView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="11dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            dailyFont:style="DemiLight"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultCountView"
            android:divider="@null"
            android:scrollbars="vertical"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/navibar_gradation"/>
</RelativeLayout>