<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/popup_bg_white_full"
              android:orientation="vertical"
              android:paddingTop="24dp">

    <com.daily.base.widget.DailyTextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:text="@string/label_map_searchmap"
        android:textColor="@color/default_text_c4d4d4d"
        android:textSize="17dp"
        dailyFont:style="Medium"/>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:stretchMode="columnWidth"
        app:columnCount="3">

        <com.daily.base.widget.DailyTextView
            android:id="@+id/kakaoMapLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_kakao_map"
            android:gravity="center"
            android:text="@string/label_share_daum_map"
            android:textColor="@color/default_text_c4d4d4d"
            android:textSize="11dp"
            android:visibility="visible"
            app:layout_columnWeight="1"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/naverMapLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_naver"
            android:gravity="center"
            android:text="@string/label_share_naver_map"
            android:textColor="@color/default_text_c4d4d4d"
            android:textSize="11dp"
            android:visibility="visible"
            app:layout_columnWeight="1"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/googleMapLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_google"
            android:gravity="center"
            android:text="@string/label_share_google_map"
            android:textColor="@color/default_text_c4d4d4d"
            android:textSize="11dp"
            app:layout_columnWeight="1"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/tmapNaviLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_tmap_red"
            android:gravity="center"
            android:text="@string/label_share_tmap_navi"
            android:textColor="@color/default_text_c4d4d4d"
            android:textSize="11dp"
            app:layout_columnWeight="1"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/kakaoNaviLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_kakao_navi"
            android:gravity="center"
            android:text="@string/label_share_kakao_navi"
            android:textColor="@color/default_text_c4d4d4d"
            android:textSize="11dp"
            app:layout_columnWeight="1"/>
    </android.support.v7.widget.GridLayout>
</LinearLayout>