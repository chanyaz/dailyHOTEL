<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/toolbar_default_menu"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/layerlist_fillrect_ule7e7e7_bffffff"
        app:tabGravity="fill"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/default_text_c900034"
        app:tabTextAppearance="@style/PlaceTabLayoutTextAppearance"
        app:tabTextColor="@color/default_text_c929292"
        android:layout_below="@+id/toolbar"/>

    <com.twoheart.dailyhotel.widget.DailyViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabLayout"/>
</RelativeLayout>