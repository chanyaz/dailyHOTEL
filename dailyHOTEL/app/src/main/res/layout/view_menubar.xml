<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/bottomMenuBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menubar_height"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_line_ce7e7e7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/hotelLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/hotelImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/tapbar_ic_01_hotel"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/hotelView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/hotelImageView"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"
                    android:text="@string/menu_item_title_hotel"
                    android:textColor="@drawable/selector_menu_textcolor"
                    android:textSize="9dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bookingLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/bookingImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/tapbar_ic_03_reservation"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/bookingView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/bookingImageView"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"
                    android:text="@string/menu_item_title_bookings"
                    android:textColor="@drawable/selector_menu_textcolor"
                    android:textSize="9dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myDailyLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/myDailyImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/tapbar_ic_03_reservation"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/myDailyView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/myDailyImageView"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"
                    android:text="@string/menu_item_title_mydaily"
                    android:textColor="@drawable/selector_menu_textcolor"
                    android:textSize="9dp"/>

                <ImageView
                    android:id="@+id/myDailyNewIconView"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="28dp"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/tabbar_ic_n"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/informationLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/informationImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/tapbar_ic_04_more"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/informationView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/informationImageView"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"
                    android:text="@string/menu_item_title_information"
                    android:textColor="@drawable/selector_menu_textcolor"
                    android:textSize="9dp"/>

                <ImageView
                    android:id="@+id/informationNewIconView"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="28dp"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/tabbar_ic_n"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</merge>