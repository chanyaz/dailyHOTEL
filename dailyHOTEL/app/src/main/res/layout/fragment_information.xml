<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/toolbar_default"/>

    <ScrollView
        android:id="@+id/informationScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fadingEdge="none">

        <LinearLayout
            android:id="@+id/informationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/navibar_gradation"/>

            <RelativeLayout
                android:id="@+id/profileLayout"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@color/white"
                android:paddingLeft="15dp">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/profileTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/more_ic_01"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/frag_login"
                    android:textColor="@color/information_title"
                    android:textSize="15dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/more_ic_next"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="45dp"
                    android:background="@color/information_underline"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/creditcardLayout"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:visibility="gone"
                android:background="@color/white"
                android:paddingLeft="15dp">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/more_ic_02"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/actionbar_title_creditcard_activity"
                    android:textColor="@color/information_title"
                    android:textSize="15dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/more_ic_next"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="45dp"
                    android:background="@color/information_underline"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bonusLayout"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:paddingLeft="15dp"
                android:background="@color/white">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/more_ic_03"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/actionbar_title_credit_frag"
                    android:textColor="@color/information_title"
                    android:textSize="15dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/more_ic_next"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/information_background"/>

            <RelativeLayout
                android:id="@+id/eventLayout"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@color/white"
                android:paddingLeft="15dp">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/more_ic_04"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/actionbar_title_event_list_frag"
                    android:textColor="@color/information_title"
                    android:textSize="15dp"/>

                <ImageView
                    android:id="@+id/rightArrowIconView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/more_ic_next"/>

                <ImageView
                    android:id="@+id/newIconView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="false"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:layout_toLeftOf="@+id/rightArrowIconView"
                    android:src="@drawable/tapbar_ic_n"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/information_background"/>

            <RelativeLayout
                android:id="@+id/callLayout"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:paddingLeft="15dp"
                android:background="@color/white">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/more_ic_05"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/frag_call_res_contact"
                    android:textColor="@color/information_title"
                    android:textSize="15dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/more_ic_next"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="45dp"
                    android:background="@color/information_underline"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mailLayout"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@color/white"
                android:paddingLeft="15dp">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/more_ic_06"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/frag_send_mail"
                    android:textColor="@color/information_title"
                    android:textSize="15dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/more_ic_next"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="45dp"
                    android:background="@color/information_underline"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/aboutLayout"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@color/white"
                android:paddingLeft="15dp">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/more_ic_07"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/frag_about"
                    android:textColor="@color/information_title"
                    android:textSize="15dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/more_ic_next"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/information_background"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:paddingLeft="15dp"
                android:background="@color/white">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/more_ic_08"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/frag_push_alert"
                    android:textColor="@color/information_title"
                    android:textSize="15dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/pushTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:gravity="center_vertical"
                    android:text="@string/label_off"
                    android:textColor="@color/dh_theme_color"
                    android:textSize="12dp"
                    dailyFont:style="Medium"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/dailyInformationView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/information_background"
                android:gravity="center"
                android:orientation="vertical"
                android:minHeight="140dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/facebookLinkView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:src="@drawable/more_sns_01"/>

                    <ImageView
                        android:id="@+id/instagramLinkView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:src="@drawable/more_sns_02"/>

                    <ImageView
                        android:id="@+id/naverLinkView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/more_sns_03"/>
                </LinearLayout>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/business1TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/frag_about_business_license01"
                    android:textColor="@color/setting_business_license"
                    android:textSize="8dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/business2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/frag_about_business_license02"
                    android:textColor="@color/setting_business_license"
                    android:textSize="8dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/business3TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/frag_about_business_license03"
                    android:textColor="@color/setting_business_license"
                    android:textSize="8dp"/>

                <LinearLayout
                    android:id="@+id/termsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:id="@+id/termsView"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:background="@drawable/more_btn"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/actionbar_title_term_activity"
                            android:textColor="@color/setting_business_license"
                            android:textSize="8dp"/>

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:id="@+id/personalView"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginLeft="6dp"
                            android:layout_toRightOf="@+id/termsView"
                            android:background="@drawable/more_btn"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/actionbar_title_privacy_activity"
                            android:textColor="@color/setting_business_license"
                            android:textSize="8dp"
                            dailyFont:style="Bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:id="@+id/locationTermsView"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:background="@drawable/more_btn"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/label_terms_location"
                            android:textColor="@color/setting_business_license"
                            android:textSize="8dp"/>

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:id="@+id/protectChildTermsView"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/more_btn"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/label_terms_protectchild"
                            android:textColor="@color/setting_business_license"
                            android:textSize="8dp"/>
                    </LinearLayout>
                </LinearLayout>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/versionTextView"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:textColor="@color/setting_business_license"
                    android:textSize="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>