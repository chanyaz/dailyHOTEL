<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/section_background"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:gravity="center_vertical">

        <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_booking_ticket_info"
            android:textColor="@color/textView_textColor_section"
            android:textSize="13dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="27dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/label_booking_ticket_type"
                android:textColor="@color/booking_subtext"
                android:textSize="15dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/ticketTypeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="right|center_vertical"
                android:textColor="@color/dh_theme_color"
                android:textSize="15dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/label_selecteday"
                android:textColor="@color/booking_subtext"
                android:textSize="15dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/ticketDateTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="right|center_vertical"
                android:textColor="@drawable/selector_textview_textcolor"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/label_booking_select_ticket_time"
                android:textColor="@color/booking_subtext"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="right|center_vertical">

                <ImageView
                    android:id="@+id/ticketTimeMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/payment_ic_amount_left"/>

                <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                    android:id="@+id/ticketTimeTextView"
                    android:layout_width="69dp"
                    android:layout_height="29dp"
                    android:textColor="@drawable/selector_textview_textcolor"
                    android:textSize="15dp"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/ticketTimePlus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/payment_ic_amount_right"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/label_booking_select_ticket_count"
                android:textColor="@color/booking_subtext"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="right|center_vertical">

                <ImageView
                    android:id="@+id/ticketCountMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/payment_ic_amount_left"/>

                <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                    android:id="@+id/ticketCountTextView"
                    android:layout_width="69dp"
                    android:layout_height="29dp"
                    android:text="1ê°œ"
                    android:textColor="@drawable/selector_textview_textcolor"
                    android:textSize="15dp"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/ticketCountPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/payment_ic_amount_right"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>