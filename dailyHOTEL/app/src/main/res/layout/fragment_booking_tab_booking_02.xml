<!--UI 확인시에만 열어주세요-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_line_cdcdcdd"/>

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/default_background"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="25dp"
        android:text="@string/label_booking_payment_information"
        android:textColor="@color/default_text_c323232"
        android:textSize="14dp"
        dailyFont:style="Medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/shape_wait_payment_background"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:text="@string/label_booking_payment_date"
                android:textColor="@color/default_text_c66323232"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/paymentDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:lineSpacingExtra="-2dp"
                android:textColor="@color/default_text_c66323232"
                android:textSize="13dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_line_cebebeb"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:text="@string/label_wait_payment_price"
                android:textColor="@color/default_text_c929292"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:lineSpacingExtra="-2dp"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bonusLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_wait_payment_used_bonus"
                android:textColor="@color/default_text_c929292"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/bonusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:lineSpacingExtra="-2dp"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/couponLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_wait_payment_used_coupon"
                android:textColor="@color/default_text_c929292"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/couponTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:lineSpacingExtra="-2dp"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/default_line_cdcdcdd"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/label_wait_payment_total_price"
                android:textColor="@color/default_text_c323232"
                android:textSize="14dp"
                dailyFont:style="Bold"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right|center_vertical"
                android:lineSpacingExtra="-2dp"
                android:textColor="@color/default_text_c900034"
                android:textSize="14dp"
                dailyFont:style="Bold"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/refundPolicyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/default_background_section_cf2f2f3"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/label_detail_cancellation_refund_policy"
                android:textColor="@color/default_text_c929292"
                android:textSize="13dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/default_line_ce7e7e7"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/default_line_ce7e7e7"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/info_ic_text_dot_black"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/refundPolicyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:freezesText="true"
                android:lineSpacingExtra="-2dp"
                android:text="@string/message_booking_refund_product"
                android:textColor="@color/default_background_section_c323232"
                android:textSize="13dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
