<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/calendar_month_line"
        android:gravity="center"
        android:text="인원"
        android:textColor="@android:color/black"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/minusPersonView"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_background_defaultcolor"
            android:text="-"
            android:textColor="@android:color/black"
            android:textSize="20dp"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/personCountView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_background_defaultcolor"
            android:text="2명 이상"
            android:textColor="@android:color/black"
            android:textSize="20dp"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/plusPersonView"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_background_defaultcolor"
            android:text="+"
            android:textColor="@android:color/black"
            android:textSize="20dp"/>

    </LinearLayout>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/calendar_month_line"
        android:gravity="center"
        android:text="베드타입"
        android:textColor="@android:color/black"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:gravity="center">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/doubleCheckView"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:text="더블"
            android:drawableTop="@drawable/navibar_ic_sorting_02"
            android:textColor="@drawable/selector_curation_textcolor"
            android:textSize="20dp"
            android:gravity="center_horizontal"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/twinCheckView"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:text="트윈"
            android:drawableTop="@drawable/navibar_ic_sorting_02"
            android:textColor="@drawable/selector_curation_textcolor"
            android:textSize="20dp"
            android:gravity="center_horizontal"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/heatedFloorsCheckView"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:drawableTop="@drawable/navibar_ic_sorting_02"
            android:text="온돌"
            android:textColor="@drawable/selector_curation_textcolor"
            android:textSize="20dp"
            android:gravity="clip_horizontal"/>

    </LinearLayout>
</LinearLayout>