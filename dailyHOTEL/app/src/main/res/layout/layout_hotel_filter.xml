<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인원"
            android:textColor="@android:color/black"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/minusView"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/selector_background_defaultcolor"
                android:text="-"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/personCountView"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/selector_background_defaultcolor"
                android:text="2"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/plusView"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/selector_background_defaultcolor"
                android:text="+"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="베드"
            android:textColor="@android:color/black"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/regionCheckView"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/selector_background_defaultcolor"
                android:text="더블"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/distanceCheckView"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/selector_background_defaultcolor"
                android:text="트윈"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/lowPriceCheckView"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/selector_background_defaultcolor"
                android:text="온돌"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>