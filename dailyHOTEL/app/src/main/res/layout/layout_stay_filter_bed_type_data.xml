<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/bedTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="67dp">

        <com.daily.base.widget.DailyTextView
            android:id="@+id/doubleTextView"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_fillrect_ce6e6e7_ceb2135_r3"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="10dp"
            android:text="@string/label_double"
            android:textColor="@drawable/selector_text_color_c929292_ceb2135"
            android:textSize="12dp"
            app:drawableCompatTop="@drawable/vector_ic_bed_type_double"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/twinTextView"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/twinTextView"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_fillrect_ce6e6e7_ceb2135_r3"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="10dp"
            android:text="@string/label_twin"
            android:textColor="@drawable/selector_text_color_c929292_ceb2135"
            android:textSize="12dp"
            app:drawableCompatTop="@drawable/vector_ic_bed_type_twin"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/doubleTextView"
            app:layout_constraintRight_toLeftOf="@+id/inFloorHeatingTextView"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/inFloorHeatingTextView"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_fillrect_ce6e6e7_ceb2135_r3"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="10dp"
            android:text="@string/label_in_floor_heating"
            android:textColor="@drawable/selector_text_color_c929292_ceb2135"
            android:textSize="12dp"
            app:drawableCompatTop="@drawable/vector_ic_bed_type_ondol"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/twinTextView"
            app:layout_constraintRight_toLeftOf="@+id/singleTextView"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/singleTextView"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_fillrect_ce6e6e7_ceb2135_r3"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="10dp"
            android:text="@string/label_single"
            android:textColor="@drawable/selector_text_color_c929292_ceb2135"
            android:textSize="12dp"
            app:drawableCompatTop="@drawable/vector_ic_bed_type_single"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/inFloorHeatingTextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>