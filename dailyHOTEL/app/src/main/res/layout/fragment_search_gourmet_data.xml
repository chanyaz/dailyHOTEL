<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/default_background"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_line_cf0f0f0"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="17dp"
                android:text="최근 검색 내용"
                android:textColor="@color/default_text_cc5c5c5"
                android:textSize="14dp"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/recently01Layout"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/recentlyIcon01ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/recentlyStayName01TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:text="롯데"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="13dp"
                    app:layout_constraintBottom_toTopOf="@+id/recentlyStayDate01TextView"
                    app:layout_constraintLeft_toRightOf="@+id/recentlyIcon01ImageView"
                    app:layout_constraintRight_toLeftOf="@+id/recentlyClose01ImageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/recentlyStayDate01TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="2dp"
                    android:text="2017.12.31(목)"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/recentlyIcon01ImageView"
                    app:layout_constraintRight_toLeftOf="@+id/recentlyClose01ImageView"
                    app:layout_constraintTop_toBottomOf="@+id/recentlyStayName01TextView"/>

                <ImageView
                    android:id="@+id/recentlyClose01ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:paddingLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/search_ic_01_delete"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/recently02Layout"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/recentlyIcon02ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/recentlyStayName02TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:text="딸기"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="13dp"
                    app:layout_constraintBottom_toTopOf="@+id/recentlyStayDate02TextView"
                    app:layout_constraintLeft_toRightOf="@+id/recentlyIcon02ImageView"
                    app:layout_constraintRight_toLeftOf="@+id/recentlyClose02ImageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/recentlyStayDate02TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="2dp"
                    android:text="2017.12.31(목) "
                    android:textColor="@color/default_text_c929292"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/recentlyIcon02ImageView"
                    app:layout_constraintRight_toLeftOf="@+id/recentlyClose02ImageView"
                    app:layout_constraintTop_toBottomOf="@+id/recentlyStayName02TextView"/>

                <ImageView
                    android:id="@+id/recentlyClose02ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:paddingLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/search_ic_01_delete"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/recently03Layout"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/recentlyIcon03ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/recentlyStayName03TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:text="태번 38"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="13dp"
                    app:layout_constraintBottom_toTopOf="@+id/recentlyStayDate03TextView"
                    app:layout_constraintLeft_toRightOf="@+id/recentlyIcon03ImageView"
                    app:layout_constraintRight_toLeftOf="@+id/recentlyClose03ImageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/recentlyStayDate03TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="2dp"
                    android:text="2018.01.26(금), 1박"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/recentlyIcon03ImageView"
                    app:layout_constraintRight_toLeftOf="@+id/recentlyClose03ImageView"
                    app:layout_constraintTop_toBottomOf="@+id/recentlyStayName03TextView"/>

                <ImageView
                    android:id="@+id/recentlyClose03ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:paddingLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/search_ic_01_delete"/>
            </android.support.constraint.ConstraintLayout>

            <com.daily.base.widget.DailyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="17dp"
                android:text="스테이 인기 태그"
                android:textColor="@color/default_text_cc5c5c5"
                android:textSize="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:background="@color/default_background_cf4f4f6"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="#전국 뷔페 특가"
                        android:textColor="@color/default_text_c666666"
                        android:textSize="13dp"/>

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/default_background_cf4f4f6"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="#10시 타임딜"
                        android:textColor="@color/default_text_c666666"
                        android:textSize="13dp"/>

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/default_background_cf4f4f6"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="#디저트"
                        android:textColor="@color/default_text_c666666"
                        android:textSize="13dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:background="@color/default_background_cf4f4f6"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="#가성비 뷔페"
                        android:textColor="@color/default_text_c666666"
                        android:textSize="13dp"/>

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/default_background_cf4f4f6"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="#종로 맛집"
                        android:textColor="@color/default_text_c666666"
                        android:textSize="13dp"/>

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/default_background_cf4f4f6"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="#시간대별 추가 할인"
                        android:textColor="@color/default_text_c666666"
                        android:textSize="13dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:background="@color/default_background_cf4f4f6"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="#신규 레스토랑"
                        android:textColor="@color/default_text_c666666"
                        android:textSize="13dp"/>

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/default_background_cf4f4f6"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="#단체 특가"
                        android:textColor="@color/default_text_c666666"
                        android:textSize="13dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>