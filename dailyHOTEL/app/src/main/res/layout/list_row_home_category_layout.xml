<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <RelativeLayout
        android:id="@+id/homeCategoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/homeCategoryTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/label_home_category_title_text"
            android:textColor="@color/default_text_c323232"
            android:textSize="13dp"
            dailyFont:style="Medium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/homeCategoryTitleTextView"
            android:layout_alignTop="@id/homeCategoryTitleTextView"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/homeCategoryTitleTextView"
            android:gravity="center_vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_line_c323232"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/homeCategoryTitleTextView"
            android:layout_alignTop="@id/homeCategoryTitleTextView"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/homeCategoryTitleTextView"
            android:gravity="center_vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_line_c323232"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/homeCategoryItemLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeCategoryTitleTextView"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/homeCategoryItemHotelTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_home_category_hotel"
                android:textSize="13dp"
                dailyFont:style="Medium"/>

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/homeCategoryItemBoutiqueTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_home_category_boutique"
                android:textSize="13dp"
                dailyFont:style="Medium"/>

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/homeCategoryItemPensionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_home_category_pension"
                android:textSize="13dp"
                dailyFont:style="Medium"/>

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/homeCategoryItemResortTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_home_category_resort"
                android:textSize="13dp"
                dailyFont:style="Medium"/>

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/homeCategoryItemSearchLocationTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_home_category_search_location"
                android:textSize="13dp"
                dailyFont:style="Medium"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@id/bottomDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/homeCategoryLayout"
        android:layout_marginTop="15dp"
        android:background="@color/default_line_cf0f0f0"/>

</RelativeLayout>