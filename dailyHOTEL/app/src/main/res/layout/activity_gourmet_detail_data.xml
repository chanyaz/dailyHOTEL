<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    xmlns:dailyLineIndicator="http://schemas.android.com/apk/res-auto"
    xmlns:dailyToolbar="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/transImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageLoopViewPager"
            app:layout_constraintLeft_toLeftOf="@+id/imageLoopViewPager"
            app:layout_constraintRight_toRightOf="@+id/imageLoopViewPager"
            app:layout_constraintTop_toTopOf="@+id/imageLoopViewPager"
            fresco:actualImageScaleType="centerCrop"/>

        <com.twoheart.dailyhotel.widget.DailyLoopViewPager
            android:id="@+id/imageLoopViewPager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,4:3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/transGradientBottomView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageLoopViewPager"
            app:layout_constraintLeft_toLeftOf="@+id/imageLoopViewPager"
            app:layout_constraintRight_toRightOf="@+id/imageLoopViewPager"
            app:layout_constraintTop_toTopOf="@+id/imageLoopViewPager"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/transGradientTopView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageLoopViewPager"
            app:layout_constraintLeft_toLeftOf="@+id/imageLoopViewPager"
            app:layout_constraintRight_toRightOf="@+id/imageLoopViewPager"
            app:layout_constraintTop_toTopOf="@+id/imageLoopViewPager">

            <View
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:background="@drawable/img_detail_gradient"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/img_detail_bottom_gradient"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/viewPagerBottomLine"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/defaultLoopViewPager"/>

        <com.twoheart.dailyhotel.widget.DailyLineIndicator
            android:id="@+id/viewpagerIndicator"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintBottom_toTopOf="@id/viewPagerBottomLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            dailyLineIndicator:indicatorBackgroundColor="@color/white_a40"
            dailyLineIndicator:indicatorColor="@color/white"/>

        <View
            android:id="@+id/moreIconView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/detail_ic_more_img"
            app:layout_constraintBottom_toTopOf="@id/viewpagerIndicator"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:background="@drawable/background_image_information_detail"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingBottom="7dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="7dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/viewpagerIndicator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/stickerSimpleDraweeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="52dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/defaultLoopViewPager"
            app:layout_constraintTop_toTopOf="@+id/defaultLoopViewPager"/>

        <LinearLayout
            android:id="@+id/transTitleLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="19dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/defaultLoopViewPager">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/transGradeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:paddingBottom="1px"
                android:paddingLeft="5.5dp"
                android:paddingRight="5.5dp"
                android:paddingTop="2px"
                android:textColor="@android:color/white"
                android:textSize="11dp"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/transNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:textColor="@color/hoteldetail_title_text"
                android:textSize="18dp"
                dailyFont:style="Medium"/>
        </LinearLayout>

        <com.daily.base.widget.DailyNestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/scrollLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </com.daily.base.widget.DailyNestedScrollView>

        <ImageView
            android:id="@+id/vrImageView"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:src="@drawable/detail_ic_vr_img"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/viewpagerIndicator"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <com.daily.dailyhotel.view.DailyToolbarView
            android:id="@+id/fakeToolbarView"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            dailyToolbar:themeColor="white"
            dailyToolbar:underLineVisible="false"/>

        <com.daily.dailyhotel.view.DailyToolbarView
            android:id="@+id/toolbarView"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/white"
            android:elevation="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            dailyToolbar:underLineHeight="@dimen/gradient_1dp_line_height_under_21"/>

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shape_gradient_bottom_up"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/gradient_1dp_line_height_under_21"
                    android:background="@color/default_line_ce7e7e7"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/bookingTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/detail_button_min_left_margin"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_fillrect_bb70038_r2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:visibility="gone"
                    dailyFont:style="Medium"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/soldoutTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_button_disable"
                    android:gravity="center"
                    android:text="@string/act_hotel_soldout"
                    android:textColor="@color/default_text_cc5c5c5"
                    android:textSize="17dp"
                    android:visibility="gone"
                    dailyFont:style="Medium"/>
            </RelativeLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/wishListPopupScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            android:fillViewport="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.11"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/wishListPopupView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/shape_filloval_ccdb2453"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:letterSpacing="0"
                    android:lineSpacingExtra="-3dp"
                    android:paddingBottom="30dp"
                    android:paddingTop="30dp"
                    android:text="@string/wishlist_detail_add_message"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:drawableCompatTop="@drawable/ic_heart_fill_l"
                    dailyFont:style="Medium"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.22"/>
            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/wishTooltipView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/wishTooltipTextView"
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="32dp"
                android:text="@string/label_preview_wish_guide"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"
                dailyFont:style="Medium"/>
        </FrameLayout>
    </android.support.constraint.ConstraintLayout>
</layout>