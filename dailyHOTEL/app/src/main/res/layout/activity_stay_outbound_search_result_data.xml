<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:dailyFont="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/white">

            <com.daily.base.widget.DailyImageView
                android:id="@+id/backImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:srcCompat="@drawable/navibar_ic_back_01_black"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="72dp"
                android:singleLine="true"
                android:textColor="@color/actionbar_title"
                android:textSize="18dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/default_line_ce7e7e7"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@+id/toolbar"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/calendarTextView"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/calendarDownArrowView"
                android:layout_toRightOf="@id/calendarImageView"
                android:layout_weight="1"
                android:background="@drawable/shape_fillrect_leeeef0_bf8f8f9"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/search_ic_01_date"
                app:drawableCompatRight="@drawable/navibar_m_ic_v"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/peopleTextView"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/calendarDownArrowView"
                android:layout_toRightOf="@id/calendarImageView"
                android:layout_weight="1"
                android:background="@drawable/shape_fillrect_leeeef0_bf8f8f9"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/vector_search_ic_02_people"
                app:drawableCompatRight="@drawable/navibar_m_ic_v"/>
        </LinearLayout>

        <View
            android:id="@+id/underLineView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linearLayout"
            android:background="@color/default_line_ce7e7e7"/>

        <FrameLayout
            android:id="@+id/resultLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/underLineView"
            android:visibility="invisible">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"/>
            </android.support.v4.widget.SwipeRefreshLayout>

            <FrameLayout
                android:id="@+id/mapLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/searchLocationLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/underLineView"
            android:background="@color/default_background"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/progressBarTextView"
                android:indeterminate="true"
                android:indeterminateOnly="true"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/progressBarTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:text="@string/label_searching_around_location"
                android:textColor="@color/default_text_cb4b4b4"
                android:textSize="12dp"/>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/emptyLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/underLineView"
            android:fillViewport="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/emptyIconImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:minHeight="110dp"
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/no_hotel_ic"/>

                <LinearLayout
                    android:id="@+id/textLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/messageTextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_searchresult_empty"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="18dp"
                        dailyFont:style="Medium"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/messageTextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:gravity="center"
                        android:text="@string/label_searchresult_text01"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="14dp"/>
                </LinearLayout>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/researchView"
                    android:layout_width="180dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_button_common_background"
                    android:gravity="center"
                    android:text="@string/label_searchresult_research"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    dailyFont:style="Medium"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/filterView"
                    android:layout_width="180dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_button_common_background"
                    android:gravity="center"
                    android:text="@string/label_hotel_list_changing_filter"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    dailyFont:style="Medium"/>

                <LinearLayout
                    android:id="@+id/callLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:minHeight="60dp"
                    android:orientation="vertical">

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/callUnderTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/message_stay_outbound_search_empty"
                        android:textColor="@color/default_text_cc5c5c5"
                        android:textSize="12dp"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/callTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center_horizontal"
                        android:paddingBottom="15dp"
                        android:text="@string/label_searchresult_call_customercenter"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bottomOptionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/viewTypeOptionImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/fab_01_map"/>

            <ImageView
                android:id="@+id/filterOptionImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_floatingactionview"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/errorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/underLineView"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/errorTextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/errorMessageTextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/frag_error_network_unavail"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="18dp"
                    dailyFont:style="Medium"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/errorMessageTextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:text="@string/act_base_network_connect"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="14dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/errorTextLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                app:srcCompat="@drawable/dh_logo_error"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/retryTextView"
                android:layout_width="112dp"
                android:layout_height="38dp"
                android:layout_below="@+id/errorTextLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_button_common_background"
                android:gravity="center"
                android:text="@string/frag_error_btn"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                dailyFont:style="Medium"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>