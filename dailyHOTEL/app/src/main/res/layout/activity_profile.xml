<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <include layout="@layout/toolbar_default"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/act_profile_email"
            android:textColor="@color/curation_title_text"
            android:textSize="13dp"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="right|center_vertical"
            android:lineSpacingExtra="-2dp"
            android:textColor="@color/curation_information_text"
            android:textSize="13dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/curation_information_line"/>

        <RelativeLayout
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/nameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/act_profile_name"
                android:textColor="@color/curation_title_text"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameView"
                android:hint="@string/act_profile_input_name"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/curation_information_text"
                android:textSize="13dp"
                android:theme="@style/EditTextTheme"
                android:layout_toLeftOf="@+id/nameArrowImage"/>

            <ImageView
                android:id="@+id/nameArrowImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_ic_next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/curation_information_line"/>

        <RelativeLayout
            android:id="@+id/phoneLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/phoneView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/act_profile_contact"
                android:textColor="@color/curation_title_text"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/phoneVerifyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(인증필요)"
                android:textColor="@color/dh_theme_color"
                android:textSize="13dp"
                android:layout_toRightOf="@+id/phoneView"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/profilePhoneTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneView"
                android:hint="@string/act_profile_input_contact"
                android:inputType="phone"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/curation_information_text"
                android:textSize="13dp"
                android:theme="@style/EditTextTheme"
                android:layout_toLeftOf="@+id/phoneArrowImage"/>

            <ImageView
                android:id="@+id/phoneArrowImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_ic_next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/curation_information_line"/>

        <RelativeLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/passwordView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/act_profile_password"
                android:textColor="@color/curation_title_text"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/passwordTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passwordView"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/curation_information_text"
                android:text="******"
                android:textSize="13dp"
                android:theme="@style/EditTextTheme"
                android:layout_toLeftOf="@+id/passwordArrowImage"
                android:inputType="textPassword"/>

            <ImageView
                android:id="@+id/passwordArrowImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_ic_next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>
    </LinearLayout>

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/signOutView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dh_theme_color"
        android:gravity="center"
        android:text="@string/act_profile_btn_logout"
        android:textColor="@android:color/white"
        android:textSize="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/navibar_gradation"/>
</RelativeLayout>