<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/information_background">

	<include layout="@layout/toolbar_default"/>

	<RelativeLayout
		android:id="@+id/couponLayout"
		android:layout_width="match_parent"
		android:layout_height="38dp"
		android:layout_below="@+id/toolbar"
		android:background="@color/white">

		<View
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:background="@color/tab_underline"/>

		<com.twoheart.dailyhotel.widget.DailyTextView
			android:id="@+id/couponTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dp"
			android:layout_toLeftOf="@+id/couponHistoryTextView"
			android:gravity="left|center_vertical"
			android:text="사용가능한 쿠폰이 %1$s장 있습니다"
			android:textColor="@color/tab_text"
			android:textSize="13dp"
			dailyFont:style="DemiLight"/>

		<com.twoheart.dailyhotel.widget.DailyTextView
			android:id="@+id/couponHistoryTextView"
			android:layout_width="68dp"
			android:layout_height="15dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="15dp"
			android:background="@drawable/shape_coupon_history_button_backround"
			android:gravity="center"
			android:text="쿠폰 사용내역"
			android:textColor="@color/coupon_history_button_text"
			android:textSize="10dp"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:layout_alignParentBottom="true"
			android:background="@color/tab_underline"/>
	</RelativeLayout>

	<ListView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/couponLayout"
		android:background="@color/information_background"
		android:cacheColorHint="@android:color/transparent"
		android:divider="@null"
		android:fadingEdge="none"
		android:listSelector="@android:color/transparent"
		android:scrollbarStyle="outsideOverlay"
		android:scrollbars="vertical"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="2dp"
		android:layout_below="@id/couponLayout"
		android:background="@drawable/navibar_gradation"/>
</RelativeLayout>