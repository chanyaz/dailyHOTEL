<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/toolbar_default"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_stamp_header"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/stampEventMessageTextView"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="5박까지 스탬프를 모아보세요!\n어디든 갈 수 있는 1박 무료쿠폰이 생겨요!"
                android:textColor="@color/default_text_c323232"
                android:textSize="16dp"
                dailyFont:style="Medium"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/loginView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:background="@drawable/shape_fillrect_bb70038_r2"
                android:paddingBottom="11dp"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="10dp"
                android:text="@string/frag_booking_btn_login"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="gone"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/nightsTextView"
                android:layout_width="52dp"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_fillrect_lf0f0f0_bffffff_r20"
                android:gravity="center"
                android:text="0/5박"
                android:textColor="@color/default_text_c929292"
                android:textSize="13dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_margin="15dp"
                android:background="@drawable/shape_fillrect_ldcdcdd_bf8f8f9_r6"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.twoheart.dailyhotel.widget.DailyButton
                        android:id="@+id/nights01TextView"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/ic_stamp_placeholder_01"
                        android:text="@string/label_stamp_1_nights"
                        android:textColor="@color/default_text_cc5c5c5"
                        android:textSize="14dp"/>

                    <FrameLayout
                        android:id="@+id/nights02TextView"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/ic_stamp_placeholder_02">

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:gravity="center"
                            android:paddingTop="24dp"
                            android:text="@string/label_stamp_2_nights"
                            android:textColor="@color/default_text_cc5c5c5"
                            android:textSize="12dp"/>
                    </FrameLayout>

                    <com.twoheart.dailyhotel.widget.DailyButton
                        android:id="@+id/nights03TextView"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_stamp_placeholder_01"
                        android:text="@string/label_stamp_3_nights"
                        android:textColor="@color/default_text_cc5c5c5"
                        android:textSize="14dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <com.twoheart.dailyhotel.widget.DailyButton
                        android:id="@+id/nights04TextView"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/ic_stamp_placeholder_01"
                        android:text="@string/label_stamp_4_nights"
                        android:textColor="@color/default_text_cc5c5c5"
                        android:textSize="14dp"/>

                    <FrameLayout
                        android:id="@+id/nights05TextView"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_stamp_placeholder_03">

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:gravity="center"
                            android:paddingTop="24dp"
                            android:text="@string/label_stamp_5_nights"
                            android:textColor="@color/default_text_cc5c5c5"
                            android:textSize="12dp"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/view_separate_line_no_linear"/>

            <RelativeLayout
                android:id="@+id/stampMessageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/iconImageView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_stamp_info_01_coupon"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/stampMessage01TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iconImageView01"
                    android:text="@string/message_stamp_explanation1"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="13dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/stampMessage02TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stampMessage01TextView"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/iconImageView01"
                    android:text="@string/message_stamp_explanation2"
                    android:textColor="@color/default_text_c666666"
                    android:textSize="12dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/stampMessage03TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stampMessage02TextView"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/iconImageView01"
                    android:drawablePadding="3dp"
                    android:text="@string/message_stamp_explanation3"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="12dp"
                    app:drawableCompatRight="@drawable/payment_ic_right"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/pushLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/view_separate_line_no_linear"/>

                <RelativeLayout
                    android:id="@+id/pushMessageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="16dp">

                    <ImageView
                        android:id="@+id/iconImageView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_stamp_info_02_noti"/>

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/pushMessage01TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iconImageView02"
                        android:text="@string/message_stamp_notification_on"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="13dp"/>

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/pushMessage02TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pushMessage01TextView"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/iconImageView02"
                        android:drawablePadding="3dp"
                        android:text="@string/label_stamp_notification_on_setting"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="12dp"
                        app:drawableCompatRight="@drawable/payment_ic_right"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_line_cf0f0f0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/default_background"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="19dp">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/stampDate01TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="4dp"
                    android:drawablePadding="5dp"
                    android:freezesText="true"
                    android:lineSpacingExtra="-2dp"
                    android:text="@string/label_stamp_event_date1"
                    android:textColor="@color/default_background_section_c323232"
                    android:textSize="13dp"
                    app:drawableCompatLeft="@drawable/info_ic_text_dot_black"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/stampDate02TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="4dp"
                    android:drawablePadding="5dp"
                    android:freezesText="true"
                    android:lineSpacingExtra="-2dp"
                    android:text="@string/label_stamp_event_date2"
                    android:textColor="@color/default_background_section_c323232"
                    android:textSize="13dp"
                    app:drawableCompatLeft="@drawable/info_ic_text_dot_black"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/stampDate03TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="4dp"
                    android:drawablePadding="5dp"
                    android:freezesText="true"
                    android:lineSpacingExtra="-2dp"
                    android:text="@string/label_stamp_event_date3"
                    android:textColor="@color/default_background_section_c323232"
                    android:textSize="13dp"
                    app:drawableCompatLeft="@drawable/info_ic_text_dot_black"/>

                <LinearLayout
                    android:id="@+id/stampBottomLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="19dp">

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/stampHistoryTextView"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/shape_fillrect_ldcdcdd_bffffff_r2"
                        android:gravity="center"
                        android:text="@string/label_stamp_history"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="13dp"
                        dailyFont:style="Medium"/>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/stampTermsTextView"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/shape_fillrect_ldcdcdd_bffffff_r2"
                        android:gravity="center"
                        android:text="@string/label_stamp_terms"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="13dp"
                        dailyFont:style="Medium"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>