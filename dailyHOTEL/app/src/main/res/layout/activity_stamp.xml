<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/toolbar_default"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_fillrect_le8e8e9_bffffff"
                android:orientation="vertical">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/messageTextView01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/detail_map_img"
                    android:gravity="center_horizontal"
                    android:text="5박까지 스탬프를 모아보세요!\n어디든 갈 수 있는 1박 무료쿠폰이 생겨요!"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="17dp"
                    dailyFont:style="Medium"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_fillrect_ld1d1d1_bffffff"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="1/5박"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/default_line_cd1d1d1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messageTextView01"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:id="@+id/nights01TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1박"
                            android:textColor="@color/default_text_c323232"
                            android:textSize="21dp"/>

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:id="@+id/nights02TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="2박"
                            android:textColor="@color/default_text_c323232"
                            android:textSize="21dp"/>

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:id="@+id/nights03TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="3박"
                            android:textColor="@color/default_text_c323232"
                            android:textSize="21dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:id="@+id/nights04TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="4박"
                            android:textColor="@color/default_text_c323232"
                            android:textSize="21dp"/>

                        <com.twoheart.dailyhotel.widget.DailyTextView
                            android:id="@+id/nights05TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="5박"
                            android:textColor="@color/default_text_c323232"
                            android:textSize="21dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_line_cd1d1d1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iconImageView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/signup_ic"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/messageTextView02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iconImageView01"
                    android:text="@string/message_stamp_explanation"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="11dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/messageTextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messageTextView02"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iconImageView01"
                    android:text="@string/label_stamp_event_go"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="11dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_line_cd1d1d1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/default_line_cd1d1d1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iconImageView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/signup_ic"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/messageTextView04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iconImageView02"
                    android:text="@string/message_stamp_notification_on"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="11dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/messageTextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messageTextView04"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iconImageView02"
                    android:text="@string/label_stamp_notification_on_setting"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="11dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_line_cd1d1d1"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/stampDate01TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:freezesText="true"
                android:lineSpacingExtra="-2dp"
                android:text="스탬프 이벤트 기간:2017.04.14 - 2017.06.30"
                android:textColor="@color/default_background_section_c323232"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/info_ic_text_dot_black"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/stampDate02TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:drawablePadding="5dp"
                android:freezesText="true"
                android:lineSpacingExtra="-2dp"
                android:text="스탬프 적립 기준 체크아웃 시간:2017.04.14 - 2017.06.30"
                android:textColor="@color/default_background_section_c323232"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/info_ic_text_dot_black"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/stampDate03TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:drawablePadding="5dp"
                android:freezesText="true"
                android:lineSpacingExtra="-2dp"
                android:text="스탬프 발행 기간:2017.04.14 - 2017.06.30"
                android:textColor="@color/default_background_section_c323232"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/info_ic_text_dot_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginBottom="10dp">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/stampEventDetailTextView"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/shape_fillrect_le8e8e9_bffffff"
                    android:gravity="center"
                    android:text="@string/label_stamp_history"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="15dp"
                    dailyFont:style="Medium"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/stampTermsTextView"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/shape_fillrect_le8e8e9_bffffff"
                    android:gravity="center"
                    android:text="@string/label_stamp_terms"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="15dp"
                    dailyFont:style="Medium"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>