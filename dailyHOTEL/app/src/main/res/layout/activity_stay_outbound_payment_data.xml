<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_default_menu"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:background="@color/white"
            android:fadingEdge="none">

            <LinearLayout
                android:id="@+id/scrollLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <com.daily.base.widget.DailyTextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/default_background"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="25dp"
                    android:text="@string/label_booking_step1"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="14dp"
                    dailyFont:style="Medium"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/default_line_cf0f0f0"/>

                <com.daily.dailyhotel.view.DailyDateInformationView
                    android:id="@+id/dateInformationView"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/default_line_cdcdcdd"/>

                <!-- 객실 정보 -->
                <com.daily.dailyhotel.view.DailyBookingInformationView
                    android:id="@+id/roomInformationView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/default_line_cdcdcdd"/>

                <!-- 투숙자 정보 -->
                <LinearLayout
                    android:id="@+id/guestLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <com.daily.base.widget.DailyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/act_booking_reserver_info"
                            android:textColor="@color/default_text_c666666"
                            android:textSize="13dp"
                            dailyFont:style="Medium"/>

                        <com.daily.base.widget.DailyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:text="@string/label_booking_required_fileds"
                            android:textColor="@color/default_text_cc5c5c5"
                            android:textSize="12dp"/>
                    </LinearLayout>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/guideNameMemoView"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:drawablePadding="6dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/message_guide_name_memo"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="11dp"
                        app:drawableCompatLeft="@drawable/ic_payment_notice"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <com.daily.base.widget.DailyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="@string/label_stay_outbound_payment_last_name"
                            android:textColor="@color/default_text_c929292"
                            android:textSize="13dp"/>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7">

                            <com.daily.base.widget.DailyEditText
                                android:id="@+id/guestLastNameEditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|center_vertical"
                                android:inputType="textUri"
                                android:lines="1"
                                android:maxLength="25"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/default_text_c323232"
                                android:textSize="13dp"
                                android:theme="@style/EditTextTheme"/>

                            <com.daily.base.widget.DailyTextView
                                android:id="@+id/guestLastNameHintEditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="right|center_vertical"
                                android:lines="1"
                                android:maxLines="1"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/label_stay_outbound_payment_last_name_hint"
                                android:textColor="@color/default_text_cc5c5c5"
                                android:textSize="13dp"/>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <com.daily.base.widget.DailyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="@string/label_stay_outbound_payment_first_name"
                            android:textColor="@color/default_text_c929292"
                            android:textSize="13dp"/>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7">

                            <com.daily.base.widget.DailyEditText
                                android:id="@+id/guestFirstNameEditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|center_vertical"
                                android:inputType="textUri"
                                android:lines="1"
                                android:maxLength="40"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/default_text_c323232"
                                android:textSize="13dp"
                                android:theme="@style/EditTextTheme"/>

                            <com.daily.base.widget.DailyTextView
                                android:id="@+id/guestFirstNameHintEditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="right|center_vertical"
                                android:lines="1"
                                android:maxLines="1"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/label_stay_outbound_payment_first_name_hint"
                                android:textColor="@color/default_text_cc5c5c5"
                                android:textSize="13dp"/>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <com.daily.base.widget.DailyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="@string/act_booking_mobile"
                            android:textColor="@color/default_text_c929292"
                            android:textSize="13dp"/>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7">

                            <com.daily.base.widget.DailyEditText
                                android:id="@+id/guestPhoneEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right|center_vertical"
                                android:inputType="phone"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/default_text_c323232"
                                android:textColorHint="@color/default_text_cc5c5c5"
                                android:textSize="13dp"
                                android:theme="@style/EditTextTheme"/>

                            <View
                                android:id="@+id/fakeMobileEditView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <com.daily.base.widget.DailyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="@string/act_booking_email"
                            android:textColor="@color/default_text_c929292"
                            android:textSize="13dp"/>

                        <com.daily.base.widget.DailyEditText
                            android:id="@+id/guestEmailEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="right|center_vertical"
                            android:inputType="textEmailAddress"
                            android:lines="1"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/default_text_c323232"
                            android:textColorHint="@color/default_text_cc5c5c5"
                            android:textSize="13dp"
                            android:theme="@style/EditTextTheme"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <com.daily.base.widget.DailyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="@string/label_stay_outbound_payment_people"
                            android:textColor="@color/default_text_c929292"
                            android:textSize="13dp"/>

                        <com.daily.base.widget.DailyTextView
                            android:id="@+id/guestPeopleEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="right|center_vertical"
                            android:inputType="textEmailAddress"
                            android:lines="1"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/default_text_c323232"
                            android:textSize="13dp"
                            android:theme="@style/EditTextTheme"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/default_line_cf0f0f0"/>

                <com.daily.base.widget.DailyTextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/default_background"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="25dp"
                    android:text="@string/label_stay_outbound_payment_booking_step2"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="14dp"
                    dailyFont:style="Medium"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/default_line_cf0f0f0"/>

                <com.daily.dailyhotel.view.DailyBookingDiscountNPaymentInformationView
                    android:id="@+id/informationView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="15dp"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/additionalTaxMemoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/message_stay_outbound_payment_additional_tax"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="11dp"
                    app:drawableCompatLeft="@drawable/ic_payment_notice"/>

                <LinearLayout
                    android:id="@+id/additionalTaxLayout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_fillrect_le8e8e9_bfafafb"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <com.daily.base.widget.DailyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:duplicateParentState="true"
                            android:text="@string/label_stay_outbound_payment_additional_tax"
                            android:textColor="@color/default_text_c929292"
                            android:textSize="13dp"/>

                        <com.daily.base.widget.DailyTextView
                            android:id="@+id/taxPriceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:duplicateParentState="true"
                            android:textColor="@color/default_text_c323232"
                            android:textSize="13dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/default_line_cf0f0f0"/>

                <com.daily.base.widget.DailyTextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/default_background"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="25dp"
                    android:text="@string/label_booking_step3"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="14dp"
                    dailyFont:style="Medium"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/default_line_cf0f0f0"/>

                <com.daily.dailyhotel.view.DailyBookingPaymentTypeView
                    android:id="@+id/paymentTypeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/default_line_cf0f0f0"/>

                <com.daily.base.widget.DailyTextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/default_background"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="25dp"
                    android:text="@string/label_booking_step4"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="14dp"
                    dailyFont:style="Medium"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/default_line_cf0f0f0"/>

                <com.daily.dailyhotel.view.DailyBookingRefundPolicyView
                    android:id="@+id/refundPolicyView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="19dp"
                    android:background="@color/default_line_cdcdcdd"/>

                <com.daily.dailyhotel.view.DailyBookingAgreementThirdPartyView
                    android:id="@+id/agreementThirdPartyView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@color/white">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:background="@color/default_line_ce7e7e7"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/doPaymentView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/shape_fillrect_bb70038_r2"
                        android:gravity="center"
                        android:text="@string/act_booking_btn_pay"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        dailyFont:style="Medium"/>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>