<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBaseline="@id/toolbar_actionbar"
        android:layout_alignBottom="@id/toolbar_actionbar"
        android:background="@color/actionbar_underline"/>

    <ScrollView
        android:id="@+id/sv_booking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_actionbar"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <include
                layout="@layout/layout_booking_hotel_check_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- 객실 정보 -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_border"/>


            <include
                layout="@layout/layout_booking_hotel_ticket_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- 예약자 정보 -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_border"/>

            <include
                layout="@layout/layout_booking_hotel_user_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- 결제 -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_border"/>

            <include
                layout="@layout/layout_booking_hotel_payment_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- 결제 버튼 -->

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/btn_hotel_payment"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="14dp"
                android:background="@color/dh_theme_color"
                android:gravity="center"
                android:text="@string/act_booking_btn_pay"
                android:textColor="@android:color/white"
                android:textSize="20dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>