<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                                             xmlns:dailyToolbar="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <com.daily.dailyhotel.view.DailyToolbarView
        android:id="@+id/toolbarView"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white"
        android:elevation="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        dailyToolbar:underLineHeight="@dimen/gradient_1dp_line_height_under_21"/>

    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:fadingEdge="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarView">

        <LinearLayout
            android:id="@+id/bookingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <!-- 1. 예약정보 확인 -->
            <include
                layout="@layout/layout_booking_hotel_check_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"/>

            <!-- 예약 메모 -->
            <!--<include-->
            <!--layout="@layout/layout_booking_memo"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:visibility="gone"/>-->

            <!-- 2. 할인수단 선택 및 결제금액 -->
            <include
                layout="@layout/layout_booking_discount_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- 3. 결제 수단 -->
            <include
                layout="@layout/layout_booking_hotel_select_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- 4. 취소 및 환불 규정 -->
            <include
                layout="@layout/layout_booking_hotel_refund_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- 결제 버튼 -->
            <RelativeLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/default_line_ce7e7e7"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/doPaymentView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_fillrect_bb70038_r2"
                    android:gravity="center"
                    android:text="@string/act_booking_btn_pay"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    dailyFont:style="Medium"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>