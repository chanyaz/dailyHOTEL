<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/errorView"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/default_line_ce8e8e9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/topMarginView"
            android:layout_width="wrap_content"
            android:layout_height="47dp"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/label_home_server_error_text"
            android:textColor="@color/default_text_c929292"
            android:textSize="14dp"
            />

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/retryTextView"
            android:layout_width="112dp"
            android:layout_height="38dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_dialog_button01"
            android:gravity="center"
            android:text="@string/frag_error_btn"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:style="Medium"/>

        <View
            android:id="@+id/bottomMarginView"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            />


    </LinearLayout>
</RelativeLayout>