<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:dailyToolbar="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.daily.dailyhotel.view.DailyToolbarView
            android:id="@+id/toolbarView"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            android:elevation="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            dailyToolbar:underLineHeight="1dp"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/gourmetLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="2dp"
            android:padding="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarView">

            <View
                android:id="@+id/gourmetSuggestBackgroundView"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_fillrect_bf8f8f9_r2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/gourmetSuggestTextView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="7dp"
                android:gravity="center_vertical"
                android:hint="@string/label_search_gourmet_suggest_hint"
                android:textColor="@color/default_text_c323232"
                android:textColorHint="@color/default_text_c929292"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/search_ic_01_search"
                app:layout_constraintBottom_toBottomOf="@+id/gourmetSuggestBackgroundView"
                app:layout_constraintLeft_toLeftOf="@+id/gourmetSuggestBackgroundView"
                app:layout_constraintRight_toRightOf="@+id/gourmetSuggestBackgroundView"
                app:layout_constraintTop_toTopOf="@+id/gourmetSuggestBackgroundView"/>

            <View
                android:id="@+id/gourmetCalendarBackgroundView"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_fillrect_bf8f8f9_r2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gourmetSuggestBackgroundView"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/gourmetCalendarTextView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="7dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textSize="13dp"
                app:drawableCompatLeft="@drawable/search_ic_01_date"
                app:layout_constraintBottom_toBottomOf="@+id/gourmetCalendarBackgroundView"
                app:layout_constraintLeft_toLeftOf="@+id/gourmetCalendarBackgroundView"
                app:layout_constraintRight_toRightOf="@+id/gourmetCalendarBackgroundView"
                app:layout_constraintTop_toTopOf="@+id/gourmetCalendarBackgroundView"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/searchGourmetTextView"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_button_default_background"
                android:gravity="center"
                android:text="@string/label_search_do_search"
                android:textColor="@drawable/selector_button_default_text_color"
                android:textSize="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gourmetCalendarBackgroundView"/>
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/gradient_1dp_line_height_under_21"
            android:background="@color/default_line_ce7e7e7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gourmetLayout"/>

        <fragment
            android:id="@+id/searchGourmetFragment"
            android:name="com.daily.dailyhotel.screen.home.search.gourmet.SearchGourmetFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gourmetLayout"/>
    </android.support.constraint.ConstraintLayout>
</layout>