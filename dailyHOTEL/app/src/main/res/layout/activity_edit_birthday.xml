<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <include layout="@layout/toolbar_default"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_comment"
            android:gravity="left|center_vertical"
            android:lineSpacingExtra="-2dp"
            android:text="@string/message_edit_birthday_guide"
            android:textColor="@color/default_text_c323232"
            android:textSize="11dp"
            android:id="@+id/dailyTextView3"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/birthdayView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/label_birthday"
            android:textColor="@color/selector_label_textcolor"
            android:textSize="12dp"/>

        <com.twoheart.dailyhotel.widget.DailyEditText
            android:id="@+id/birthdayEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/selector_edittext_background"
            android:cursorVisible="false"
            android:hint="@string/label_option_benefit"
            android:inputType="text"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/default_text_c323232"
            android:textColorHint="@color/search_hint_text"
            android:textSize="16dp"
            android:theme="@style/EditTextTheme"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/confirmView"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_button_default_background"
            android:gravity="center"
            android:text="@string/label_confirm_birthday"
            android:textColor="@drawable/selector_button_default_text_color"
            android:textSize="17dp"
            dailyFont:style="Medium"/>
    </LinearLayout>
</RelativeLayout>