<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    >

    <!--<merge-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--tools:parentTag="android.support.constraint.ConstraintLayout">-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp">

        <com.daily.base.widget.DailyTextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:text="조식 정보"
            android:textColor="@color/default_text_c323232"
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            dailyFont:style="Medium"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:text="*조식 요금 현장 결제 필요"
            android:textColor="@color/default_text_c929292"
            android:textSize="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TableLayout
            android:id="@+id/breakfastTableLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/default_line_c323232"
            android:padding="1dp"
            android:stretchColumns="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/babyTextView"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@color/dialog_inputmobile_line"
                    android:freezesText="true"
                    android:gravity="center"
                    android:text="유아 (0~3세 이하)"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="14dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/default_text_c323232"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/babyPriceTextView"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:freezesText="true"
                    android:gravity="center"
                    android:text="무료"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="14dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </TableRow>

            <View
                android:layout_height="1dp"
                android:background="@color/default_text_c323232"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/childTextView"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@color/dialog_inputmobile_line"
                    android:freezesText="true"
                    android:gravity="center"
                    android:text="소아 (4~12세 이하)"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="14dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/default_text_c323232"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/childPriceTextView"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:freezesText="true"
                    android:gravity="center"
                    android:text="25,000원"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="14dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </TableRow>

            <View
                android:layout_height="1dp"
                android:background="@color/default_text_c323232"/>

            <TableRow>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/adultTextView"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@color/dialog_inputmobile_line"
                    android:freezesText="true"
                    android:gravity="center"
                    android:text="성인 (13세 이상)"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="14dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/default_text_c323232"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/adultPriceTextView"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:freezesText="true"
                    android:gravity="center"
                    android:text="59,000원"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="14dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/informationLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/breakfastTableLayout"/>
    </android.support.constraint.ConstraintLayout>
    <!--</merge>-->
</layout>