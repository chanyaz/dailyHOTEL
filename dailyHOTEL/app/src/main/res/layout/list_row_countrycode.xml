<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center_vertical">

    <com.twoheart.dailyhotel.view.widget.DailyButton
        android:id="@+id/radioButton"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/selector_countrycode_radio"
        android:clickable="false"
        android:duplicateParentState="true"
        android:focusable="false"/>

    <com.twoheart.dailyhotel.view.widget.DailyCountryCodeTextView
        android:id="@+id/countryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toLeftOf="@+id/codeView"
        android:layout_toRightOf="@+id/radioButton"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@drawable/selector_countrycode_country_textview_color"
        android:textSize="17dp"/>

    <com.twoheart.dailyhotel.view.widget.DailyCountryCodeTextView
        android:id="@+id/codeTextView"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@drawable/selector_countrycode_code_textview_color"
        android:textSize="17dp"/>
</RelativeLayout>