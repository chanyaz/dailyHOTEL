<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/awardImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            fresco:actualImageScaleType="centerInside"
            fresco:failureImage="@drawable/popup_ic_share_link"
            fresco:placeholderImage="@drawable/popup_ic_share_link"
            />

        <com.daily.base.widget.DailyTextView
            android:id="@+id/awardTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="데일리 트루어워즈\n'클래스가 다른 가성비 부분 수상"
            android:textColor="@color/default_text_c323232"
            android:textSize="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/awardImageView"
            app:layout_goneMarginTop="0dp"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/awardDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="이 스테이에 직접 투숙한 고객님들은\n 합리적인 가격에 가장 만족감을 많이 느끼셨습니다."
            android:textColor="@color/default_text_c929292"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/awardTitleTextView"
            app:layout_goneMarginTop="0dp"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/confirmTextView"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_dialog_button01"
            android:gravity="center"
            android:text="@string/dialog_btn_text_confirm"
            android:textColor="@color/default_text_cffffff"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/awardDescriptionTextView"
            dailyFont:style="Medium"/>

    </android.support.constraint.ConstraintLayout>

</layout>