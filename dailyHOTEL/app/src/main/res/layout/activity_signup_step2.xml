<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <include layout="@layout/toolbar_default"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/calendar_month_line">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="신속한 예약확인 및 안내를 위해 고객님의 휴대폰 번호를 입력하신 후 인증 처리를 해주세요."
                android:textColor="@color/curation_title_text"
                android:textSize="13dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/curation_information_line"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/curation_information_line"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/countryView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_country"
                    android:textColor="@color/hoteldetail_title_text"/>

                <com.twoheart.dailyhotel.widget.DailyEditText
                    android:id="@+id/countryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:hint="@string/label_necessary"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/hoteldetail_title_text"
                    android:textColorHint="@color/textView_textColor_disabled"
                    android:textSize="15dp"
                    android:theme="@style/EditTextTheme"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/spinnerImageView"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@+id/countryTextView"
                android:src="@drawable/spinner"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/phoneView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_phone_number_special_except"
                    android:textColor="@color/hoteldetail_title_text"/>

                <com.twoheart.dailyhotel.widget.DailyEditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:hint="@string/label_necessary"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/hoteldetail_title_text"
                    android:textColorHint="@color/textView_textColor_disabled"
                    android:textSize="15dp"
                    android:theme="@style/EditTextTheme"/>
            </LinearLayout>
        </LinearLayout>

        <com.twoheart.dailyhotel.widget.DailyCheckBox
            android:id="@+id/smsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:checked="true"
            android:gravity="center"
            android:text="SMS 수신 동의"
            android:textColor="@color/information_title"
            android:textSize="12dp"
            android:theme="@style/CheckBoxTheme"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/certificationNumberView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/dh_theme_color"
            android:gravity="center"
            android:text="인증번호 받기"
            android:textColor="@android:color/white"
            android:textSize="17dp"/>

        <LinearLayout
            android:id="@+id/verificationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/verificationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_certification_number_ndigit"
                android:textColor="@color/hoteldetail_title_text"/>

            <com.twoheart.dailyhotel.widget.DailyEditText
                android:id="@+id/verificationEditText"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:hint="@string/label_necessary"
                android:inputType="number"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/hoteldetail_title_text"
                android:textColorHint="@color/textView_textColor_disabled"
                android:textSize="15dp"
                android:theme="@style/EditTextTheme"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/navibar_gradation"/>

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/signUpView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dh_theme_color"
        android:gravity="center"
        android:text="회원가입 완료"
        android:textColor="@android:color/white"
        android:textSize="17dp"/>
</RelativeLayout>