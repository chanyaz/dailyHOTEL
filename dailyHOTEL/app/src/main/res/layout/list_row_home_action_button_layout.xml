<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        >

        <View
            android:id="@+id/verticalLine"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@color/default_line_cf0f0f0"/>

        <RelativeLayout
            android:id="@+id/stayButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toLeftOf="@id/verticalLine"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginRight="14.5dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.daily.base.widget.DailyImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="#ccc"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/ic_home_category_01_hotel"/>

                <LinearLayout
                    android:id="@+id/stayButtonTextLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/stayTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_home_stay_menu_title"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="14dp"
                        dailyFont:style="Medium"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/stayDoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/label_home_stay_menu_description"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gourmetButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toRightOf="@id/verticalLine"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4.5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.daily.base.widget.DailyImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="#ccc"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/ic_home_category_02_gourmet"/>

                <LinearLayout
                    android:id="@+id/gourmetButtonTextLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/gourmetTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_home_gourmet_menu_title"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="14dp"
                        dailyFont:style="Medium"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/gourmetDoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/label_home_gourmet_menu_description"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@id/buttonLayout"
        android:background="@color/default_line_ce7e7e7"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/gradient_1dp_line_height_under_21"
        android:layout_below="@id/buttonLayout"
        android:background="@color/default_line_ce7e7e7"/>
</merge>