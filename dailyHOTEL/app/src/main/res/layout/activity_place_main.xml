<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    xmlns:dailyToolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:elevation="0dp">

        <com.daily.dailyhotel.view.DailyToolbarView
            android:id="@+id/toolbarView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            dailyToolbar:underLineHeight="1px"
            app:layout_scrollFlags="scroll|snap|enterAlways"/>

        <LinearLayout
            android:id="@+id/informationBarLayout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:baselineAligned="false"
            android:layout_toLeftOf="@+id/searchTextView"
            android:orientation="horizontal"
            android:padding="8dp">

            <RelativeLayout
                android:id="@+id/regionTextLayout"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/shape_fillrect_leeeef0_bf8f8f9"
                android:paddingLeft="9dp"
                android:paddingRight="9dp">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/regionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="false"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="12dp"
                    app:drawableCompatLeft="@drawable/navibar_ic_s_region"
                    app:drawableCompatRight="@drawable/navibar_ic_v"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dateTextLayout"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/shape_fillrect_leeeef0_bf8f8f9"
                android:paddingLeft="9dp"
                android:paddingRight="9dp">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/dateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="12dp"
                    app:drawableCompatLeft="@drawable/navibar_ic_s_calendar"
                    app:drawableCompatRight="@drawable/navibar_ic_v"/>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/appBarUnderline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_line_ce7e7e7"/>

        <FrameLayout
            android:id="@+id/categoryLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/layerlist_fillrect_ule7e7e7_bffffff"
            android:visibility="gone">

            <android.support.design.widget.TabLayout
                android:id="@+id/categoryTabLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                app:tabIndicatorHeight="2dp"
                app:tabMinWidth="0dp"
                app:tabMode="scrollable"
                app:tabPadding="0dp"
                app:tabSelectedTextColor="@color/default_text_cb70038"
                app:tabTextAppearance="@style/CategoryTabLayoutTextAppearance"
                app:tabTextColor="@color/default_text_c929292"/>
        </FrameLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <LinearLayout
        android:id="@+id/bottomOptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/viewTypeOptionImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="@drawable/fab_01_map"/>

        <ImageView
            android:id="@+id/filterOptionImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/selector_floatingactionview"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tooltipLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingLeft="130dp"
        android:visibility="gone">

        <com.daily.base.widget.DailyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="83dp"
            android:background="@drawable/tooltip_top_date"
            android:gravity="center"
            android:text="@string/label_home_category_tooltip"
            android:textColor="@color/default_text_c323232"
            android:textSize="13dp"
            dailyFont:style="Medium"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
