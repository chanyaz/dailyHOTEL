<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/default_placeholder"
                app:layout_scrollFlags="scroll">

    <com.twoheart.dailyhotel.widget.DailyLoopViewPager
        android:id="@+id/loopViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/pagerCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loopViewPager"
        android:layout_alignBottom="@+id/loopViewPager"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_home_event_count_background"
        android:gravity="center"
        android:textColor="@color/white_a50"
        android:textSize="11dp"
        android:visibility="gone"
        dailyFont:style="Medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/default_line_cdcdcdd"/>
</RelativeLayout>