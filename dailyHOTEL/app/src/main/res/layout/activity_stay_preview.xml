<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBarLayout">

        <LinearLayout
            android:id="@+id/popupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_fillrect_bffffff_r4"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/placeGradeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/black"
                android:gravity="center"
                android:paddingBottom="1px"
                android:paddingLeft="5.5dp"
                android:paddingRight="5.5dp"
                android:paddingTop="2px"
                android:textColor="@color/white"
                android:textSize="11dp"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/placeNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/default_text_c323232"
                android:textSize="18dp"
                dailyFont:style="Medium"/>

            <LinearLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleDraweeView01"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        fresco:actualImageScaleType="centerCrop"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleDraweeView02"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        fresco:actualImageScaleType="centerCrop"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleDraweeView03"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        fresco:actualImageScaleType="centerCrop"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleDraweeView04"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        fresco:actualImageScaleType="centerCrop"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/bookingView"
                        android:orientation="vertical">

                        <com.daily.base.widget.DailyTextView
                            android:id="@+id/productCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/default_text_c323232"
                            android:textSize="12dp"/>

                        <com.daily.base.widget.DailyTextView
                            android:id="@+id/priceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/default_text_cb70038"
                            android:textSize="13dp"
                            dailyFont:style="Medium"/>
                    </LinearLayout>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/bookingView"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_fillrect_bb70038_r2"
                        android:gravity="center"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:text="@string/label_preview_booking"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        dailyFont:style="Medium"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/moreInformationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/default_line_cdcdcdd"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/trueReviewCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="12dp"/>

                    <ImageView
                        android:id="@+id/dotView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_toRightOf="@+id/trueReviewCountTextView"
                        android:visibility="gone"
                        app:srcCompat="@drawable/info_ic_text_dot_grey"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/wishCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/dotView"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="12dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <com.daily.base.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_lp_01_wishlist_off"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="-5dp"
                android:text="@string/label_preview_wish"
                android:textColor="@color/white"
                android:textSize="13dp"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_lp_02_share"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="-5dp"
                android:text="@string/label_preview_kakao"
                android:textColor="@color/white"
                android:textSize="13dp"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_lp_03_direction"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="-5dp"
                android:text="@string/label_preview_map"
                android:textColor="@color/white"
                android:textSize="13dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/closeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/navibar_ic_x_white"/>
    </LinearLayout>
</RelativeLayout>