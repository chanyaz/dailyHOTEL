<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="#ffffff"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/messageTextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frag_error_network_unavail"
        android:textColor="@color/network_error_text"
        android:textSize="16dp"
        android:drawableTop="@drawable/dh_logo_error"
        android:textStyle="bold"
        android:drawablePadding="13dp"
        android:layout_centerInParent="true"/>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/btn_error"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/shape_button_common_background"
        android:gravity="center"
        android:text="@string/frag_error_btn"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>