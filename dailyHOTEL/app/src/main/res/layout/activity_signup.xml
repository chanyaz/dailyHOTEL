<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="#ffffff"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <include layout="@layout/toolbar_default"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.twoheart.dailyhotel.view.widget.DailyEditText
                android:id="@+id/et_signup_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/act_signup_phone"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:maxLines="1"
                android:textColorHint="@color/textView_textColor_disabled"
                android:textSize="18dp"/>

            <View
                android:id="@+id/fakeMobileEditView"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </FrameLayout>


        <com.twoheart.dailyhotel.view.widget.DailyEditText
            android:id="@+id/et_signup_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="@string/act_signup_email"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@color/textView_textColor_disabled"
            android:textSize="18dp"/>

        <com.twoheart.dailyhotel.view.widget.DailyEditText
            android:id="@+id/et_signup_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="@string/act_signup_name"
            android:inputType="text"
            android:maxLength="20"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@color/textView_textColor_disabled"
            android:textSize="18dp"/>

        <com.twoheart.dailyhotel.view.widget.DailyEditText
            android:id="@+id/et_signup_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="@string/act_signup_pwd"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@color/textView_textColor_disabled"
            android:textSize="18dp"/>

        <com.twoheart.dailyhotel.view.widget.DailyEditText
            android:id="@+id/et_signup_recommender"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="@string/act_signup_code"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@color/textView_textColor_disabled"
            android:textSize="18dp"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_button_common_background"
            android:gravity="center"
            android:text="@string/act_signup_btn_signup"
            android:textColor="@android:color/white"
            android:textSize="17dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/tv_signup_agreement"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/act_signup_terms"
                android:textColor="@color/textView_textColor_sub"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/tv_signup_personal_info"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/act_signup_privacy"
                android:textColor="@color/textView_textColor_sub"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/navibar_gradation"/>
</RelativeLayout>