<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBarLayout">

        <LinearLayout
            android:id="@+id/popupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_fillrect_bffffff_r4"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/placeGradeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/default_background_c929292"
                    android:gravity="center"
                    android:paddingBottom="1px"
                    android:paddingLeft="5.5dp"
                    android:paddingRight="5.5dp"
                    android:paddingTop="2px"
                    android:textColor="@android:color/white"
                    android:textSize="11dp"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/placeSubGradeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1px"
                    android:background="@color/default_background_ca9a9a9"
                    android:gravity="center"
                    android:paddingBottom="1px"
                    android:paddingLeft="5.5dp"
                    android:paddingRight="5.5dp"
                    android:paddingTop="2px"
                    android:textColor="@android:color/white"
                    android:textSize="11dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/placeNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/default_text_c323232"
                android:textSize="18dp"
                dailyFont:style="Medium"/>

            <LinearLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleDraweeView01"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        fresco:actualImageScaleType="centerCrop"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleDraweeView02"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        fresco:actualImageScaleType="centerCrop"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleDraweeView03"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        fresco:actualImageScaleType="centerCrop"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleDraweeView04"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        fresco:actualImageScaleType="centerCrop"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/bookingView"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/bookingView"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.daily.base.widget.DailyTextView
                                android:id="@+id/productCountTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/default_text_c323232"
                                android:textSize="12dp"/>

                            <com.daily.base.widget.DailyTextView
                                android:id="@+id/stayAverageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="@string/label_preview_extendedstay_average"
                                android:textColor="@color/default_text_c929292"
                                android:textSize="10dp"
                                android:visibility="gone"/>
                        </LinearLayout>

                        <com.daily.base.widget.DailyTextView
                            android:id="@+id/priceTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/default_text_cb70038"
                            android:textSize="13dp"
                            dailyFont:style="Medium"/>
                    </LinearLayout>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/bookingTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_fillrect_bb70038_r2"
                        android:gravity="center"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:text="@string/label_preview_booking"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        dailyFont:style="Medium"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/moreInformationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/default_line_cdcdcdd"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/trueReviewCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="12dp"/>

                    <ImageView
                        android:id="@+id/dotView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_toRightOf="@+id/trueReviewCountTextView"
                        android:visibility="gone"
                        app:srcCompat="@drawable/info_ic_text_dot_grey"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/wishCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/dotView"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="12dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wishPopupLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.11"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/wishPopupTextView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_filloval_ccdb2453"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:letterSpacing="0"
                android:lineSpacingExtra="-3dp"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:text="@string/wishlist_detail_add_message"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:drawableCompatTop="@drawable/ic_heart_fill_l"
                dailyFont:style="Medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.22"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/wishTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="22dp"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/ic_lp_01_wishlist_off"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="-5dp"
                android:paddingBottom="5dp"
                android:text="@string/label_preview_add_wish"
                android:textColor="@color/white"
                android:textSize="12dp"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/shareKakaoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/ic_lp_02_share"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="-5dp"
                android:paddingBottom="5dp"
                android:text="@string/label_preview_kakao"
                android:textColor="@color/white"
                android:textSize="12dp"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/mapView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/ic_lp_03_direction"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="-5dp"
                android:paddingBottom="5dp"
                android:text="@string/label_preview_map"
                android:textColor="@color/white"
                android:textSize="12dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/closeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/navibar_ic_x_white"/>
    </LinearLayout>
</RelativeLayout>