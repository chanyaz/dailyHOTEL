<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_bg_white"
        android:orientation="vertical"
        android:paddingBottom="22dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"
                android:src="@drawable/popup_ic_alert_signature"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingRight="16dp"
                android:text="@string/dialog_notice2"
                android:textColor="@color/dialog_title_text"
                android:textSize="17dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/messageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="@color/dialog_message_text"
            android:textSize="13dp"/>
    </LinearLayout>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/positiveTextView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/popup_btn_on"
        android:gravity="center"
        android:text="@string/dialog_btn_text_confirm"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"/>

</LinearLayout>