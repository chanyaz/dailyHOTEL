<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/default_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_line_ce7e7e7"/>

    <RelativeLayout
        android:id="@+id/contentsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simpleDraweeView"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            fresco:actualImageScaleType="centerCrop"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/productNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@id/simpleDraweeView"
            android:textColor="@color/hoteldetail_title_text"
            android:textSize="15dp"
            dailyFont:style="Medium"/>

        <LinearLayout
            android:id="@+id/contentsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productNameTextView"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/default_line_ce7e7e7"/>

    <RelativeLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/discountPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/default_text_cb70038"
            android:textSize="15dp"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/discountPriceTextView"
            android:textColor="@color/default_text_c929292"
            android:textSize="11dp"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/detailView"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/reservationView"
            android:background="@drawable/shape_fillrect_ldcdcdd_bffffff_r1"
            android:gravity="center"
            android:text="@string/label_detail"
            android:textColor="@color/default_text_c323232"
            android:textSize="16dp"
            dailyFont:style="Medium"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/reservationView"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_fillrect_bb70038_r2"
            android:gravity="center"
            android:text="@string/label_gourmet_product_detail_reservation"
            android:textColor="@color/white"
            android:textSize="16dp"
            dailyFont:style="Medium"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_line_ce7e7e7"/>
</LinearLayout>