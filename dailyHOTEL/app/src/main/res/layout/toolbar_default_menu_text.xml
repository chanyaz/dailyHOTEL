<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/white"
    android:elevation="2dp">

    <com.daily.base.widget.DailyImageView
        android:id="@+id/backImageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:srcCompat="@drawable/navibar_ic_back_01_black"/>

    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <com.daily.base.widget.DailyTextView
            android:id="@+id/menu2View"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@drawable/selector_calendar_confirm_color"
            android:textSize="15dp"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/menu1View"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@drawable/selector_calendar_confirm_color"
            android:textSize="15dp"/>
    </LinearLayout>

    <com.daily.base.widget.DailyTextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/menuLayout"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="72dp"
        android:singleLine="true"
        android:textColor="@color/actionbar_title"
        android:textSize="18dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/gradient_1dp_line_height_under_21"
        android:layout_alignParentBottom="true"
        android:background="@color/default_line_ce7e7e7"/>
</RelativeLayout>