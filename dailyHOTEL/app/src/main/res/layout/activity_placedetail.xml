<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/defaultHotelImageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.twoheart.dailyhotel.view.LoopViewPager
            android:id="@+id/defaultHotelImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_hoteldetail_viewpager"/>

        <com.twoheart.dailyhotel.view.widget.DailyViewPagerIndicator
            android:id="@+id/viewpagerIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/defaultHotelImageView"
            android:layout_alignBottom="@+id/defaultHotelImageView"
            android:paddingBottom="13dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/imageViewBlur"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_alignBottom="@id/defaultHotelImageLayout"
        android:background="@drawable/blur"
        android:visibility="invisible"/>

    <com.twoheart.dailyhotel.view.widget.DailyPlaceDetailListView
        android:id="@+id/hotelListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="#ffffff"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <include layout="@layout/toolbar_default_menu"/>

    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/roomTypeBackgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textView_textColor_shadow_soldout"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ticketTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_above="@+id/bottomLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/room_select_x"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ticketTypeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:scrollbars="vertical"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/bookingTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/actionbar_hamburger"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:visibility="gone"/>

        <com.twoheart.dailyhotel.view.widget.DailyButton
            android:id="@+id/soldoutTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/hoteldetail_soldout_background"
            android:gravity="center"
            android:text="@string/act_hotel_soldout"
            android:textColor="@color/hoteldetail_soldout_text"
            android:textSize="20dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:id="@+id/toolbarUnderline"
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/navibar_gradation"/>
</RelativeLayout>