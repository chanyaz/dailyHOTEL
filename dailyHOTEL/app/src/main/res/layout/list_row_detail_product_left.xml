<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/default_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_line_cf0f0f0"/>

    <RelativeLayout
        android:id="@+id/contentsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simpleDraweeView"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_fillrect_l000000_a10"
            android:padding="1px"
            fresco:actualImageScaleType="centerCrop"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/productNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/simpleDraweeView"
            android:textColor="@color/default_text_c323232"
            android:textSize="15dp"
            dailyFont:style="Medium"/>

        <LinearLayout
            android:id="@+id/contentsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productNameTextView"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/simpleDraweeView"
            android:orientation="vertical"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/default_line_cdcdcdd"/>

    <RelativeLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp">

        <com.daily.base.widget.DailyTextView
            android:id="@+id/discountPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/default_text_ceb2135"
            android:textSize="15dp"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/discountPriceTextView"
            android:textColor="@color/default_text_cc5c5c5"
            android:textSize="12dp"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/detailView"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/reservationView"
            android:background="@drawable/shape_fillrect_le8e8e9_bffffff"
            android:gravity="center"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="@string/label_detail"
            android:textColor="@color/default_text_c666666"
            android:textSize="14dp"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/reservationView"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_fillrect_beb2135_r2"
            android:gravity="center"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="@string/label_gourmet_product_detail_reservation"
            android:textColor="@color/white"
            android:textSize="14dp"
            dailyFont:style="Medium"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_line_cf0f0f0"/>
</LinearLayout>