<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    >

    <!--<merge-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--tools:parentTag="android.support.constraint.ConstraintLayout">-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp">

        <com.daily.base.widget.DailyTextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:text="@string/label_business_benefit"
            android:textColor="@color/default_text_c323232"
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            dailyFont:style="Medium"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/default_background_c99cfad80"
            app:layout_constraintBottom_toBottomOf="@+id/benefitContentsLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/benefitTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="17dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="-2dp"
            android:text="DAILY HAPPY PRICE + 80,000원 할인 쿠폰 디페네핏 타이틀 "
            android:textColor="@color/default_text_cbe945b"
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            dailyFont:style="Medium"/>

        <LinearLayout
            android:id="@+id/benefitContentsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/benefitTitleTextView">

            <com.daily.base.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:freezesText="true"
                android:lineSpacingExtra="-2dp"
                android:text="예약 가능 기간 : 2018.03.08 ~ 2018.03.31"
                android:textColor="@color/default_background_section_c323232"
                android:textSize="12dp"
                app:drawableCompatLeft="@drawable/ic_check_xs"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:freezesText="true"
                android:lineSpacingExtra="-2dp"
                android:text="예약 가능 기간 : 2018.03.08 ~ 2018.03.31"
                android:textColor="@color/default_background_section_c323232"
                android:textSize="12dp"
                app:drawableCompatLeft="@drawable/ic_check_xs"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:freezesText="true"
                android:lineSpacingExtra="-2dp"
                android:text="예약 가능 기간 : 2018.03.08 ~ 2018.03.31"
                android:textColor="@color/default_background_section_c323232"
                android:textSize="12dp"
                app:drawableCompatLeft="@drawable/ic_check_xs"/>

            <com.daily.base.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:freezesText="true"
                android:lineSpacingExtra="-2dp"
                android:text="즉시 할인 쿠폰 80,000원 적용시, 고객 실결제가 109,900~ 원으로 아주 싼가격에 대응가능"
                android:textColor="@color/default_background_section_c323232"
                android:textSize="12dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="3dp"
                app:drawableCompatLeft="@drawable/ic_check_xs"
                app:drawableCompatLeftAndRightFixedFirstLine="true"/>
        </LinearLayout>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/downloadCouponTextView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_rect_defaultcolor"
            android:gravity="center"
            android:text="80,000원 할인쿠폰 다운받기"
            android:textColor="@color/default_text_c323232"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/benefitContentsLayout"/>
    </android.support.constraint.ConstraintLayout>
    <!--</merge>-->
</layout>