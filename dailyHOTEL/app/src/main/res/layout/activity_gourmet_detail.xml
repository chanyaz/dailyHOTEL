<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    xmlns:dailyLineIndicator="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/transImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,4:3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        fresco:actualImageScaleType="centerCrop"/>

    <com.twoheart.dailyhotel.widget.DailyLoopViewPager
        android:id="@+id/defaultLoopViewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,4:3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/transGradientView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,4:3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/img_detail_bottom_gradient"
        app:layout_constraintBottom_toBottomOf="@id/defaultLoopViewPager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/viewPagerBottomLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/defaultLoopViewPager"/>

    <com.twoheart.dailyhotel.widget.DailyLineIndicator
        android:id="@+id/viewpagerIndicator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toTopOf="@id/viewPagerBottomLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        dailyLineIndicator:indicatorBackgroundColor="@color/white_a40"
        dailyLineIndicator:indicatorColor="@color/white"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toTopOf="@id/viewpagerIndicator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <View
            android:id="@+id/moreIconView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/detail_ic_more_img"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:background="@drawable/background_image_information_detail"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingBottom="7dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="7dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="invisible"/>
    </RelativeLayout>

    <View
        android:id="@+id/transGradientTopView"
        android:layout_width="0dp"
        android:layout_height="112dp"
        android:background="@drawable/img_detail_gradient"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/stickerSimpleDraweeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="52dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/defaultLoopViewPager"
        app:layout_constraintTop_toTopOf="@+id/defaultLoopViewPager"/>

    <LinearLayout
        android:id="@+id/transTitleLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defaultLoopViewPager">

        <com.daily.base.widget.DailyTextView
            android:id="@+id/transGradeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:paddingBottom="1px"
            android:paddingLeft="5.5dp"
            android:paddingRight="5.5dp"
            android:paddingTop="2px"
            android:textColor="@android:color/white"
            android:textSize="11dp"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/transNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:freezesText="true"
            android:gravity="center_vertical"
            android:textColor="@color/hoteldetail_title_text"
            android:textSize="18dp"
            dailyFont:style="Medium"/>
    </LinearLayout>

    <com.twoheart.dailyhotel.widget.DailyPlaceDetailScrollView
        android:id="@+id/placeScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="false"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/bottomLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/backView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/navibar_ic_back_01_black"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/wishTextView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_height"
            android:layout_toLeftOf="@+id/trueVRView"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="13dp"
            app:drawableCompatRight="@drawable/vector_navibar_ic_heart_off_white"/>

        <ImageView
            android:id="@+id/trueVRView"
            android:layout_width="30dp"
            android:layout_height="@dimen/toolbar_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/shareView"
            android:scaleType="center"
            android:tint="@color/white"
            android:visibility="gone"
            app:srcCompat="@drawable/navibar_ic_treuvr"/>

        <ImageView
            android:id="@+id/shareView"
            android:layout_width="30dp"
            android:layout_height="@dimen/toolbar_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:scaleType="center"
            android:tint="@color/white"
            app:srcCompat="@drawable/navibar_ic_share_01_black"/>
    </RelativeLayout>

    <include
        layout="@layout/toolbar_detail_menu"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:elevation="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@drawable/shape_gradient_bottom_up"
        app:layout_constraintBottom_toTopOf="@+id/bottomLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/gradient_1dp_line_height_under_21"
            android:background="@color/default_line_ce7e7e7"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/bookingTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/detail_button_min_left_margin"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_fillrect_bb70038_r2"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:visibility="gone"
            dailyFont:style="Medium"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/soldoutTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/shape_button_disable"
            android:gravity="center"
            android:text="@string/act_hotel_soldout"
            android:textColor="@color/default_text_cc5c5c5"
            android:textSize="17dp"
            android:visibility="gone"
            dailyFont:style="Medium"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/wishListPopupScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/transparent"
        android:fillViewport="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.11"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/wishListPopupView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/shape_filloval_ccdb2453"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:letterSpacing="0"
                android:lineSpacingExtra="-3dp"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:text="@string/wishlist_detail_add_message"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:drawableCompatTop="@drawable/ic_heart_fill_l"
                dailyFont:style="Medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.22"/>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/trueVRTooltipView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.daily.base.widget.DailyTextView
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="32dp"
            android:background="@drawable/tooltip_top_vr"
            android:text="@string/label_preview_vr_guide"
            android:textColor="@color/default_text_c323232"
            android:textSize="13dp"
            dailyFont:style="Medium"/>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>