<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomMenuBarLayout"/>

    <include
        layout="@layout/view_menubar"/>

    <RelativeLayout
        android:id="@+id/tooltipLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17dp"
            android:background="@drawable/tooltip"
            android:gravity="center"
            android:text="@string/message_wishlist_tooltip"
            android:textColor="@color/default_text_c323232"
            android:textSize="13dp"
            dailyFont:style="Medium"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/splashLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background_cf1f2f3"
        android:visibility="visible">

        <com.twoheart.dailyhotel.widget.DailyImageView
            android:id="@+id/splashImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="26dp"
            android:scaleType="center"/>
    </RelativeLayout>
</RelativeLayout>