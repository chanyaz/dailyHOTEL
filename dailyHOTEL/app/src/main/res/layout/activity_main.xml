<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/splashLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:layout_marginTop="85dp"
            android:background="@drawable/navibar_gradation"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomMenuBarLayout"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/menubar_height"
            android:layout_marginTop="85dp"
            android:background="@color/splash_background"
            android:scaleType="center"
            android:src="@drawable/splash_logo"/>
    </FrameLayout>

    <include layout="@layout/view_menubar"/>

    <FrameLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomMenuBarLayout"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tapbar_gradation"
        android:layout_marginBottom="@dimen/menubar_height"/>

</RelativeLayout>