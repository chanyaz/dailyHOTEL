<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/toolbar_default_close"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/buttonLayout">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
    
    <RelativeLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true">

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="@color/curation_information_line"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/inviteFriendsTextView"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/btn_normal_gradation"
            android:gravity="center"
            android:text="@string/dialog_btn_text_confirm"
            android:textColor="@color/white"
            android:textSize="17dp"
            dailyFont:style="Medium"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/navibar_gradation"/>
</RelativeLayout>