<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:dailyFont="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/topLineView"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/default_line_cf0f0f0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/roomInformationLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="20dp"
            android:paddingLeft="9dp"
            android:paddingRight="12dp"
            android:paddingTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topLineView">

            <com.daily.base.widget.DailyButton
                android:id="@+id/radioButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_radio_button"
                android:clickable="false"
                android:duplicateParentState="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/roomTypeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="-2dp"
                android:maxLines="2"
                android:textColor="@color/default_text_c323232"
                android:textSize="15dp"
                app:layout_constraintLeft_toRightOf="@id/radioButton"
                app:layout_constraintRight_toLeftOf="@+id/discountPriceTextView"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/discountPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_text_c323232"
                android:textSize="15dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                dailyFont:style="Medium"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/optionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/priceTextView"
                android:ellipsize="end"
                android:freezesText="true"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/default_text_c929292"
                android:textSize="12dp"
                app:layout_constraintLeft_toLeftOf="@id/roomTypeTextView"
                app:layout_constraintRight_toLeftOf="@id/discountPriceTextView"
                app:layout_constraintTop_toBottomOf="@+id/roomTypeTextView"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:freezesText="true"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/default_text_c929292"
                android:textSize="12dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/discountPriceTextView"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/amenitiesTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:freezesText="true"
                android:maxLines="2"
                android:textColor="@color/hoteldetail_room_simpleinfo_text"
                android:textSize="12dp"
                app:layout_constraintLeft_toLeftOf="@id/roomTypeTextView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/optionTextView"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/benefitTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:freezesText="true"
                android:lineSpacingExtra="-1dp"
                android:maxLines="2"
                android:textColor="@color/dh_theme_color"
                android:textSize="12dp"
                app:layout_constraintLeft_toLeftOf="@id/roomTypeTextView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/amenitiesTextView"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/nrdTextView"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_fillrect_bf2f2f3"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:singleLine="true"
                android:text="@string/message_detail_nrd"
                android:textColor="@color/default_text_c323232"
                android:textSize="11dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@id/roomTypeTextView"
                app:layout_constraintTop_toBottomOf="@id/benefitTextView"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/rewardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawablePadding="3dp"
                android:gravity="bottom"
                android:text="@string/label_used_reward"
                android:textColor="@color/default_text_ce9a230"
                android:textSize="12dp"
                android:visibility="gone"
                app:drawableCompatLeft="@drawable/vector_r_ic_xs_14"
                app:layout_constraintLeft_toLeftOf="@id/roomTypeTextView"
                app:layout_constraintTop_toBottomOf="@+id/nrdTextView"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/orTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="@string/label_or"
                android:textColor="@color/default_text_c929292"
                android:textSize="12dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/rewardTextView"
                app:layout_constraintLeft_toRightOf="@+id/rewardTextView"
                app:layout_constraintTop_toTopOf="@+id/rewardTextView"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/couponTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="3dp"
                android:drawablePadding="3dp"
                android:gravity="bottom"
                android:text="@string/label_can_use_coupon"
                android:textColor="@color/default_text_cf6675e"
                android:textSize="12dp"
                android:visibility="gone"
                app:drawableCompatLeft="@drawable/vector_ic_coupon_available"
                app:layout_constraintLeft_toRightOf="@+id/orTextView"
                app:layout_constraintTop_toBottomOf="@+id/nrdTextView"
                app:layout_goneMarginLeft="0dp"/>
        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/underLineView"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/default_line_cf0f0f0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roomInformationLayout"/>
    </android.support.constraint.ConstraintLayout>
</layout>