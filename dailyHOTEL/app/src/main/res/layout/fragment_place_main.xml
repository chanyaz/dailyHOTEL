<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white"
        android:padding="8dp">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/searchTextView"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_fillrect_lf0f0f0_bf8f8f9"
            android:drawableLeft="@drawable/navibar_ic_s_search"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="9dp"
            android:singleLine="true"
            android:text="@string/label_search"
            android:textColor="@color/default_text_c323232"
            android:textSize="12dp"/>

        <RelativeLayout
            android:id="@+id/regionTextLayout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/dateTextLayout"
            android:layout_toRightOf="@+id/searchTextView"
            android:background="@drawable/shape_fillrect_lf0f0f0_bf8f8f9"
            android:paddingLeft="9dp"
            android:paddingRight="9dp">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/regionTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="false"
                android:drawableLeft="@drawable/navibar_ic_s_region"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textSize="12dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/navibar_ic_v"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dateTextLayout"
            android:layout_width="134dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_fillrect_lf0f0f0_bf8f8f9"
            android:paddingLeft="9dp"
            android:paddingRight="9dp">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/dateTextView"
                android:layout_width="134dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/navibar_ic_s_calendar"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textSize="12dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/navibar_ic_v"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/toolbarUnderLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbarLayout"
        android:background="@color/default_line_ce7e7e7"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/categoryTabLayout"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_below="@+id/toolbarUnderLine"
        android:background="@color/white"
        android:visibility="gone"
        app:tabIndicatorHeight="0dp"
        app:tabMinWidth="80dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/default_text_c900034"
        app:tabTextAppearance="@style/CategoryTabLayoutTextAppearance"
        app:tabTextColor="@color/default_text_c929292"/>

    <View
        android:id="@+id/underLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/categoryTabLayout"
        android:background="@color/default_line_ce7e7e7"
        android:visibility="gone"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/underLine"/>

    <LinearLayout
        android:id="@+id/bottomOptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="59dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/viewTypeOptionImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="@drawable/fab_01_map"
            android:paddingLeft="52dp"
            android:paddingTop="17dp"
            android:text="@string/label_map"/>

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/filterOptionImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/selector_floatingactionview"
            android:paddingLeft="46dp"
            android:paddingTop="17dp"
            android:text="@string/label_filter"/>
    </LinearLayout>
</RelativeLayout>
