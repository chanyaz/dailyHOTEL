<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/searchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.twoheart.dailyhotel.widget.DailyEditText
                    android:id="@+id/searchEditText"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/default_background_cf4f4f6"
                    android:drawableLeft="@drawable/search_ic_01_search"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="6dp"
                    android:paddingRight="24dp"
                    android:singleLine="true"
                    android:textColor="@color/default_text_c323232"
                    android:textColorHint="@color/default_text_cc5c5c5"
                    android:textSize="13dp"/>

                <ImageView
                    android:id="@+id/deleteView"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="14dp"
                    android:src="@drawable/search_ic_01_delete"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_margin="8dp"
                android:background="@color/default_background_cf4f4f6">

                <ImageView
                    android:id="@+id/calendarImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search_ic_01_date"
                    />

                <ImageView
                    android:id="@+id/calendarDownArrowView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/navibar_m_ic_v"
                    />

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/calendarTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toLeftOf="@id/calendarDownArrowView"
                    android:layout_toRightOf="@id/calendarImageView"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="13dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/default_line_ce7e7e7"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/searchAroundLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:layout_below="@+id/searchLayout"
            android:layout_marginTop="9dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/aroundIconView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/search_ic_01_surrounding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/aroundIconView"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/text01View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="13dp"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/text02View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:text="@string/label_search_need_to_agree_termsoflocation"
                    android:textColor="@color/search_hint_text"
                    android:textSize="11dp"
                    android:visibility="visible"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/default_line_cf0f0f0"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/default_line_cf0f0f0"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recentSearchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchAroundLayout"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:visibility="visible">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/label_search_recentsearches"
                android:textColor="@color/search_hint_text"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/deleteAllView"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:text="@string/label_search_deleteall"
                android:textColor="@drawable/selector_search_deleteall_textcolor"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/deleteAllView"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/default_line_cdcdcdd"/>

            <com.twoheart.dailyhotel.widget.DailyScrollView
                android:id="@+id/recentSearchesScrollLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deleteAllView"
                android:fadingEdge="none">

                <LinearLayout
                    android:id="@+id/contentsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical"/>
            </com.twoheart.dailyhotel.widget.DailyScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/default_line_cf0f0f0"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/recentSearchesScrollLayout"
                android:background="@color/default_line_cf0f0f0"/>
        </RelativeLayout>

        <com.twoheart.dailyhotel.widget.DailyScrollView
            android:id="@+id/autoCompleteScrollLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchAroundLayout"
            android:layout_marginTop="10dp"
            android:fadingEdge="none"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/autoCompleteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </com.twoheart.dailyhotel.widget.DailyScrollView>
    </RelativeLayout>
</RelativeLayout>