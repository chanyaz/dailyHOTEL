<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_default"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_line_cf0f0f0"/>

        <RelativeLayout
            android:id="@+id/naverLinkView"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/label_link_naver"
                android:textColor="@color/information_title"
                android:textSize="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/default_line_cdcdcdd"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/youtubeLinkView"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/label_link_youtube"
                android:textColor="@color/information_title"
                android:textSize="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/default_line_cdcdcdd"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/facebookLinkView"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/label_link_facebook"
                android:textColor="@color/information_title"
                android:textSize="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/default_line_cdcdcdd"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/instagramLinkView"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/label_link_instagram"
                android:textColor="@color/information_title"
                android:textSize="15dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_line_cf0f0f0"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/homeButtonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/btn_back_to_home"/>
</RelativeLayout>