<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:dailyFont="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_a67">

        <FrameLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white">

            <com.daily.base.widget.DailyTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="100dp"
                android:gravity="left|center_vertical"
                android:text="@string/activity_curation_title"
                android:textColor="@color/default_text_c323232"
                android:textSize="18dp"/>

            <ImageView
                android:id="@+id/closeView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:srcCompat="@drawable/navibar_ic_x"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/default_line_ce7e7e7"/>
        </FrameLayout>

        <ScrollView
            android:id="@+id/contentScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomLayout"
            android:layout_below="@+id/titleLayout"
            android:background="@color/white"
            android:fadingEdge="none">

            <LinearLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <com.daily.base.widget.DailyTextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:background="@color/default_background_section_cf2f2f3"
                            android:gravity="center"
                            android:text="@string/label_sort_by"
                            android:textColor="@color/default_text_c929292"
                            android:textSize="13dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentTop="true"
                            android:background="@color/default_line_ce7e7e7"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentBottom="true"
                            android:background="@color/default_line_ce7e7e7"/>
                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/sortRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="74dp"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <com.daily.base.widget.DailyRadioButton
                            android:id="@+id/rankCheckView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:paddingTop="12dp"
                            android:text="@string/label_sort_by_rank"
                            android:textColor="@color/selector_curation_textcolor"
                            android:textSize="11dp"
                            app:drawableCompatTop="@drawable/f_ic_sort_06"/>

                        <com.daily.base.widget.DailyRadioButton
                            android:id="@+id/distanceCheckView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:paddingTop="12dp"
                            android:text="@string/label_sort_by_distance"
                            android:textColor="@color/selector_curation_textcolor"
                            android:textSize="11dp"
                            app:drawableCompatTop="@drawable/f_ic_sort_02"/>

                        <com.daily.base.widget.DailyRadioButton
                            android:id="@+id/lowPriceCheckView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:paddingTop="12dp"
                            android:text="@string/label_sort_by_low_price"
                            android:textColor="@color/selector_curation_textcolor"
                            android:textSize="11dp"
                            app:drawableCompatTop="@drawable/f_ic_sort_03"/>

                        <com.daily.base.widget.DailyRadioButton
                            android:id="@+id/highPriceCheckView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:paddingTop="12dp"
                            android:text="@string/label_sort_by_high_price"
                            android:textColor="@color/selector_curation_textcolor"
                            android:textSize="11dp"
                            app:drawableCompatTop="@drawable/f_ic_sort_04"/>

                        <com.daily.base.widget.DailyRadioButton
                            android:id="@+id/satisfactionCheckView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:paddingTop="12dp"
                            android:text="@string/label_sort_by_satisfaction"
                            android:textColor="@color/selector_curation_textcolor"
                            android:textSize="11dp"
                            app:drawableCompatTop="@drawable/f_ic_sort_05"/>
                    </RadioGroup>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@color/default_background_section_cf2f2f3"
                        android:gravity="center"
                        android:text="@string/label_rating"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="13dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentTop="true"
                        android:background="@color/default_line_ce7e7e7"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/default_line_ce7e7e7"/>
                </RelativeLayout>

                <RadioGroup
                    android:id="@+id/ratingRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <com.daily.base.widget.DailyRadioButton
                        android:id="@+id/rating1View"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:gravity="center_horizontal"
                        android:paddingTop="12dp"
                        android:text="@string/label_stay_outbound_filter_1_star_rate"
                        android:textColor="@color/selector_curation_textcolor"
                        android:textSize="11dp"
                        app:drawableCompatTop="@drawable/f_ic_hotel_grade_01"/>

                    <com.daily.base.widget.DailyRadioButton
                        android:id="@+id/rating2View"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:gravity="center_horizontal"
                        android:paddingTop="12dp"
                        android:text="@string/label_stay_outbound_filter_2_star_rate"
                        android:textColor="@color/selector_curation_textcolor"
                        android:textSize="11dp"
                        app:drawableCompatTop="@drawable/f_ic_hotel_grade_02"/>

                    <com.daily.base.widget.DailyRadioButton
                        android:id="@+id/rating3View"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:gravity="center_horizontal"
                        android:paddingTop="12dp"
                        android:text="@string/label_stay_outbound_filter_3_star_rate"
                        android:textColor="@color/selector_curation_textcolor"
                        android:textSize="11dp"
                        app:drawableCompatTop="@drawable/f_ic_hotel_grade_03"/>

                    <com.daily.base.widget.DailyRadioButton
                        android:id="@+id/rating4View"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:gravity="center_horizontal"
                        android:paddingTop="12dp"
                        android:text="@string/label_stay_outbound_filter_4_star_rate"
                        android:textColor="@color/selector_curation_textcolor"
                        android:textSize="11dp"
                        app:drawableCompatTop="@drawable/f_ic_hotel_grade_04"/>

                    <com.daily.base.widget.DailyRadioButton
                        android:id="@+id/rating5View"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:gravity="center_horizontal"
                        android:paddingTop="12dp"
                        android:text="@string/label_stay_outbound_filter_5_star_rate"
                        android:textColor="@color/selector_curation_textcolor"
                        android:textSize="11dp"
                        app:drawableCompatTop="@drawable/f_ic_hotel_grade_05"/>
                </RadioGroup>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentTop="true"
                android:background="@color/default_line_ce7e7e7"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/resetFilterView"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_fillrect_le8e8e9_bfafafb"
                android:drawablePadding="4dp"
                android:gravity="center_horizontal"
                android:paddingTop="9dp"
                android:text="@string/label_reset"
                android:textColor="@color/default_text_c454545"
                android:textSize="9dp"
                app:drawableCompatTop="@drawable/ic_refresh"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/confirmView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/resetFilterView"
                android:background="@drawable/selector_button_default_background"
                android:gravity="center"
                android:text="@string/label_view_result"
                android:textColor="@drawable/selector_button_default_text_color"
                android:textSize="17dp"
                dailyFont:style="Medium"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>