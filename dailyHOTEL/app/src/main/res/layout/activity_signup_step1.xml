<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    xmlns:dailyToolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.daily.dailyhotel.view.DailyToolbarView
        android:id="@+id/toolbarView"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white"
        android:elevation="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        dailyToolbar:underLineHeight="@dimen/gradient_1dp_line_height_under_21"/>

    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/signupBalloonsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_comment"
                android:gravity="left|center_vertical"
                android:lineSpacingExtra="-2dp"
                android:text="@string/message_signup_step1_guide"
                android:textColor="@color/default_text_c323232"
                android:textSize="11dp"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/emailView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/label_email"
                android:textColor="@color/selector_label_textcolor"
                android:textSize="12dp"/>

            <com.daily.base.widget.DailyAutoCompleteEditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/selector_edittext_background"
                android:drawablePadding="2dp"
                android:hint="@string/label_necessary"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textColorHint="@color/search_hint_text"
                android:textSize="16dp"
                android:theme="@style/EditTextTheme"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/passwordView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/label_password_8over"
                        android:textColor="@color/selector_label_textcolor"
                        android:textSize="12dp"/>

                    <com.daily.base.widget.DailyEditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/selector_edittext_background"
                        android:hint="@string/label_necessary"
                        android:inputType="textPassword"
                        android:maxLength="@integer/max_password"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/confirmPasswordEditText"
                        android:singleLine="true"
                        android:textColor="@color/default_text_c323232"
                        android:textColorHint="@color/search_hint_text"
                        android:textSize="16dp"
                        android:theme="@style/EditTextTheme"/>
                </LinearLayout>

                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/confirmPasswordView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/label_confirm_password_8over"
                        android:textColor="@color/selector_label_textcolor"
                        android:textSize="12dp"/>

                    <com.daily.base.widget.DailyEditText
                        android:id="@+id/confirmPasswordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/selector_edittext_background"
                        android:hint="@string/label_necessary"
                        android:inputType="textPassword"
                        android:maxLength="@integer/max_password"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/default_text_c323232"
                        android:textColorHint="@color/search_hint_text"
                        android:textSize="16dp"
                        android:theme="@style/EditTextTheme"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_payment_notice"/>

                <com.daily.base.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:freezesText="true"
                    android:lineSpacingExtra="-2dp"
                    android:text="@string/message_signup_step1_password_guide"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="11dp"/>
            </LinearLayout>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/nameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_name"
                android:textColor="@color/selector_label_textcolor"
                android:textSize="12dp"/>

            <com.daily.base.widget.DailyEditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/selector_edittext_background"
                android:hint="@string/label_necessary_reservation"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textColorHint="@color/search_hint_text"
                android:textSize="16dp"
                android:theme="@style/EditTextTheme"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/birthdayView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/label_birthday"
                android:textColor="@color/selector_label_textcolor"
                android:textSize="12dp"/>

            <com.daily.base.widget.DailyEditText
                android:id="@+id/birthdayEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/selector_edittext_background"
                android:cursorVisible="false"
                android:hint="@string/label_option_benefit"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textColorHint="@color/search_hint_text"
                android:textSize="16dp"
                android:theme="@style/EditTextTheme"/>

            <com.daily.base.widget.DailyCheckBox
                android:id="@+id/allAgreementCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="@string/label_signup_allagreement"
                android:textColor="@color/default_text_c4d4d4d"
                android:textSize="13dp"
                android:theme="@style/CheckBoxTheme"
                dailyFont:style="Medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_fillrect_le8e8e9_bfafafb_r2"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="15dp">

                    <com.daily.base.widget.DailyCheckBox
                        android:id="@+id/fourteenCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:gravity="center"
                        android:text="@string/act_signup_14_over"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="12dp"
                        android:theme="@style/CheckBoxTheme"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="15dp">

                    <com.daily.base.widget.DailyCheckBox
                        android:id="@+id/termsCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:gravity="center"
                        android:text="@string/act_signup_terms"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="12dp"
                        android:theme="@style/CheckBoxTheme"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/termsContentView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="@string/label_view_content"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="12dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="15dp">

                    <com.daily.base.widget.DailyCheckBox
                        android:id="@+id/personalCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:gravity="center"
                        android:text="@string/act_signup_privacy"
                        android:textColor="@color/default_text_c4d4d4d"
                        android:textSize="12dp"
                        android:theme="@style/CheckBoxTheme"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/personalContentView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="@string/label_view_content"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="12dp"/>
                </RelativeLayout>

                <com.daily.base.widget.DailyCheckBox
                    android:id="@+id/benefitCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="@string/label_notification_on_option"
                    android:textColor="@color/default_text_c4d4d4d"
                    android:textSize="12dp"
                    android:theme="@style/CheckBoxTheme"/>

                <com.daily.base.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="-1dp"
                    android:text="@string/frag_push_alert_subtext"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="10dp"/>
            </LinearLayout>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/privacyValidDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:text="@string/label_privacy_valid_date_option"
                android:textColor="@color/default_text_c4d4d4d"
                android:textSize="13dp"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/shape_fillrect_le8e8e9_bfafafb_r2"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingTop="10dp">

                <com.daily.base.widget.DailyCheckBox
                    android:id="@+id/yearCheckBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="@string/label_privacy_valid_date_1year"
                    android:textColor="@color/default_text_c4d4d4d"
                    android:textSize="12dp"
                    android:theme="@style/CheckBoxTheme"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.daily.base.widget.DailyCheckBox
                    android:id="@+id/yearCheckBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_marginLeft="23dp"
                    android:gravity="center"
                    android:text="@string/label_privacy_valid_date_3year"
                    android:textColor="@color/default_text_c4d4d4d"
                    android:textSize="12dp"
                    android:theme="@style/CheckBoxTheme"
                    app:layout_constraintLeft_toRightOf="@+id/yearCheckBox1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginLeft="8dp"/>

                <com.daily.base.widget.DailyCheckBox
                    android:id="@+id/yearCheckBox5"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_marginLeft="23dp"
                    android:gravity="center"
                    android:text="@string/label_privacy_valid_date_5year"
                    android:textColor="@color/default_text_c4d4d4d"
                    android:textSize="12dp"
                    android:theme="@style/CheckBoxTheme"
                    app:layout_constraintLeft_toRightOf="@+id/yearCheckBox3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginLeft="8dp"/>

                <com.daily.base.widget.DailyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="-1dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/message_privacy_valid_date"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/yearCheckBox3"/>

            </android.support.constraint.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/nextStepView"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/shape_fillrect_beb2135_r3"
                    android:gravity="center"
                    android:text="@string/label_next"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    dailyFont:style="Medium"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>