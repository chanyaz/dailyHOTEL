<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <include layout="@layout/toolbar_default"/>

    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/signupBalloonsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_comment"
                android:gravity="left|center_vertical"
                android:lineSpacingExtra="-2dp"
                android:text="@string/message_signup_step1_guide"
                android:textColor="@color/default_text_c323232"
                android:textSize="11dp"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/emailView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/label_email"
                android:textColor="@color/selector_label_textcolor"
                android:textSize="12dp"/>

            <com.twoheart.dailyhotel.widget.DailyEditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/selector_edittext_background"
                android:drawablePadding="2dp"
                android:hint="@string/label_necessary"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textColorHint="@color/search_hint_text"
                android:textSize="16dp"
                android:theme="@style/EditTextTheme"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/passwordView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/label_password_4over"
                        android:textColor="@color/selector_label_textcolor"
                        android:textSize="12dp"/>

                    <com.twoheart.dailyhotel.widget.DailyEditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/selector_edittext_background"
                        android:hint="@string/label_necessary"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/confirmPasswordEditText"
                        android:singleLine="true"
                        android:textColor="@color/default_text_c323232"
                        android:textColorHint="@color/search_hint_text"
                        android:textSize="16dp"
                        android:theme="@style/EditTextTheme"/>
                </LinearLayout>

                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/confirmPasswordView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/label_confirm_password_4over"
                        android:textColor="@color/selector_label_textcolor"
                        android:textSize="12dp"/>

                    <com.twoheart.dailyhotel.widget.DailyEditText
                        android:id="@+id/confirmPasswordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/selector_edittext_background"
                        android:hint="@string/label_necessary"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/default_text_c323232"
                        android:textColorHint="@color/search_hint_text"
                        android:textSize="16dp"
                        android:theme="@style/EditTextTheme"/>
                </LinearLayout>
            </LinearLayout>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/nameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/label_name"
                android:textColor="@color/selector_label_textcolor"
                android:textSize="12dp"/>

            <com.twoheart.dailyhotel.widget.DailyEditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/selector_edittext_background"
                android:hint="@string/label_necessary_reservation"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textColorHint="@color/search_hint_text"
                android:textSize="16dp"
                android:theme="@style/EditTextTheme"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/birthdayView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/label_birthday"
                android:textColor="@color/selector_label_textcolor"
                android:textSize="12dp"/>

            <com.twoheart.dailyhotel.widget.DailyEditText
                android:id="@+id/birthdayEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/selector_edittext_background"
                android:cursorVisible="false"
                android:hint="@string/label_option_benefit"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textColorHint="@color/search_hint_text"
                android:textSize="16dp"
                android:theme="@style/EditTextTheme"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/recommenderView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/label_recommender_code_ex"
                android:textColor="@color/selector_label_textcolor"
                android:textSize="12dp"/>

            <com.twoheart.dailyhotel.widget.DailyEditText
                android:id="@+id/recommenderEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/selector_edittext_background"
                android:hint="@string/label_select"
                android:inputType="textVisiblePassword"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textColorHint="@color/search_hint_text"
                android:textSize="16dp"
                android:theme="@style/EditTextTheme"/>

            <com.twoheart.dailyhotel.widget.DailyCheckBox
                android:id="@+id/allAgreementCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/label_signup_allagreement"
                android:textColor="@color/information_title"
                android:textSize="12dp"
                android:theme="@style/CheckBoxTheme"
                dailyFont:style="Medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_fillrect_le8e8e9_bfafafb"
                android:orientation="vertical"
                android:paddingBottom="14dp"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="15dp">

                    <com.twoheart.dailyhotel.widget.DailyCheckBox
                        android:id="@+id/termsCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:gravity="center"
                        android:text="@string/act_signup_terms"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="12dp"
                        android:theme="@style/CheckBoxTheme"/>

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/termsContentView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="@string/label_view_content"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="12dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="15dp">

                    <com.twoheart.dailyhotel.widget.DailyCheckBox
                        android:id="@+id/personalCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:gravity="center"
                        android:text="@string/act_signup_privacy"
                        android:textColor="@color/information_title"
                        android:textSize="12dp"
                        android:theme="@style/CheckBoxTheme"/>

                    <com.twoheart.dailyhotel.widget.DailyTextView
                        android:id="@+id/personalContentView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="@string/label_view_content"
                        android:textColor="@color/default_text_c929292"
                        android:textSize="12dp"/>
                </RelativeLayout>

                <com.twoheart.dailyhotel.widget.DailyCheckBox
                    android:id="@+id/benefitCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="@string/label_notification_on_option"
                    android:textColor="@color/information_title"
                    android:textSize="12dp"
                    android:theme="@style/CheckBoxTheme"/>

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="-6dp"
                    android:text="@string/frag_push_alert_subtext"
                    android:textColor="@color/default_text_c929292"
                    android:textSize="9dp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white">

                <com.twoheart.dailyhotel.widget.DailyTextView
                    android:id="@+id/nextStepView"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/btn_normal_gradation"
                    android:gravity="center"
                    android:text="@string/label_next"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    dailyFont:style="Medium"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>