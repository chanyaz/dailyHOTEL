<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    >

    <!--<merge-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--tools:parentTag="android.support.constraint.ConstraintLayout">-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="20dp">

        <com.daily.base.widget.DailyTextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:text="@string/label_select_room"
            android:textColor="@color/default_text_c323232"
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            dailyFont:style="Medium"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:freezesText="true"
            android:text="@string/label_include_tax"
            android:textColor="@color/default_text_c929292"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/titleTextView"
            app:layout_constraintLeft_toRightOf="@+id/titleTextView"
            dailyFont:style="Medium"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/calendarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/dh_theme_color"
            android:freezesText="true"
            android:text="3.1(월)-3.3(수),2박"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/bedTypeFilterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/dh_theme_color"
            android:freezesText="true"
            android:text="@string/frag_hotel_tab_bed_type"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/calendarTextView"
            app:layout_constraintLeft_toRightOf="@+id/calendarTextView"
            app:layout_constraintTop_toTopOf="@+id/calendarTextView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/bedTypeFilterCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/dh_theme_color"
            android:freezesText="true"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/calendarTextView"
            app:layout_constraintLeft_toRightOf="@+id/bedTypeFilterTextView"
            app:layout_constraintTop_toTopOf="@+id/calendarTextView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/facilitiesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/dh_theme_color"
            android:freezesText="true"
            android:text="@string/label_room_amenities"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/bedTypeFilterTextView"
            app:layout_constraintLeft_toRightOf="@+id/bedTypeFilterCountTextView"
            app:layout_constraintTop_toTopOf="@+id/bedTypeFilterTextView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/facilitiesFilterCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/dh_theme_color"
            android:freezesText="true"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/bedTypeFilterTextView"
            app:layout_constraintLeft_toRightOf="@+id/facilitiesTextView"
            app:layout_constraintTop_toTopOf="@+id/bedTypeFilterTextView"/>

        <View
            android:id="@+id/dividerView"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/default_background_c929292"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/facilitiesTextView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/totalPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_total_price"
            android:textColor="@color/default_text_c323232"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/dividerView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/dividerView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/averagePriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/label_detail_view_average_price"
            android:textColor="@color/default_text_c323232"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/dividerView"
            app:layout_constraintRight_toLeftOf="@+id/totalPriceTextView"
            app:layout_constraintTop_toTopOf="@id/dividerView"/>

        <LinearLayout
            android:id="@+id/roomsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerView"/>

        <LinearLayout
            android:id="@+id/moreRoomsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roomsLayout"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/showMoreRoomsTextView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_rect_defaultcolor"
            android:gravity="center"
            android:text="N개 객실 더보기"
            android:textColor="@color/default_text_c323232"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moreRoomsLayout"/>
    </android.support.constraint.ConstraintLayout>
    <!--</merge>-->
</layout>