<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/searchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="2dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <com.daily.base.widget.DailyEditText
                    android:id="@+id/searchEditText"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/default_background_cf4f4f6"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="6dp"
                    android:paddingRight="24dp"
                    android:singleLine="true"
                    android:textColor="@color/default_text_c323232"
                    android:textColorHint="@color/default_text_cc5c5c5"
                    android:textSize="13dp"
                    android:theme="@style/EditTextTheme"
                    app:drawableCompatLeft="@drawable/search_ic_01_search" />

                <ImageView
                    android:id="@+id/deleteView"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="14dp"
                    app:srcCompat="@drawable/search_ic_01_delete" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_margin="8dp"
                android:background="@color/default_background_cf4f4f6">

                <ImageView
                    android:id="@+id/calendarImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    app:srcCompat="@drawable/search_ic_01_date" />

                <ImageView
                    android:id="@+id/calendarDownArrowView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="9dp"
                    app:srcCompat="@drawable/navibar_m_ic_v" />

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/calendarTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toLeftOf="@id/calendarDownArrowView"
                    android:layout_toRightOf="@id/calendarImageView"
                    android:gravity="center_vertical"
                    android:paddingRight="8dp"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="13dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/default_line_ce7e7e7" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchLayout"
            android:background="@color/default_background"
            android:elevation="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/searchAroundLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/aroundIconView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/search_ic_01_surrounding" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/aroundIconView"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.daily.base.widget.DailyTextView
                            android:id="@+id/text01View"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/default_text_c323232"
                            android:textSize="13dp" />

                        <com.daily.base.widget.DailyTextView
                            android:id="@+id/text02View"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-2dp"
                            android:letterSpacing="-0.02"
                            android:text="@string/label_search_need_to_agree_termsoflocation"
                            android:textColor="@color/default_text_cc5c5c5"
                            android:textSize="10dp"
                            android:visibility="visible" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/default_line_cdcdcdd" />

                <RelativeLayout
                    android:id="@+id/stayOutboundLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/stayOutboundIconView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/vector_search_ic_04_ob_hotel" />

                    <com.daily.base.widget.DailyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/stayOutboundIconView"
                        android:text="@string/label_search_stay_outbound"
                        android:textColor="@color/default_text_c323232"
                        android:textSize="13dp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/gradient_1dp_line_height_under_21"
                android:background="@color/default_line_ce7e7e7" />
        </LinearLayout>

        <com.daily.dailyhotel.view.DailySearchCircleIndicator
            android:id="@+id/searchCircleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/searchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/searchCircleIndicator"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="4dp" />

        <FrameLayout
            android:id="@+id/autoCompleteScrollLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/searchLayout"
            android:background="@color/black_a60"
            android:elevation="2dp"
            android:visibility="gone">

            <com.daily.base.widget.DailyScrollView
                android:id="@+id/autoCompleteScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fillViewport="true"
                android:fadingEdge="none">

                <LinearLayout
                    android:id="@+id/autoCompleteLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </com.daily.base.widget.DailyScrollView>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>