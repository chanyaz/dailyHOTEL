<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.Guideline
            android:id="@+id/leftGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="15dp"/>

        <android.support.constraint.Guideline
            android:id="@+id/rightGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="15dp"/>

        <FrameLayout
            android:id="@+id/downloadCouponLayout"
            android:layout_width="95dp"
            android:layout_height="21dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/shape_fillrect_ldcdcdd_bffffff_r1"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.daily.base.widget.DailyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="4dp"
                android:text="@string/coupon_do_download_coupon"
                android:textColor="@color/default_text_c323232"
                android:textSize="11dp"
                app:drawableCompatRight="@drawable/detail_coupon_down"/>
        </FrameLayout>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/couponPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginTop="13dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="13dp"
            app:layout_constraintLeft_toLeftOf="@+id/leftGuideline"
            app:layout_constraintTop_toTopOf="parent"
            dailyFont:style="Bold"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/couponNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/default_text_c323232"
            android:textSize="13dp"
            app:layout_constraintLeft_toLeftOf="@+id/leftGuideline"
            app:layout_constraintRight_toRightOf="@+id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/couponPriceTextView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/descriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/default_text_c929292"
            android:textSize="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/couponNameTextView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/expireTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/coupon_description_text"
            android:textSize="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/leftGuideline"
            app:layout_constraintRight_toRightOf="@+id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTextView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/useableStayTextView"
            android:layout_width="56dp"
            android:layout_height="15dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="6dp"
            android:background="@color/default_background_ceaeaea"
            android:gravity="center"
            android:text="@string/label_search_stay"
            android:textColor="@color/default_text_c929292"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="@+id/leftGuideline"
            app:layout_constraintRight_toLeftOf="@+id/useableStayOutboundTextView"
            app:layout_constraintTop_toBottomOf="@id/expireTextView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/useableStayOutboundTextView"
            android:layout_width="56dp"
            android:layout_height="15dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="6dp"
            android:background="@color/default_background_ceaeaea"
            android:gravity="center"
            android:text="@string/label_search_stayoutbound"
            android:textColor="@color/default_text_c929292"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/useableStayTextView"
            app:layout_constraintRight_toLeftOf="@+id/useableGourmetTextView"
            app:layout_constraintTop_toBottomOf="@id/expireTextView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/useableGourmetTextView"
            android:layout_width="29dp"
            android:layout_height="15dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="6dp"
            android:background="@color/default_background_ceaeaea"
            android:gravity="center"
            android:text="@string/label_gourmet"
            android:textColor="@color/default_text_c929292"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/useableStayOutboundTextView"
            app:layout_constraintRight_toRightOf="@+id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/expireTextView"/>

        <View
            android:id="@+id/underLineView"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="@color/default_line_cdcdcdd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>