<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="#ffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/label_completed_payment"
            android:textColor="@color/actionbar_title"
            android:textSize="18dp"/>

        <ImageView
            android:id="@+id/closeView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:src="@drawable/navibar_ic_x"/>
    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/placeImageView"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_below="@+id/toolbar"
        android:adjustViewBounds="true"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/img_placeholder_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/dim_center"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_complete"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/messageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/message_completed_payment"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginTop="11dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeImageView"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/calendar_month_line"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/label_booking_information"
                android:textColor="@color/curation_title_text"
                android:textSize="13dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/curation_information_line"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/curation_information_line"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:minHeight="35dp"
            android:paddingBottom="5dp"
            android:paddingTop="6dp">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/bookingPlaceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/label_booking_place"
                android:textColor="@color/curation_title_text"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/bookingPlaceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/bookingPlaceView"
                android:gravity="right"
                android:textColor="@color/curation_information_text"
                android:textSize="13dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:minHeight="35dp"
            android:paddingBottom="5dp"
            android:paddingTop="6dp">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/placeTypeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/label_product_type"
                android:textColor="@color/curation_title_text"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/placeTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/placeTypeView"
                android:gravity="right"
                android:textColor="@color/curation_information_text"
                android:textSize="13dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/dateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/label_use_day"
                android:textColor="@color/curation_title_text"
                android:textSize="13dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/dateView"
                android:gravity="right"
                android:textColor="@color/curation_information_text"
                android:textSize="13dp"/>
        </RelativeLayout>
    </LinearLayout>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/confirmView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="14dp"
        android:background="@color/dh_theme_color"
        android:gravity="center"
        android:text="@string/label_check_booking_history"
        android:textColor="@android:color/white"
        android:textSize="20dp"/>
</RelativeLayout>