<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash_bg"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/textLogoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_logo"
        android:paddingBottom="370dp"/>

    <LinearLayout
        android:id="@+id/progressLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:paddingBottom="240dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp">

            <View
                android:id="@+id/iv_splash_circle1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/splash_circle"
                android:visibility="invisible"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp">

            <View
                android:id="@+id/iv_splash_circle2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/splash_circle"
                android:visibility="invisible"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/iv_splash_circle3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/splash_circle"
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>