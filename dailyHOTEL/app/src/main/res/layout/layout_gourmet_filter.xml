<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/curation_information_line"/>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:text="@string/label_foodtype"
        android:textColor="@color/curation_title_text"
        android:textSize="13dp"
        android:background="@color/calendar_month_line"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/curation_information_line"/>

    <android.support.v7.widget.GridLayout
        android:id="@+id/foodGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:columnCount="5"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/curation_information_line"/>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:text="@string/label_time_range"
        android:textColor="@color/curation_title_text"
        android:textSize="13dp"
        android:background="@color/calendar_month_line"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/curation_information_line"/>

    <LinearLayout
        android:id="@+id/timeRangeLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/time0611View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_filter_time_0611_button"
            android:gravity="center_horizontal"
            android:text="@string/label_time_0611"
            android:textColor="@drawable/selector_curation_textcolor"
            android:textSize="11dp"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/time1115View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_filter_time_1115_button"
            android:gravity="center_horizontal"
            android:text="@string/label_time_1115"
            android:textColor="@drawable/selector_curation_textcolor"
            android:textSize="11dp"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/time1517View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_filter_time_1517_button"
            android:gravity="center_horizontal"
            android:text="@string/label_time_1517"
            android:textColor="@drawable/selector_curation_textcolor"
            android:textSize="11dp"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/time1721View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_filter_time_1721_button"
            android:gravity="center_horizontal"
            android:text="@string/label_time_1721"
            android:textColor="@drawable/selector_curation_textcolor"
            android:textSize="11dp"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/time2106View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_filter_time_2106_button"
            android:gravity="center_horizontal"
            android:text="@string/label_time_2106"
            android:textColor="@drawable/selector_curation_textcolor"
            android:textSize="11dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/curation_information_line"/>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:text="@string/label_amenities"
        android:textColor="@color/curation_title_text"
        android:textSize="13dp"
        android:background="@color/calendar_month_line"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/curation_information_line"/>

    <LinearLayout
        android:id="@+id/amenitiesLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/parkingCheckView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_filter_amenities_parking_button"
            android:gravity="center_horizontal"
            android:text="@string/label_parking"
            android:textColor="@drawable/selector_curation_textcolor"
            android:textSize="11dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>