<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomBarLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/popupLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_fillrect_bffffff_r4"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:id="@+id/gradeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/gradeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/stay_outbound_detail_grade"
                        android:gravity="center"
                        android:paddingBottom="1px"
                        android:paddingLeft="5.5dp"
                        android:paddingRight="5.5dp"
                        android:paddingTop="2px"
                        android:textColor="@android:color/white"
                        android:textSize="11dp"
                        android:visibility="invisible"/>

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/StayOutboundRatingBarGold"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_marginLeft="6dp"
                        android:numStars="5"
                        android:stepSize="0.5"/>
                </LinearLayout>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/placeNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:freezesText="true"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="@color/default_text_c323232"
                    android:textSize="18dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/gradeLayout"
                    dailyFont:style="Medium"/>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/imageLayout"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintDimensionRatio="W,3:4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/placeNameTextView">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleDraweeView01"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="1dp"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/simpleDraweeView02"
                        app:layout_constraintTop_toTopOf="parent"
                        fresco:actualImageScaleType="centerCrop"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleDraweeView02"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_marginLeft="1dp"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toRightOf="@+id/simpleDraweeView01"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        fresco:actualImageScaleType="centerCrop"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleDraweeView03"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="2dp"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/simpleDraweeView04"
                        app:layout_constraintTop_toBottomOf="@+id/simpleDraweeView01"
                        fresco:actualImageScaleType="centerCrop"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleDraweeView04"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="2dp"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toRightOf="@+id/simpleDraweeView03"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/simpleDraweeView02"
                        fresco:actualImageScaleType="centerCrop"/>
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageLayout">

                    <LinearLayout
                        android:id="@+id/productCountLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@+id/priceTextView"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/bookingTextView"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed">

                        <com.daily.base.widget.DailyTextView
                            android:id="@+id/productCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/default_text_c323232"
                            android:textSize="12dp"/>

                        <com.daily.base.widget.DailyTextView
                            android:id="@+id/stayAverageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="@string/label_preview_extendedstay_average"
                            android:textColor="@color/default_text_c929292"
                            android:textSize="10dp"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/priceTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/default_text_cb70038"
                        android:textSize="13dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/bookingTextView"
                        app:layout_constraintTop_toBottomOf="@+id/productCountLayout"
                        app:layout_constraintVertical_chainStyle="packed"
                        dailyFont:style="Medium"/>

                    <com.daily.base.widget.DailyTextView
                        android:id="@+id/bookingTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_fillrect_bb70038_r2"
                        android:gravity="center"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:text="@string/label_preview_booking"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        dailyFont:style="Medium"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:id="@+id/wishPopupLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.11"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/wishPopupTextView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/shape_filloval_ccdb2453"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:letterSpacing="0"
                    android:lineSpacingExtra="-3dp"
                    android:paddingBottom="30dp"
                    android:paddingTop="30dp"
                    android:text="@string/wishlist_detail_add_message"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:drawableCompatTop="@drawable/ic_heart_fill_l"
                    dailyFont:style="Medium"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.22"/>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/bottomBarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/wishTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="22dp"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/ic_lp_01_wishlist_off"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="-5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/label_preview_add_wish"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:visibility="gone"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/shareKakaoView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="22dp"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/ic_lp_02_share"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="-5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/label_preview_kakao"
                    android:textColor="@color/white"
                    android:textSize="12dp"/>

                <com.daily.base.widget.DailyTextView
                    android:id="@+id/mapView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/ic_lp_03_direction"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="-5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/label_preview_google_map"
                    android:textColor="@color/white"
                    android:textSize="12dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/closeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/navibar_ic_x_white"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>