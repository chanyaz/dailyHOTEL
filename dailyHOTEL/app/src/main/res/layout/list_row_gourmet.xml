<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="202dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:adjustViewBounds="true"
        android:background="@drawable/img_placeholder"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/gradientView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/discountPriceLayout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="12dp"
        dailyFont:style="DemiLight"/>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/gradeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nameTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/shape_rect_whitecolor"
        android:gravity="center"
        android:paddingBottom="1px"
        android:paddingLeft="5.5dp"
        android:paddingRight="5.5dp"
        android:paddingTop="2px"
        android:textColor="@color/white"
        android:textSize="11dp"/>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/satisfactionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nameTextView"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/gradeTextView"
        android:drawableLeft="@drawable/main_ic_satisfaction"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:visibility="gone"
        dailyFont:style="DemiLight"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:id="@+id/discountPriceLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addressTextView"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="11dp">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/personsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone"
            dailyFont:style="DemiLight"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/discountPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="7dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            dailyFont:style="Medium"/>
    </LinearLayout>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addressTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="5dp"
        android:ellipsize="marquee"
        android:freezesText="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        dailyFont:style="Medium"
        android:layout_toLeftOf="@+id/discountPriceLayout"/>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/addressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="12dp"
        dailyFont:style="DemiLight"/>

    <ImageView
        android:id="@+id/dBenefitImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_d_benefit"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/soldoutView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textView_textColor_shadow_soldout"
        android:src="@drawable/soldout"
        android:scaleType="centerInside"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/hotel_list_item_underline"/>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/distanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/sort_distance"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:visibility="gone"/>

</RelativeLayout>