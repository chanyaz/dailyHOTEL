<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="240dp">

    <!-- img -->

    <ImageView
        android:id="@+id/iv_hotel_row_img"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:adjustViewBounds="true"
        android:background="@drawable/img_placeholder"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/ll_hotel_row_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/hotel23LineLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:id="@+id/hotelPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">

                    <com.twoheart.dailyhotel.view.widget.DailyTextView
                        android:id="@+id/personsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="1dp"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        android:visibility="gone"/>

                    <com.twoheart.dailyhotel.view.widget.DailyTextView
                        android:id="@+id/tv_hotel_row_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/tv_hotel_row_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/hotelPrice"
                    android:ellipsize="marquee"
                    android:freezesText="true"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingRight="3dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="22dp">

                <com.twoheart.dailyhotel.view.widget.DailyTextView
                    android:id="@+id/tv_hotel_row_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="1dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="13dp"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_above="@+id/hotel23LineLayout">

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/hv_hotel_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:background="@drawable/shape_rect_whitecolor"
                android:gravity="center"
                android:paddingBottom="1px"
                android:paddingLeft="5.5dp"
                android:paddingRight="5.5dp"
                android:paddingTop="2px"
                android:textColor="@color/white"
                android:textSize="11dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyTextView
                android:id="@+id/satisfactionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/hv_hotel_grade"
                android:drawableLeft="@drawable/main_ic_satisfaction"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:visibility="gone"/>
        </RelativeLayout>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/tv_hotel_row_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="-3dp"
            android:layout_marginRight="13dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:layout_above="@+id/hotel23LineLayout"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/dBenefitImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_d_benefit"
        android:visibility="gone"/>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/tv_hotel_row_soldout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textView_textColor_shadow_soldout"
        android:gravity="center_vertical|center"
        android:text="SOLD OUT"
        android:textColor="@android:color/darker_gray"
        android:textSize="40dp"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/hotel_list_item_underline"/>

</RelativeLayout>