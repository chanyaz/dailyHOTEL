<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/recentlySearchResultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="17dp"
                android:text="@string/label_search_recently_search_result"
                android:textColor="@color/default_text_cc5c5c5"
                android:textSize="14dp"/>

            <com.daily.dailyhotel.view.DailySearchRecentlyCardView
                android:id="@+id/recently01View"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <com.daily.dailyhotel.view.DailySearchRecentlyCardView
                android:id="@+id/recently02View"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <com.daily.dailyhotel.view.DailySearchRecentlyCardView
                android:id="@+id/recently03View"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/stayPopularSearchTagTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="17dp"
                android:text="@string/label_search_stay_popular_search_tag"
                android:textColor="@color/default_text_cc5c5c5"
                android:textSize="14dp"/>

            <GridView
                android:id="@+id/stayTagGridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="auto_fit"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="none"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>