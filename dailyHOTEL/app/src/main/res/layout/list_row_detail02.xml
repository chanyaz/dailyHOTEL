<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/hotelTitleLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/hotelGradeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@color/black"
                android:gravity="center"
                android:paddingBottom="1px"
                android:paddingLeft="5.5dp"
                android:paddingRight="5.5dp"
                android:paddingTop="2px"
                android:textColor="@android:color/white"
                android:textSize="11.5dp"
                android:visibility="invisible"/>

            <com.twoheart.dailyhotel.widget.DailyTextView
                android:id="@+id/hotelNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="15dp"
                android:ellipsize="marquee"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/hoteldetail_title_text"
                android:textSize="18dp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/magicToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:visibility="invisible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/navibar_ic_back_01_black"/>

            <ImageView
                android:id="@+id/menu1View"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/navibar_ic_share_01_black"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="10dp"
        android:background="@color/selectarea_underline"/>

    <com.twoheart.dailyhotel.widget.DailyTextView
        android:id="@+id/satisfactionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/detail_ic_satisfaction"
        android:drawablePadding="11dp"
        android:freezesText="true"
        android:gravity="center_vertical"
        android:textColor="@color/hoteldetail_title_text"
        android:textSize="13dp"
        android:visibility="visible"
        dailyFont:style="DemiLight"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <ImageView
            android:id="@+id/dateImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/detail_ic_date"
            />

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/changeDateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/more_btn_padding"
            android:freezesText="true"
            android:gravity="center"
            android:text="@string/label_detail_change_date"
            android:textColor="@color/hoteldetail_title_text"
            android:textSize="11dp"
            />

        <com.twoheart.dailyhotel.widget.DailyTextView
            android:id="@+id/dateView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/changeDateView"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2.5dp"
            android:layout_toLeftOf="@id/changeDateView"
            android:layout_toRightOf="@id/dateImageView"
            android:freezesText="true"
            android:gravity="center_vertical"
            android:textColor="@color/hoteldetail_title_text"
            android:textSize="13dp"
            dailyFont:style="DemiLight"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="18dp"
        android:background="@color/default_line_cf0f0f0"/>
</LinearLayout>
