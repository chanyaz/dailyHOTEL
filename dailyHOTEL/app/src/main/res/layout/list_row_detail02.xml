<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/hotelTitleLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/hotelGradeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:background="@color/black"
            android:gravity="center"
            android:paddingBottom="1px"
            android:paddingLeft="5.5dp"
            android:paddingRight="5.5dp"
            android:paddingTop="2px"
            android:textColor="@android:color/white"
            android:textSize="11.5dp"
            android:visibility="invisible"/>

        <com.twoheart.dailyhotel.view.widget.DailyTextView
            android:id="@+id/hotelNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="15dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:freezesText="true"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="18dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/selectarea_underline"
        android:layout_marginBottom="5dp"/>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/satisfactionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/detail_ic_satisfaction"
        android:drawablePadding="11dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        dailyFont:style="DemiLight"/>

    <com.twoheart.dailyhotel.view.widget.DailyTextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/detail_ic_date"
        android:drawablePadding="11dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:layout_marginRight="15dp"
        dailyFont:style="DemiLight"/>/>
</LinearLayout>