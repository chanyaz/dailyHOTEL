<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dailyFont="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/baseView"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/more_coupon_download_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/couponPriceTextView"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="95dp"
            android:layout_marginTop="14dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@id/baseView"
            app:layout_constraintRight_toRightOf="@id/baseView"
            app:layout_constraintTop_toTopOf="@id/baseView"
            dailyFont:style="Bold"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/couponNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="95dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="13dp"
            app:layout_constraintLeft_toLeftOf="@id/baseView"
            app:layout_constraintRight_toRightOf="@id/baseView"
            app:layout_constraintTop_toBottomOf="@+id/couponPriceTextView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/descriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="95dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:textColor="@color/coupon_description_text"
            android:textSize="11dp"
            app:layout_constraintLeft_toLeftOf="@id/baseView"
            app:layout_constraintRight_toRightOf="@id/baseView"
            app:layout_constraintTop_toBottomOf="@+id/couponNameTextView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/expireTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/coupon_description_text"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/baseView"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/dueDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:textColor="@color/coupon_red_wine_text"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/expireTextView"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="95dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/baseView"
            app:layout_constraintRight_toRightOf="@id/baseView">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/useableStayTextView"
                android:layout_width="56dp"
                android:layout_height="15dp"
                android:background="@color/default_background_ceaeaea"
                android:gravity="center"
                android:text="@string/label_coupon_stay_inbound"
                android:textColor="@color/default_text_c929292"
                android:textSize="10dp"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/useableStayOutboundTextView"
                android:layout_width="56dp"
                android:layout_height="15dp"
                android:layout_marginLeft="1dp"
                android:background="@color/default_background_ceaeaea"
                android:gravity="center"
                android:text="@string/label_coupon_stay_outbound"
                android:textColor="@color/default_text_c929292"
                android:textSize="10dp"/>

            <com.daily.base.widget.DailyTextView
                android:id="@+id/useableGourmetTextView"
                android:layout_width="29dp"
                android:layout_height="15dp"
                android:layout_marginLeft="1dp"
                android:background="@color/default_background_ceaeaea"
                android:gravity="center"
                android:text="@string/label_coupon_gourmet"
                android:textColor="@color/default_text_c929292"
                android:textSize="10dp"/>
        </LinearLayout>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/useIconView"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:drawablePadding="-1dp"
            android:gravity="center"
            android:text="@string/coupon_useable_text"
            android:textColor="@color/default_line_c323232"
            android:textSize="11dp"
            android:visibility="visible"
            app:drawableCompatTop="@drawable/more_ic_coupon_01"
            app:layout_constraintRight_toRightOf="@id/baseView"
            app:layout_constraintTop_toTopOf="@id/baseView"
            dailyFont:style="Medium"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/downloadIconView"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:text="@string/coupon_download_text"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:visibility="visible"
            app:drawableCompatTop="@drawable/more_ic_coupon_02"
            app:layout_constraintRight_toRightOf="@id/baseView"
            app:layout_constraintTop_toTopOf="@id/baseView"
            dailyFont:style="Medium"/>

        <com.daily.base.widget.DailyTextView
            android:id="@+id/noticeTextView"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:text="@string/coupon_notice_text"
            android:textColor="@color/coupon_description_text"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="@id/baseView"
            app:layout_constraintRight_toRightOf="@id/baseView"/>
    </android.support.constraint.ConstraintLayout>
</layout>