<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <merge
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:padding="8dp"
        tools:parentTag="android.support.constraint.ConstraintLayout">

        <!--<android.support.constraint.ConstraintLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="52dp"-->
        <!--android:background="@color/white"-->
        <!--android:padding="8dp">-->

        <FrameLayout
            android:id="@+id/regionLayout"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_fillrect_leeeef0_bf8f8f9"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/dateLayout"
            app:layout_constraintTop_toTopOf="parent">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/regionTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="false"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textSize="12dp"
                app:drawableCompatLeft="@drawable/navibar_ic_s_region"
                app:drawableCompatRight="@drawable/navibar_ic_v"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/dateLayout"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="@drawable/shape_fillrect_leeeef0_bf8f8f9"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/regionLayout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.daily.base.widget.DailyTextView
                android:id="@+id/dateTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/default_text_c323232"
                android:textSize="12dp"
                app:drawableCompatLeft="@drawable/navibar_ic_s_calendar"
                app:drawableCompatRight="@drawable/navibar_ic_v"/>
        </FrameLayout>
        <!--</android.support.constraint.ConstraintLayout>-->
    </merge>
</layout>