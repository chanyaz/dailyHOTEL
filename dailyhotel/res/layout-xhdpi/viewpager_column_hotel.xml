<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mapview_hotelwindow_background" >

    <!-- img -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="matrix"
        android:src="@drawable/img_placeholder_small" />

    <ImageView
        android:id="@+id/iv_hotel_row_img"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/ll_hotel_row_content"
        android:layout_width="match_parent"
        android:layout_height="133dp" >

        <!-- board -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" >

            <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                android:id="@+id/averageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/label_hotel_list_extendedstay_average"
                android:textColor="@android:color/white"
                android:textSize="11dp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/hv_hotel_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingBottom="1px"
                    android:paddingLeft="5.5dp"
                    android:paddingRight="5.5dp"
                    android:paddingTop="2px"
                    android:textColor="@android:color/white"
                    android:textSize="11.5dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/tv_hotel_row_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_hotel_row_discount"
                    android:layout_toRightOf="@+id/hv_hotel_grade"
                    android:ellipsize="marquee"
                    android:freezesText="true"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingLeft="6dp"
                    android:paddingRight="3dp"
                    android:scrollHorizontally="true"
                    android:shadowColor="@color/textView_textColor_shadow"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="0.01"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/tv_hotel_row_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:shadowColor="@color/textView_textColor_shadow"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="0.01"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_hotel_under_upper"
                android:paddingTop="5dp" >

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/tv_hotel_row_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/tv_hotel_row_price"
                    android:gravity="center_vertical"
                    android:shadowColor="@color/textView_textColor_shadow"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="0.01"
                    android:singleLine="true"
                    android:textColor="#cecece"
                    android:textSize="13.5dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/tv_hotel_row_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:shadowColor="@color/textView_textColor_shadow"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="0.01"
                    android:textColor="#cecece"
                    android:textSize="13.5dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
        android:id="@+id/tv_hotel_row_soldout"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:background="@color/textView_textColor_shadow_soldout"
        android:gravity="center_vertical|center"
        android:text="SOLD OUT"
        android:textColor="@android:color/darker_gray"
        android:textSize="40dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/mapview_hotelwindow_topline" />

    <ImageView
        android:id="@+id/closeImageVIew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="12dp"
        android:src="@drawable/ic_delete" />

    <ImageView
        android:id="@+id/dBenefitImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_d_benefit"
        android:visibility="gone" />

</RelativeLayout>