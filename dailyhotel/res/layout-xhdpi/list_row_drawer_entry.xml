<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/drawerMenuItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp" />

    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
        android:id="@+id/drawerMenuItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="28dp"
        android:gravity="left|center_vertical"
        android:textColor="@drawable/selector_color_drawermenu"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/newEventIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/event_ic_n"
        android:visibility="gone" />

</LinearLayout>