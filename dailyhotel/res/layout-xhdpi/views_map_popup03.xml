<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/hotelLayout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" >

        <include
            android:id="@+id/view03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/view_map_item" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cancelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/hotelLayout02"
        android:layout_alignTop="@id/hotelLayout02"
        android:layout_marginRight="-87dp"
        android:layout_marginTop="-7dp"
        android:src="@drawable/img_btn_cancel" />

    <RelativeLayout
        android:id="@+id/hotelLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hotelLayout02"
        android:layout_centerHorizontal="true" >

        <include
            android:id="@+id/view01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/view_map_item" />

        <include
            android:id="@+id/view02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view01"
            layout="@layout/view_map_item" />
    </RelativeLayout>

</RelativeLayout>