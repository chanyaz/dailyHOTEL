<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/selectarea_underline" />

    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
        android:id="@+id/hotelAddressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/info_ic_map_small"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:freezesText="true"
        android:singleLine="true"
        android:textColor="@color/hoteldetail_contents_text_color"
        android:textSize="13dp" />

    <!--
         <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
        android:id="@+id/hotelSimpleLocationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:freezesText="true"
        android:singleLine="true"
        android:textColor="@color/hoteldetail_contents_text_color"
        android:textSize="13dp"
        android:visibility="gone" />
    -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/selectarea_underline" />

    <fragment
        android:id="@+id/googleMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/selectarea_underline" />

</LinearLayout>