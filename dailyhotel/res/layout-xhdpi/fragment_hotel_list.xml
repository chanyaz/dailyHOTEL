<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hotel_list_background" >

    <FrameLayout
        android:id="@+id/hotelMapLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="109dp"
        layout="@layout/view_empty_list"
        android:visibility="gone" />

    <uk.co.senab.actionbarpulltorefresh.extras.actionbarcompat.PullToRefreshLayout
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ptr_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.twoheart.dailyhotel.widget.PinnedSectionListView
            android:id="@+id/listview_hotel_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null" />
    </uk.co.senab.actionbarpulltorefresh.extras.actionbarcompat.PullToRefreshLayout>

    <!--
         <com.twoheart.dailyhotel.widget.DailyFloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/img_ic_map_mini"
        android:visibility="gone"
        fab:fab_colorNormal="@color/floating_action_button_default"
        fab:fab_colorPressed="@color/floating_action_button_pressed"
        fab:fab_colorRipple="@color/floating_action_button_pressed" />
    -->

    <View
        android:id="@+id/daysBackgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textView_textColor_shadow_soldout"
        android:visibility="gone" />

    <HorizontalScrollView
        android:id="@+id/daysLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="110dp"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:fadeScrollbars="true"
        android:scrollbars="none"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:baselineAligned="false" >

            <include
                android:id="@+id/item01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/view_selectday_item" />

            <include
                android:id="@+id/item02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/view_selectday_item" />

            <include
                android:id="@+id/item03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/view_selectday_item" />

            <include
                android:id="@+id/item04"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/view_selectday_item" />

            <include
                android:id="@+id/item05"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/view_selectday_item" />

            <include
                android:id="@+id/item06"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/view_selectday_item" />

            <include
                android:id="@+id/item07"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/view_selectday_item" />

            <include
                android:id="@+id/item08"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/view_selectday_item" />

            <include
                android:id="@+id/item09"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/view_selectday_item" />

            <include
                android:id="@+id/item10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/view_selectday_item" />

            <include
                android:id="@+id/item11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/view_selectday_item" />

            <include
                android:id="@+id/item12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/view_selectday_item" />

            <include
                android:id="@+id/item13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/view_selectday_item" />

            <include
                android:id="@+id/item14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/view_selectday_item" />
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>