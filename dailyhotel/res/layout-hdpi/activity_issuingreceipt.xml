<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/toolbar_actionbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        layout="@layout/toolbar_default" />

    <View
        android:id="@+id/toolbar_actionbarUnderLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBaseline="@id/toolbar_actionbar"
        android:layout_alignBottom="@id/toolbar_actionbar"
        android:background="@color/actionbar_underline" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_actionbar"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/receiptLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="7dp" >

            <!-- 예약 세부정보 -->

            <RelativeLayout
                android:id="@+id/bookingInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/receipt_bg_top"
                android:paddingLeft="11dp"
                android:paddingRight="11dp" >

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/label_receipt_bookinginfo"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView1"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_reservation_index"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView1"
                    android:layout_marginLeft="69dp"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView12"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_hotelname"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView12"
                    android:layout_marginLeft="69dp"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:layout_toRightOf="@id/textView2"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView2"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_hoteladdress"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView2"
                    android:layout_marginLeft="58dp"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:layout_toRightOf="@id/textView4"
                    android:gravity="right"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView5"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_customerinfo"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView5"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView6"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_checkinout"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView6"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textVie10"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView8"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_nights_rooms"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView8"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
            </RelativeLayout>

            <!-- 결제 정보 -->

            <RelativeLayout
                android:id="@+id/paymentInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_below="@+id/bookingInfoLayout"
                android:background="@drawable/receipt_bg_middle"
                android:paddingLeft="11dp"
                android:paddingRight="11dp" >

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/label_receipt_paymentinfo"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView21"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_paymentday"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView21"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView22"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_supplyvalue"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView22"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView24"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_vat"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView24"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView26"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_discount"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView26"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView28"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_payment"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView28"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_below="@id/textView30"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:gravity="center_vertical"
                    android:text="@string/label_receipt_paymenttype"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView30"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
            </RelativeLayout>

            <!-- 공급자 -->

            <RelativeLayout
                android:id="@+id/providerInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/paymentInfoLayout"
                android:background="@drawable/receipt_bg_bottom"
                android:paddingBottom="15dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/receipt_bg_bottom_dot" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="14dp"
                    android:text="@string/label_receipt_provider"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/receipt_logo" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_below="@id/imageView1"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_below="@id/imageView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/imageView1"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView45"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_below="@id/textView42"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:text="@string/label_receipt_address"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView42"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:layout_toRightOf="@id/textView45"
                    android:lineSpacingExtra="@dimen/hdpi_issuingreceipt_linespacing"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView47"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_below="@+id/textView46"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textView46"
                    android:textColor="@color/receipt_detail_text"
                    android:textSize="10dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/textView49"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView48"
                    android:layout_marginTop="@dimen/hdpi_issuingreceipt_linespacing"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/dh_theme_color"
                    android:textSize="10dp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>