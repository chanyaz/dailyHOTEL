<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dh_gray96">

    <LinearLayout 
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </LinearLayout>
    
    <LinearLayout 
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dh_logo_square"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </LinearLayout>
    
     <LinearLayout 
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal">

         <ImageView 
             android:id="@+id/iv_splash_spinner"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:scaleType="fitXY"
             android:src="@drawable/abs__spinner_48_inner_holo"/>
         
         <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="10dp"
	        android:gravity="center|center_vertical"
	        android:textColor="@color/dh_dark_gray_blue"
	        android:textSize="15dp"
	        android:text="Delivering HOTELs…">
    	</TextView>
    </LinearLayout>
    
    <TextView 
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center|center_vertical"
        android:textColor="@color/dh_dark_gray_blue"
        android:text="11시에 시작되는 놀라운 할인 호텔">
    </TextView>
    
    <LinearLayout 
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </LinearLayout>

</LinearLayout>