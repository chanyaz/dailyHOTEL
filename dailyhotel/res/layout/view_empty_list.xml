<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_window_background"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_booking_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/img_ic_empty" />

        <TextView
            android:id="@+id/tv_booking_empty_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_booking_empty"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="@string/frag_hotel_list_line"
            android:textColor="@color/textView_textColor_sub"
            android:textSize="16.5dp" />

        <TextView
            android:id="@+id/tv_booking_empty_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_booking_empty_desc"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/frag_hotel_list_no_hotels"
            android:textColor="@color/textView_textColor_main"
            android:textSize="20dp" />
    </RelativeLayout>

</FrameLayout>