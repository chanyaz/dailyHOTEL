<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical" >

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/messageTextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag_hotel_list_no_hotels"
                android:textColor="@color/waitfragment_maintext"
                android:textSize="18dp"
                android:textStyle="bold" />

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/messageTextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:text="@string/frag_hotel_list_no_line"
                android:textColor="@color/waitfragment_subtext"
                android:textSize="16dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/textLayout"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:src="@drawable/no_event_ic" />
    </RelativeLayout>

</RelativeLayout>