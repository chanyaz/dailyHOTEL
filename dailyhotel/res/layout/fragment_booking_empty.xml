<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_booking_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/img_ic_empty" />

    <TextView
        android:id="@+id/tv_booking_empty_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_booking_empty"
        android:gravity="center|center_vertical"
        android:layout_marginBottom="30dp"
        android:textColor="#7f7f7f"
        android:text="오늘은 멋진 호텔에서\n하루를 보내는게 어때요?"
        android:textSize="16.5dp" >
    </TextView>

    <TextView
        android:id="@+id/tv_booking_empty_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_booking_empty_desc"
        android:layout_marginBottom="10dp"
        android:gravity="center|center_vertical"
        android:text="예약된 호텔이 없습니다!"
        android:textColor="#5c5c5c"
        android:textSize="20dp" >
    </TextView>

    <Button
        android:id="@+id/btn_booking_empty_signup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/shape_button_background"
        android:text="10초만에 무료 회원가입"
        android:textColor="@color/white" />

</RelativeLayout>