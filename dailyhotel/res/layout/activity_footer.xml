<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white"
    android:weightSum="1">
    
    <TextView 
        android:layout_weight="0.2"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center|center_vertical"
        android:textSize="15dp"
        android:textColor="@color/dh_dark_gray_blue"
        android:text="데일리는\n인테리어, 서비스, 지역과 할인률에 따라\n호텔을 엄선합니다."/>
    
    <TextView 
        android:layout_weight="0.1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center|center_vertical"
        android:textSize="15dp"
        android:textColor="@color/dh_dark_gray_blue"
        android:text="여러분의 특별한 하루를 위해\n오늘 최고의 호텔만을 소개해드립니다."/>

    <TextView 
        android:layout_weight="0.3"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center|center_vertical"
        android:textSize="15dp"
        android:textColor="@color/dh_theme_color"
        android:text="특별한 오늘을 지금 예약하세요!"/>
    
    
    <ImageView 
        android:layout_weight="0.4"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:src="@drawable/dh_selectedhotel"/>

</LinearLayout>