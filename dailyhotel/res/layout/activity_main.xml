<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/left_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="56dp" >

            <ListView
                android:id="@+id/drawListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@android:color/white"
                android:cacheColorHint="@android:color/transparent"
                android:choiceMode="singleChoice"
                android:divider="@color/leftdrawer_divider"
                android:dividerHeight="1px"
                android:listSelector="@android:color/transparent" />
        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>

    <RelativeLayout
        android:id="@+id/actionBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include
            android:id="@+id/toolbar_actionbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            layout="@layout/toolbar_default" />

        <ImageView
            android:id="@+id/newEventView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/event_ic_n" />

        <View
            android:id="@+id/toolbar_actionbar_underline"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignBaseline="@id/toolbar_actionbar"
            android:layout_alignBottom="@id/toolbar_actionbar"
            android:background="@color/actionbar_underline" />
    </RelativeLayout>

    <View
        android:id="@+id/anchorAnimation"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:clickable="true"
        android:visibility="invisible" />

</RelativeLayout>