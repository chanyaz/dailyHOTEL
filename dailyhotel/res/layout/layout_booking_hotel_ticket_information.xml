<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 객실 정보 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_section_background"
        android:orientation="horizontal"
        android:paddingBottom="9dp"
        android:paddingLeft="13dp"
        android:paddingTop="20dp" >

        <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/label_booking_room_info"
            android:textColor="@color/textView_textColor_section"
            android:textSize="12.5dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:gravity="center_vertical" >

        <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/label_booking_room_type"
            android:textColor="@color/booking_subtext"
            android:textSize="15dp" />

        <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
            android:id="@+id/roomTypeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="right|center_vertical"
            android:lines="1"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/textView_textColor_main"
            android:textSize="15dp" />
    </LinearLayout>

</merge>