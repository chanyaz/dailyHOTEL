<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp" >

    <!-- img -->

    <ImageView
        android:id="@+id/iv_hotel_row_img"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:adjustViewBounds="true"
        android:background="@drawable/img_placeholder"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/ll_hotel_row_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/rl_hotel_upper"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentTop="true" >
        </RelativeLayout>

        <!-- board -->

        <RelativeLayout
            android:id="@+id/rl_hotel_under"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_hotel_upper"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="13dp" >

            <RelativeLayout
                android:id="@+id/ll_hotel_under_upper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- <FrameLayout -->
                <!-- android:id="@+id/fl_hotel_row_grade" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_centerVertical="true" -->
                <!-- android:layout_alignParentLeft="true" > -->


                <!-- <com.twoheart.dailyhotel.widget.NanumBarunTextView -->
                <!-- android:id="@+id/tv_hotel_row_grade" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:gravity="center" -->
                <!-- android:singleLine="true" -->
                <!-- android:text="특급" -->
                <!-- android:textColor="@android:color/white" -->
                <!-- android:textSize="11.5dp" /> -->
                <!-- </FrameLayout> -->

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/hv_hotel_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingBottom="1px"
                    android:paddingLeft="5.5dp"
                    android:paddingRight="5.5dp"
                    android:paddingTop="2px"
                    android:textColor="@android:color/white"
                    android:textSize="11.5dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/tv_hotel_row_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_hotel_row_discount"
                    android:layout_toRightOf="@+id/hv_hotel_grade"
                    android:ellipsize="marquee"
                    android:freezesText="true"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingLeft="6dp"
                    android:paddingRight="3dp"
                    android:scrollHorizontally="true"
                    android:shadowColor="@color/textView_textColor_shadow"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="0.01"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/tv_hotel_row_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:shadowColor="@color/textView_textColor_shadow"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="0.01"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_hotel_under_upper"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/tv_hotel_row_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/tv_hotel_row_price"
                    android:gravity="center_vertical"
                    android:shadowColor="@color/textView_textColor_shadow"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="0.01"
                    android:singleLine="true"
                    android:textColor="#cecece"
                    android:textSize="13.5dp" />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:id="@+id/tv_hotel_row_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:shadowColor="@color/textView_textColor_shadow"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="0.01"
                    android:textColor="#cecece"
                    android:textSize="13.5dp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
        android:id="@+id/tv_hotel_row_soldout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textView_textColor_shadow_soldout"
        android:gravity="center_vertical|center"
        android:text="SOLD OUT"
        android:textColor="@android:color/darker_gray"
        android:textSize="40dp"
        android:visibility="gone" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/hotel_list_item_underline" />

</RelativeLayout>