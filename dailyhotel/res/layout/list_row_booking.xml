<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="169dp" >

    <ImageView
        android:id="@+id/hotelImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@drawable/img_placeholder"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/usedDimView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_a80"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/dim_center"
        android:gravity="center"
        android:orientation="vertical" >

        <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
            android:id="@+id/waitAccountTextView"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginBottom="11dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/bookingIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:visibility="gone" />

        <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
            android:id="@+id/tv_booking_row_name"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
            android:id="@+id/tv_booking_row_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/hotel_list_item_underline" />

</RelativeLayout>