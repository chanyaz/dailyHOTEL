<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@color/dh_gray96">
    
    <EditText 
        android:id="@+id/et_signup_phone"
        android:paddingLeft="10dp"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:maxLength="20"
        android:inputType="phone"
        android:singleLine="true"
        android:background="@drawable/edit_text_holo_light"
        android:textColorHint="@color/dh_gray50"
        android:hint="휴대폰 번호 ( '-' 제외)"/>
    
    <EditText 
        android:id="@+id/et_signup_email"
        android:paddingLeft="10dp"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:maxLength="50"
        android:background="@drawable/edit_text_holo_light"
        android:textColorHint="@color/dh_gray50"
        android:hint="Email"/>
    
    <EditText 
        android:id="@+id/et_signup_name"
        android:paddingLeft="10dp"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="text"
        android:singleLine="true"
        android:maxLength="20"
        android:background="@drawable/edit_text_holo_light"
        android:textColorHint="@color/dh_gray50"
        android:hint="이름 (체크인시 사용)"/>
    
    <EditText 
        android:id="@+id/et_signup_pwd"
        android:paddingLeft="10dp"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:maxLength="20"
        android:background="@drawable/edit_text_holo_light"
        android:textColorHint="@color/dh_gray50"
        android:hint="비밀번호 (4자이상)"/>
    
    <EditText 
        android:id="@+id/et_signup_recommender"
        android:paddingLeft="10dp"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:singleLine="true"
        android:maxLength="10"
        android:background="@drawable/edit_text_holo_light"
        android:textColorHint="@color/dh_gray50"
        android:hint="&lt;선택&gt; 추천인 코드"/>
	
    <Button 
        android:id="@+id/btn_signup"
        android:layout_marginTop="10dp"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center|center_vertical"
        android:background="@drawable/shape_button_background"
        android:textColor="@color/white"
        android:text="회원가입"/>
    
    <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:weightSum="1"
            android:orientation="horizontal">
         	
            <TextView 
                android:id="@+id/tv_signup_agreement"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="0.5"
	            android:gravity="center"
	            android:textColor="#7f7f7f"
	            android:text="이용약관"/>
            
            <TextView
                android:id="@+id/tv_signup_personal_info" 
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="0.5"
	            android:gravity="center"
	            android:textColor="#7f7f7f"
	            android:text="개인정보 취급방침"/>
            
        </LinearLayout>
    
</LinearLayout>