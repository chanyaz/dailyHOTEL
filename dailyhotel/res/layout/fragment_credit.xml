<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_credit_not_logged_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/empty_background_event"
        android:visibility="visible" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="@drawable/no_event_bg" />

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical" >

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/tv_wait_timer_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/act_credit_recom"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/tv_wait_timer_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:text="@string/act_credit_line1"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/textLayout"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:src="@drawable/ic_coin" />

        <LinearLayout
            android:id="@+id/btn_no_login_signup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="25dp"
            android:background="@drawable/open_stanby_btn_alert"
            android:gravity="center_horizontal" >

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/btn_booking_empty_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:gravity="center"
                android:text="@string/act_credit_sign_up"
                android:textColor="@android:color/white"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_no_login_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_above="@id/btn_no_login_signup"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/open_stanby_btn_alert"
            android:gravity="center_horizontal" >

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/btn_booking_empty_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:gravity="center"
                android:text="@string/frag_booking_btn_login"
                android:textColor="@android:color/white"
                android:textSize="18dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_credit_logged_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_section_background"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="13dp"
            android:paddingTop="20dp" >

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/act_credit_view_credit"
                android:textColor="@color/textView_textColor_section"
                android:textSize="12.5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/iv_credit_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_ic_coin" />

                    <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                        android:id="@+id/tv_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/iv_credit_icon"
                        android:text="@string/act_credit_current_credit"
                        android:textColor="@color/textView_textColor_sub"
                        android:textSize="15dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_credit_totalss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                        android:id="@+id/tv_credit_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ï¿¦0"
                        android:textColor="@color/textView_textColor_main"
                        android:textSize="16.5dp" />

                    <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                        android:id="@+id/tv_credit_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:text="@string/act_credit_history"
                        android:textColor="@color/textView_textColor_sub"
                        android:textSize="13.5dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_section_background"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="13dp"
            android:paddingTop="20dp" >

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/act_credit_recom_code"
                android:textColor="@color/textView_textColor_section"
                android:textSize="12.5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp" >

                <ImageView
                    android:id="@+id/iv_code_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_ic_code" />

                <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                    android:id="@+id/tv_recommender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/iv_code_icon"
                    android:text="@string/act_credit_my_recom_code"
                    android:textColor="@color/textView_textColor_sub"
                    android:textSize="15dp" />

                <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                    android:id="@+id/tv_credit_recommender_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="0000"
                    android:textColor="@color/textView_textColor_main"
                    android:textSize="16.5dp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:background="@color/common_border" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="10dp" >

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/tv_credit_recommender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="@string/act_credit_line4"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="13.5dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom|center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/btn_credit_invite_frd"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/kakaotalk_background"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:src="@drawable/img_ic_kakao" />

                <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="@string/act_credit_kakao"
                    android:textColor="@color/kakaotalk_textcolkr"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>