<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/toolbar_actionbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        layout="@layout/toolbar_default" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBaseline="@id/toolbar_actionbar"
        android:layout_alignBottom="@id/toolbar_actionbar"
        android:background="@color/actionbar_underline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_actionbar"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <com.twoheart.dailyhotel.widget.DailyCustomFontEditText
            android:id="@+id/et_login_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="@string/act_login_email"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@color/textView_textColor_disabled" >

            <requestFocus />
        </com.twoheart.dailyhotel.widget.DailyCustomFontEditText>

        <com.twoheart.dailyhotel.widget.DailyCustomFontEditText
            android:id="@+id/et_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/act_login_pwd"
            android:imeActionId="@+id/btn_login"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@color/textView_textColor_disabled" />

        <com.twoheart.dailyhotel.widget.DailyCustomFontSwitchCompat
            android:id="@+id/cb_login_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingRight="4dp"
            android:paddingTop="10dp"
            android:text="@string/act_login_autologin"
            android:textColor="@color/textView_textColor_main"
            android:textOff=""
            android:textOn="" />

        <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_button_common_background"
            android:gravity="center"
            android:text="@string/act_login_btn_login"
            android:textColor="@android:color/white"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                android:id="@+id/tv_login_forgot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/act_login_forgot_pwd"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="12dp" />

            <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="|"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="14.5dp" />

            <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                android:id="@+id/tv_login_signup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/act_login_signup"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="12dp" />
        </LinearLayout>

        <com.facebook.widget.LoginButton
            android:id="@+id/authButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:textSize="17dp" />

    </LinearLayout>

</RelativeLayout>