<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" >

    <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
        android:id="@+id/provinceTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_background_province"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@drawable/selector_textview_selectarea_groupcolor"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/updownArrowImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_details_menu_off" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/selectarea_underline" />

</RelativeLayout>