<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/dh_gray96"
    android:orientation="vertical">
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    
	    <LinearLayout
		    android:id="@+id/layout_booking_emty"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="@color/dh_gray96"
		    android:weightSum="1"
		    android:orientation="vertical"
		    android:visibility="gone">
		    
		    <TextView 
		        android:layout_weight="0.2"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:gravity="center|center_vertical"
		        android:textSize="30dp"
		        android:textColor="@color/dh_dark_gray_blue"
		        android:text="예약된 호텔이 없습니다!">
		     </TextView>
		     
		    <TextView 
		        android:layout_weight="0.2"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:gravity="center|center_vertical"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:textSize="15dp"
		        android:textColor="@color/dh_dark_gray_blue"
		        android:text="오늘은 멋진 호텔에서 하루를 \n보내는게 어때요?">
		     </TextView>
		    
		    <LinearLayout 
		        android:layout_weight="0.3"
		        android:layout_width="match_parent"
		        android:layout_height="0dp">
		        
		        <ImageView 
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:src="@drawable/dh_logo_nothing"/>
		        
		    </LinearLayout>
			
		    <LinearLayout 
		        android:layout_weight="0.1"
		        android:layout_width="match_parent"
		        android:layout_height="0dp">
		    </LinearLayout>
		    
		     <LinearLayout 
		        android:layout_weight="0.1"
		        android:layout_width="match_parent"
		        android:layout_height="0dp">
		    </LinearLayout>
		        
		</LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/layout_booking_confirm"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:visibility="gone">
	        
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="vertical" 
			    android:weightSum="1">
		    
			    <TextView 
			        android:id="@+id/tv_booking_day"
			        android:layout_width="match_parent"
			        android:layout_height="50dp"
			        android:gravity="center_vertical|center"
			        android:textColor="@color/dh_dark_gray_blue"
			        android:textSize="25dp"/>
			    
			    <TextView 
			        android:layout_width="match_parent"
			        android:layout_height="50dp"
			        android:gravity="center_vertical|center"
			        android:textColor="@color/dh_dark_gray_blue"
			        android:textSize="20dp"
			        android:text="프론트에 성함을 말씀해주세요"/>
			    
			    <TextView
			        android:id="@+id/tv_booking_user_name" 
			        android:layout_width="match_parent"
			        android:layout_height="100dp"
			        android:gravity="center_vertical|center"
			        android:textColor="@color/dh_dark_gray_blue"
			        android:text="OOO 님"
			        android:textSize="40dp"/>
			    
			    <View 
			        android:layout_width="match_parent"
			        android:layout_height="1dp"
			        android:background="@color/dh_gray50"/>
			    
			   <LinearLayout 
			        android:layout_height="100dp"
			        android:layout_width="match_parent"
			        android:orientation="horizontal">
			        
			        <LinearLayout 
			            android:layout_height="match_parent"
			            android:layout_width="50dp"
			            android:paddingLeft="10dp"
			            android:orientation="vertical"
			            android:weightSum="1">
			            
			            <LinearLayout 
			                android:layout_weight="0.5"
			                android:layout_height="0dp"
			                android:layout_width="match_parent">
			            	
			                <ImageView 
			                android:layout_width="match_parent"
			                android:layout_height="20dp"
			                android:layout_gravity="center"
			                android:src="@drawable/dh_grademark_residence"/>
			                
			            </LinearLayout>
			            
			            
			        </LinearLayout>
			        
			        <LinearLayout 
			            android:layout_weight="1"
			            android:layout_height="match_parent"
			            android:layout_width="0dp"
			            android:paddingLeft="5dp"
			            android:orientation="vertical">
			            
			            <TextView 
			                android:id="@+id/tv_booking_hotel_name"
			                android:layout_weight="0.5"
			                android:layout_width="match_parent"
			                android:layout_height="0dp"
			                android:gravity="center_vertical|left"
			                android:textColor="@color/dh_dark_gray_blue"
			                android:textSize="20dp"/>
			            
			            <TextView 
			                android:id="@+id/tv_booking_address"
			                android:layout_weight="0.5"
			                android:layout_width="match_parent"
			                android:layout_height="0dp"
			                android:gravity="center_vertical|left"
			                android:textColor="@color/dh_gray50"
			                android:textSize="15dp"/>
			            
			        </LinearLayout>
			         
			    </LinearLayout>
			    
			    <View 
			        android:layout_width="match_parent"
			        android:layout_height="1dp"
			        android:background="@color/dh_gray50"/>
			        
			    <LinearLayout  
			        android:id="@+id/layout_booking_info"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical">
		        
				</LinearLayout>
				
			    <FrameLayout 
			        android:layout_width="match_parent"
			        android:layout_height="300dp"
			        android:layout_margin="10dp">
		    
			        <fragment
				        android:id="@+id/frag_map"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        class="com.google.android.gms.maps.SupportMapFragment" />
		        
		    	</FrameLayout>
			    
			</LinearLayout>
		
		</LinearLayout>
	
    </LinearLayout>
	
</ScrollView>
