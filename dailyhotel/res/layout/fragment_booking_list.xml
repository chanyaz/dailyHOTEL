<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/listview_booking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_window_background"
        android:divider="@null"
        android:fadingEdge="none"
        android:scrollbars="vertical" />

    <RelativeLayout
        android:id="@+id/layout_booking_empty"
        android:background="@drawable/gradient_window_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/iv_booking_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/img_ic_empty" />

        <TextView
            android:id="@+id/tv_booking_empty_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_booking_empty"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="@string/frag_booking_line"
            android:textColor="@color/textView_textColor_sub"
            android:textSize="16.5dp" />

        <TextView
            android:id="@+id/tv_booking_empty_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_booking_empty_desc"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/frag_booking_no_hotels"
            android:textColor="@color/textView_textColor_main"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_booking_empty_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="22.5dp"
            android:background="@drawable/shape_button_common_background"
            android:text="@string/frag_booking_btn_login"
            android:textColor="@android:color/white"
            android:textSize="17dp" />

    </RelativeLayout>

</FrameLayout>