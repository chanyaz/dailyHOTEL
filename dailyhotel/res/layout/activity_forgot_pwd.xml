<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/toolbar_actionbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        layout="@layout/toolbar_default" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBaseline="@id/toolbar_actionbar"
        android:layout_alignBottom="@id/toolbar_actionbar"
        android:background="@color/actionbar_underline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_actionbar"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <EditText
            android:id="@+id/et_forgot_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_holo_light"
            android:ems="10"
            android:hint="@string/act_forgot_pwd_email"
            android:imeActionId="@+id/btn_forgot_pwd"
            android:maxLength="50"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@color/textView_textColor_sub" >

            <requestFocus />
        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="@string/act_forgot_pwd_text"
            android:textColor="@color/textView_textColor_sub"
            android:textSize="13.5dp" />

        <Button
            android:id="@+id/btn_forgot_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="62dp"
            android:background="@drawable/shape_button_common_background"
            android:paddingLeft="10dp"
            android:text="@string/act_forgot_pwd_forgot"
            android:textColor="@android:color/white"
            android:textSize="17dp" />
    </LinearLayout>

</RelativeLayout>