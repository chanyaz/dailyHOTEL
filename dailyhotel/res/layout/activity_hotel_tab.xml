<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/toolbar_actionbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        layout="@layout/toolbar_default" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBaseline="@id/toolbar_actionbar"
        android:layout_alignBottom="@id/toolbar_actionbar"
        android:background="@color/actionbar_underline" />

    <com.twoheart.dailyhotel.widget.TabIndicator
        android:id="@+id/tabindicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/toolbar_actionbar"
        android:background="@color/tab_background" />

    <View
        android:id="@+id/underLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tabindicator"
        android:background="@color/tab_underline" />

    <RelativeLayout
        android:id="@+id/rl_hotel_tab_buttons"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp" >

        <TextView
            android:id="@+id/btn_hotel_tab_booking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_button_common_background"
            android:gravity="center"
            android:text="@string/act_hotel_tab_btn"
            android:textColor="@android:color/white"
            android:textSize="17dp" />

        <Button
            android:id="@+id/tv_hotel_tab_soldout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/dh_btn_soldout"
            android:gravity="center_vertical|center"
            android:padding="0dp"
            android:visibility="gone" />
    </RelativeLayout>

    <com.twoheart.dailyhotel.widget.FragmentViewPager
        android:id="@+id/fragmentViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_hotel_tab_buttons"
        android:layout_below="@id/underLine" />

</RelativeLayout>