<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|center_vertical"
    android:background="@android:color/black">
    
   <LinearLayout 
       android:layout_height="120dp"
       android:layout_width="200dp"
       android:orientation="vertical"
       android:background="@android:color/white">
       
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="60dp">
           
           <ImageView 
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_margin="10dp"
               android:background="@drawable/img_ic_appicon"/>
           
           <LinearLayout 
               android:layout_height="40dp"
               android:layout_width="match_parent"
               android:layout_marginTop="10dp"
               android:layout_marginRight="10dp"
               android:orientation="vertical">
               
              <com.twoheart.dailyhotel.widget.DailyCustomFontTextView 
                  android:layout_width="match_parent"
                  android:layout_height="25dp"
                  android:textColor="@color/textView_textColor_main"
                  android:textSize="20dp"
                  android:text="@string/alarm_title"/>
              
              <com.twoheart.dailyhotel.widget.DailyCustomFontTextView 
                  android:layout_width="match_parent"
                  android:layout_height="15dp"
                  android:textColor="@color/textView_textColor_sub"
                  android:textSize="10dp"
                  android:text="@string/alarm_ticker"/>
               
           </LinearLayout>
           
       </LinearLayout>
       
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="60dp">
           
           <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
               android:id="@+id/btn_push_ok"
               android:layout_width="80dp"
               android:layout_height="match_parent"
               android:layout_margin="10dp"
               android:background="@drawable/shape_button_common_background"
               android:gravity="center"
               android:text="@string/alarm_btn_see"
               android:textColor="@android:color/white"
               android:textSize="17dp" />
           
           <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
               android:id="@+id/btn_push_cancle" 
               android:layout_height="match_parent"
               android:layout_width="80dp"
               android:layout_margin="10dp"
               android:textColor="@android:color/white"
               android:text="@string/alarm_btn_close"
               android:background="@drawable/shape_button_common_background"
               android:gravity="center"
               android:textSize="17dp"/>
           
       </LinearLayout>
       
   </LinearLayout>

</LinearLayout>
