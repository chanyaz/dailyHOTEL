<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.twoheart.dailyhotel"
    android:id="@+id/sv_booking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_section_background"
                android:orientation="horizontal"
                android:paddingBottom="9dp"
                android:paddingLeft="13dp"
                android:paddingTop="20dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/act_booking_chkin_info"
                    android:textColor="@color/textView_textColor_section"
                    android:textSize="12.5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:text="@string/act_booking_chkin"
                        android:textColor="@drawable/selector_textview_textcolor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_hotel_payment_checkin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="right|center_vertical"
                        android:textColor="@drawable/selector_textview_textcolor"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:text="@string/act_booking_chkout"
                        android:textColor="@drawable/selector_textview_textcolor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_hotel_payment_checkout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="right|center_vertical"
                        android:textColor="@drawable/selector_textview_textcolor"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_section_background"
                android:orientation="horizontal"
                android:paddingBottom="9dp"
                android:paddingLeft="13dp"
                android:paddingTop="20dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/act_booking_reserver_info"
                    android:textColor="@color/textView_textColor_section"
                    android:textSize="12.5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/ll_reserver_info_label"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center_vertical"
                                android:text="@string/act_booking_reserver"
                                android:textColor="@drawable/selector_textview_textcolor"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tv_hotel_payment_reserver_name"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:gravity="right|center_vertical"
                                android:textColor="@drawable/selector_textview_textcolor"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center_vertical"
                                android:text="@string/act_booking_mobile"
                                android:textColor="@drawable/selector_textview_textcolor"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tv_hotel_payment_reserver_number"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:gravity="right|center_vertical"
                                android:textColor="@drawable/selector_textview_textcolor"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center_vertical"
                                android:text="@string/act_booking_email"
                                android:textColor="@drawable/selector_textview_textcolor"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tv_hotel_payment_reserver_email"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:gravity="right|center_vertical"
                                android:textColor="@drawable/selector_textview_textcolor"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_reserver_info_editable"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center_vertical"
                                android:text="@string/act_booking_reserver"
                                android:textColor="@drawable/selector_textview_textcolor"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/et_hotel_payment_reserver_name"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:gravity="right|center_vertical"
                                android:inputType="text"
                                android:maxLength="20"
                                android:singleLine="true"
                                android:textColor="@drawable/selector_textview_textcolor"
                                android:textSize="15dp" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center_vertical"
                                android:text="@string/act_booking_mobile"
                                android:textColor="@drawable/selector_textview_textcolor"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/et_hotel_payment_reserver_number"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:gravity="right|center_vertical"
                                android:inputType="phone"
                                android:maxLength="20"
                                android:singleLine="true"
                                android:textColor="@drawable/selector_textview_textcolor"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center_vertical"
                                android:text="@string/act_booking_email"
                                android:textColor="@drawable/selector_textview_textcolor"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/et_hotel_payment_reserver_email"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:gravity="right|center_vertical"
                                android:inputType="textEmailAddress"
                                android:maxLength="50"
                                android:singleLine="true"
                                android:textColor="@drawable/selector_textview_textcolor"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_section_background"
                android:orientation="horizontal"
                android:paddingBottom="9dp"
                android:paddingLeft="13dp"
                android:paddingTop="20dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/act_booking_payment"
                    android:textColor="@color/textView_textColor_section"
                    android:textSize="12.5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/act_booking_credit_use"
                            android:textColor="@drawable/selector_textview_textcolor"
                            android:textSize="15dp" />

                        <com.twoheart.dailyhotel.widget.Switch
                            android:id="@+id/btn_on_off"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp" >

                        <TextView
                            android:id="@+id/tv_hotel_payment_original_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical"
                            android:text="@string/act_booking_price"
                            android:textColor="@drawable/selector_textview_textcolor"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_hotel_payment_original_price_value"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="right|center_vertical"
                            android:text="@string/act_booking_0won"
                            android:textColor="@drawable/selector_textview_textcolor"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp" >

                        <TextView
                            android:id="@+id/tv_hotel_payment_credit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical"
                            android:text="@string/act_booking_credit_discount"
                            android:textColor="@drawable/selector_textview_textcolor"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_hotel_payment_credit_value"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="right|center_vertical"
                            android:text="@string/act_booking_0won"
                            android:textColor="@drawable/selector_textview_textcolor"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_section_border"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/act_booking_price_real"
                    android:textColor="@drawable/selector_textview_textcolor"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_hotel_payment_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="@string/act_booking_0won"
                    android:textColor="@drawable/selector_textview_textcolor"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <!-- center_horizontal -->
            <RadioGroup
                android:id="@+id/rg_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_payment_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:button="@drawable/btn_radio_holo_light"
                    android:text="@string/act_booking_pay_card" />

                <RadioButton
                    android:id="@+id/rb_payment_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:button="@drawable/btn_radio_holo_light"
                    android:text="@string/act_booking_pay_mobile" />

                <RadioButton
                    android:id="@+id/rb_payment_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/btn_radio_holo_light"
                    android:paddingRight="15dp"
                    android:text="@string/act_booking_pay_account" />
            </RadioGroup>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp" >

            <TextView
                android:id="@+id/tv_card_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:paddingRight="15dp"
                android:text="@string/act_booking_payment_info"
                android:textColor="@color/textView_textColor_section"
                android:textSize="12.5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="12dp" >
			
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_button_common_background"
				android:gravity="center_horizontal">
                
                    <ImageView
                        android:id="@+id/iv_hotel_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/img_pp_cc_mark_small" />
                    <Button
                        android:id="@+id/btn_hotel_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@drawable/shape_button_common_background"
                        android:layout_toRightOf="@+id/iv_hotel_payment"
                        android:text="@string/act_booking_btn_pay"
                        android:textColor="@android:color/white" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>