<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/toolbar_actionbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        layout="@layout/toolbar_default" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBaseline="@id/toolbar_actionbar"
        android:layout_alignBottom="@id/toolbar_actionbar"
        android:background="@color/actionbar_underline" />

    <ScrollView
        android:id="@+id/sv_booking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_actionbar"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_section_background"
                android:orientation="horizontal"
                android:paddingBottom="9dp"
                android:paddingLeft="13dp"
                android:paddingTop="20dp" >

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/act_booking_chkin_info"
                    android:textColor="@color/textView_textColor_section"
                    android:textSize="12.5dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                        android:id="@+id/checkinTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/act_booking_chkin"
                        android:textColor="@color/booking_subtext"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/checkinTextView"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                            android:id="@+id/checkinDayTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dh_theme_color"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                            android:id="@+id/checkinTimeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="13dp"
                            android:drawableLeft="@drawable/img_ic_reservation_checkin"
                            android:drawablePadding="2dp"
                            android:gravity="right"
                            android:textColor="@drawable/selector_textview_textcolor"
                            android:textSize="15dp" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/booking_vline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                        android:id="@+id/checkoutTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/act_booking_chkout"
                        android:textColor="@color/booking_subtext"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/checkoutTextView"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                            android:id="@+id/checkoutDayTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dh_theme_color"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                            android:id="@+id/checkoutTimeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="13dp"
                            android:drawableLeft="@drawable/img_ic_reservation_checkout"
                            android:drawablePadding="2dp"
                            android:gravity="right"
                            android:textColor="@drawable/selector_textview_textcolor"
                            android:textSize="15dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- 예약자 정보 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_section_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:paddingBottom="9dp"
                android:paddingLeft="13dp"
                android:paddingTop="20dp" >

                <requestFocus />

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/act_booking_reserver_info"
                    android:textColor="@color/textView_textColor_section"
                    android:textSize="12.5dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical" >

                    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/act_booking_reserver"
                        android:textColor="@color/booking_subtext"
                        android:textSize="15dp" />

                    <com.twoheart.dailyhotel.widget.DailyCustomFontEditText
                        android:id="@+id/et_hotel_payment_reserver_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@drawable/selector_textview_textcolor"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical" >

                    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/act_booking_mobile"
                        android:textColor="@color/booking_subtext"
                        android:textSize="15dp" />

                    <com.twoheart.dailyhotel.widget.DailyCustomFontEditText
                        android:id="@+id/et_hotel_payment_reserver_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="right|center_vertical"
                        android:inputType="phone"
                        android:lines="1"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@drawable/selector_textview_textcolor"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical" >

                    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/act_booking_email"
                        android:textColor="@color/booking_subtext"
                        android:textSize="15dp" />

                    <com.twoheart.dailyhotel.widget.DailyCustomFontEditText
                        android:id="@+id/et_hotel_payment_reserver_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@drawable/selector_textview_textcolor"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 결제 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_section_background"
                android:orientation="horizontal"
                android:paddingBottom="9dp"
                android:paddingLeft="13dp"
                android:paddingTop="20dp" >

                <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/act_booking_payment"
                    android:textColor="@color/textView_textColor_section"
                    android:textSize="12.5dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" >

                    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/act_booking_credit_use"
                        android:textColor="@drawable/selector_textview_bookingcolor"
                        android:textSize="15dp" />

                    <com.twoheart.dailyhotel.widget.DailyCustomFontSwitchCompat
                        android:id="@+id/btn_on_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:checked="false"
                        android:gravity="center"
                        android:paddingRight="4dp"
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/booking_hline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="78dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp" >

                    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                        android:id="@+id/tv_hotel_payment_original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/act_booking_price"
                        android:textColor="@drawable/selector_textview_bookingcolor"
                        android:textSize="15dp" />

                    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                        android:id="@+id/tv_hotel_payment_original_price_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/act_booking_0won"
                        android:textColor="@drawable/selector_textview_bookingcolor"
                        android:textSize="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="78dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp" >

                    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                        android:id="@+id/tv_hotel_payment_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/act_booking_credit_discount"
                        android:textColor="@drawable/selector_textview_bookingcolor"
                        android:textSize="15dp" />

                    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                        android:id="@+id/tv_hotel_payment_credit_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/act_booking_0won"
                        android:textColor="@drawable/selector_textview_bookingcolor"
                        android:textSize="15dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="78dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/booking_hline01" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="78dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp" >

                    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/act_booking_price_real"
                        android:textColor="@drawable/selector_textview_textcolor"
                        android:textSize="15dp" />

                    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                        android:id="@+id/tv_hotel_payment_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right|center_vertical"
                        android:text="@string/act_booking_0won"
                        android:textColor="@color/textView_textColor_main"
                        android:textSize="15dp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/booking_hline" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <!-- 카드 관리 버튼 -->

                <ImageView
                    android:id="@+id/cardManagerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_ic_creditcard_manager" />

                <!-- 결제 종류 선택 -->

                <RadioGroup
                    android:id="@+id/rg_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/cardManagerButton"
                    android:orientation="vertical" >

                    <com.twoheart.dailyhotel.widget.DailyCustomFontRadioButton
                        android:id="@+id/easyPaymentRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/abc_btn_radio_material"
                        android:buttonTint="@color/actionbar_hamburger"
                        android:text="@string/label_booking_easypayment"
                        android:textColor="@color/textView_textColor_main" />

                    <com.twoheart.dailyhotel.widget.DailyCustomFontRadioButton
                        android:id="@+id/rb_payment_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/abc_btn_radio_material"
                        android:buttonTint="@color/actionbar_hamburger"
                        android:text="@string/act_booking_pay_card"
                        android:textColor="@color/textView_textColor_main" />

                    <com.twoheart.dailyhotel.widget.DailyCustomFontRadioButton
                        android:id="@+id/rb_payment_hp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/abc_btn_radio_material"
                        android:buttonTint="@color/actionbar_hamburger"
                        android:text="@string/act_booking_pay_mobile"
                        android:textColor="@color/textView_textColor_main" />

                    <com.twoheart.dailyhotel.widget.DailyCustomFontRadioButton
                        android:id="@+id/rb_payment_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/abc_btn_radio_material"
                        android:buttonTint="@color/actionbar_hamburger"
                        android:paddingRight="15dp"
                        android:text="@string/act_booking_pay_account"
                        android:textColor="@color/textView_textColor_main" />
                </RadioGroup>
            </RelativeLayout>

            <!-- 안내문구 -->

            <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                android:id="@+id/tv_card_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:textColor="@color/textView_textColor_section"
                android:textSize="12.5dp" />

            <!-- 결제 버튼 -->

            <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
                android:id="@+id/btn_hotel_payment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_button_common_background"
                android:gravity="center"
                android:text="@string/act_booking_btn_pay"
                android:textColor="@android:color/white"
                android:textSize="17dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>