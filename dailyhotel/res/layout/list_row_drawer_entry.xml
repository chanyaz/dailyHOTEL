<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="26dp"
    android:paddingLeft="17dp"
    android:paddingTop="26.5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/drawerMenuItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_drawermenu_reservation" />

    <TextView
        android:id="@+id/drawerMenuItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:gravity="left|center_vertical"
        android:text="@string/actionbar_title_hotel_list_frag"
        android:textColor="@drawable/selector_color_drawermenu"
        android:textSize="19.5dp" />

</LinearLayout>