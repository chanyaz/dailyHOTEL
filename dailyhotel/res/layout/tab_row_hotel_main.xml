<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <com.twoheart.dailyhotel.widget.NanumBarunTextView
            android:id="@+id/tab_indicator_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:textColor="@drawable/selector_tab_text_defaultcolor"
            android:textSize="17dp" />

        <com.twoheart.dailyhotel.widget.NanumBarunTextView
            android:id="@+id/tab_indicator_sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:duplicateParentState="true"
            android:textColor="@drawable/selector_tab_subtext_defaultcolor"
            android:textSize="11dp" />

    </LinearLayout>

    <View
        android:id="@+id/tab_indicator_under_line"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:background="@color/dh_theme_color"
        android:visibility="invisible" />

</RelativeLayout>