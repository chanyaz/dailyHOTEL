<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginBottom="4dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
        android:id="@+id/tab_indicator_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:textColor="@drawable/selector_tab_text_defaultcolor"
        android:textSize="17dp" />

    <com.twoheart.dailyhotel.widget.DailyCustomFontTextView
        android:id="@+id/tab_indicator_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:duplicateParentState="true"
        android:textColor="@drawable/selector_tab_subtext_defaultcolor"
        android:textSize="11dp" />

</LinearLayout>