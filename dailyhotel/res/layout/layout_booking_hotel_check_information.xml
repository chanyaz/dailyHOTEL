<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_section_background"
        android:orientation="horizontal"
        android:paddingBottom="9dp"
        android:paddingLeft="13dp"
        android:paddingTop="20dp" >

        <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/act_booking_chkin_info"
            android:textColor="@color/textView_textColor_section"
            android:textSize="12.5dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/checkinTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/act_booking_chkin"
                android:textColor="@color/booking_subtext"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/checkinTextView"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                    android:id="@+id/checkinDayTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dh_theme_color"
                    android:textSize="19dp"
                    android:textStyle="bold" />

                <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                    android:id="@+id/checkinTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="13dp"
                    android:drawableLeft="@drawable/img_ic_reservation_checkin"
                    android:drawablePadding="2dp"
                    android:gravity="right"
                    android:textColor="@drawable/selector_textview_textcolor"
                    android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/booking_vline" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/checkoutTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/act_booking_chkout"
                android:textColor="@color/booking_subtext"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/checkoutTextView"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                    android:id="@+id/checkoutDayTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dh_theme_color"
                    android:textSize="19dp"
                    android:textStyle="bold" />

                <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                    android:id="@+id/checkoutTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="13dp"
                    android:drawableLeft="@drawable/img_ic_reservation_checkout"
                    android:drawablePadding="2dp"
                    android:gravity="right"
                    android:textColor="@drawable/selector_textview_textcolor"
                    android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</merge>