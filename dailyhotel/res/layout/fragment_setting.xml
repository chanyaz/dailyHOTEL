<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#fdfdfd"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1" >

        <!-- 고객센터 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="고객센터"
            android:textColor="@color/textView_textColor_sub"
            android:textSize="13.5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/setting_fragment_section_border" />

        <TextView
            android:id="@+id/tv_setting_call"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:text="전화예약 &amp; 문의"
            android:textColor="@color/textView_textColor_main"
            android:textSize="16.5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#dcdcdc" />

        <TextView
            android:id="@+id/tv_setting_mail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:text="의견 메일 보내기"
            android:textColor="@color/textView_textColor_main"
            android:textSize="16.5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="@color/common_border" />

        <TextView
            android:id="@+id/tv_setting_notice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:text="공지사항"
            android:textColor="@color/textView_textColor_main"
            android:textSize="16.5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="@color/common_border" />

        <TextView
            android:id="@+id/tv_setting_help"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:text="자주 묻는 질문"
            android:textColor="@color/textView_textColor_main"
            android:textSize="16.5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="@color/common_border" />

        <!-- 소개 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="소개"
            android:textColor="@color/textView_textColor_sub"
            android:textSize="13.5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/setting_fragment_section_border" />

        <TextView
            android:id="@+id/tv_setting_introduction"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:text="데일리호텔이란?"
            android:textColor="@color/textView_textColor_main"
            android:textSize="16.5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="@color/common_border" />

        <!-- 앱 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="앱"
            android:textColor="@color/textView_textColor_sub"
            android:textSize="13.5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/setting_fragment_section_border" />

        <LinearLayout
            android:id="@+id/ll_setting_version"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="17dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="left|center_vertical"
                android:text="버전정보"
                android:textColor="@color/textView_textColor_main"
                android:textSize="16.5dp" />

            <TextView
                android:id="@+id/tv_setting_version"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingRight="17dp"
                android:layout_weight="0.3"
                android:gravity="right|center_vertical"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="16.5dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="@color/common_border" />

        <!-- 계정 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="계정"
            android:textColor="@color/textView_textColor_sub"
            android:textSize="13.5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/setting_fragment_section_border" />
        
        <LinearLayout
            android:id="@+id/ll_setting_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="17dp" >

            <TextView
                android:id="@+id/tv_setting_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="left|center_vertical"
                android:textColor="@color/textView_textColor_main"
                android:textSize="16.5dp" />

            <TextView
                android:id="@+id/tv_setting_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingRight="17dp"
                android:layout_weight="0.6"
                android:singleLine="true"
                android:gravity="right|center_vertical"
                android:textColor="@color/textView_textColor_sub"
                android:textSize="16.5dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="@color/common_border" />
    </LinearLayout>

</ScrollView>