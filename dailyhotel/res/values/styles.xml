<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Generated with http://android-holo-colors.com -->
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        
        <item name="actionMenuTextColor">@color/dh_theme_color</item>
        <item name="actionMenuTextAppearance">@style/actionbarMenuTextAppearance</item>
        <item name="actionBarItemBackground">@drawable/item_background_holo_light</item>
        <item name="actionDropDownStyle">@style/DropDownListViewDH_Theme.ActionBar</item>
        <item name="dropDownListViewStyle">@style/DropDownDH_Theme.ActionBar</item>
        <item name="android:ratingBarStyle">@style/RatingBarDH</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="vpiTabPageIndicatorStyle">@style/TabDH_Theme</item>
        <item name="switchStyle">@style/switch_light</item>
        <item name="android:editTextStyle">@style/EditTextDH_Theme</item>
        <item name="android:checkboxStyle">@style/CheckBoxDH_Theme</item>
        <item name="android:spinnerStyle">@style/SpinnerDH_Theme</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemDH_Theme</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarDH_Theme</item>
        <item name="android:listViewStyle">@style/ListViewDH_Theme</item>
        <item name="android:listViewWhiteStyle">@style/ListViewDH_Theme.White</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemDH_Theme</item>
        <item name="android:windowBackground">@color/activity_background</item>
        <item name="ptrHeaderBackground">@android:color/white</item>
        <item name="ptrProgressBarColor">@color/dh_theme_color</item>
    </style>

    <style name="TransDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/TransDialog.Animations</item>
    </style>

    <style name="TransDialog.Animations">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="EditTextDH_Theme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBoxDH_Theme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_light</item>
    </style>

    <style name="SpinnerDH_Theme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/selector_spinner_background</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="SpinnerDropDownItemDH_Theme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="TabDH_Theme" parent="Widget.TabPageIndicator">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:background">@drawable/selector_tab_indicator</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
        <item name="android:textColor">@color/textView_textColor_main</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="ProgressBarDH_Theme" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo_light</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="ListViewDH_Theme" parent="android:Widget.ListView">
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="DropDownListViewDH_Theme.ActionBar" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:dropDownSelector">@drawable/selectable_background</item>
    </style>

    <style name="DropDownDH_Theme.ActionBar" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background</item>
    </style>

    <style name="ListViewDH_Theme.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="SpinnerItemDH_Theme" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="actionbarMenuTextAppearance">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="switch_light">
        <item name="track">@drawable/switch_track_holo_light</item>
        <item name="thumb">@drawable/switch_inner_holo_light</item>
        <item name="textOn">""</item>
        <item name="textOff">""</item>
        <item name="thumbTextPadding">12dip</item>
        <item name="switchMinWidth">96dip</item>
        <item name="switchPadding">16dip</item>
        <item name="switchTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="TextAppearance">
        <item name="textColor">?android:attr/textColorPrimary</item>
        <item name="textColorHighlight">?android:attr/textColorHighlight</item>
        <item name="textColorHint">?android:attr/textColorHint</item>
        <item name="textColorLink">?android:attr/textColorLink</item>
        <item name="textSize">16sp</item>
    </style>

    <style name="RatingBarDH" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/dh_ratingbar_full_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/dh_ratingbar_full_holo_light</item>
    </style>

</resources>