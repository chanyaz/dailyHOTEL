<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twoheart.dailyhotel"
    android:versionCode="26"
    android:versionName="1.2.6" >
    
    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <!-- GCM 관련 퍼미션 -->
    <permission
        android:name="com.twoheart.dailyhotel.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.twoheart.dailyhotel.permission.C2D_MESSAGE" />
    <!-- GCM 받기 -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- GCM을 받으려면 구글 계정 필요 -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- 메시지 받을 때 wake up 하기 위해 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <permission
        android:name="com.twoheart.dailyhotel.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" >
    </permission>

    <uses-permission android:name="com.twoheart.dailyhotel.permission.MAPS_RECEIVE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <application
        android:name="com.twoheart.dailyhotel.DailyHotel"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/img_ic_appicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.twoheart.dailyhotel.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:icon="@drawable/img_ic_appicon"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                
            </intent-filter>
        </activity>
        <activity
            android:name="com.twoheart.dailyhotel.activity.SplashActivity"
            android:launchMode="singleTop"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.twoheart.dailyhotel.activity.HotelTabActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.twoheart.dailyhotel.activity.ImageDetailActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.twoheart.dailyhotel.activity.ZoomMapActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.twoheart.dailyhotel.activity.BookingTabActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.twoheart.dailyhotel.activity.AboutActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.twoheart.dailyhotel.activity.NoticeActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.twoheart.dailyhotel.activity.FAQActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.twoheart.dailyhotel.activity.LoginActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.twoheart.dailyhotel.activity.SignupActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.twoheart.dailyhotel.activity.ForgotPwdActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.twoheart.dailyhotel.activity.TermActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.twoheart.dailyhotel.activity.PrivacyActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.twoheart.dailyhotel.activity.VersionActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.twoheart.dailyhotel.activity.BookingActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
         <activity
            android:name="com.twoheart.dailyhotel.activity.EventWebActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
         <activity
            android:name="com.twoheart.dailyhotel.activity.ProfileActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
          <activity
            android:name="com.twoheart.dailyhotel.IntroActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.twoheart.dailyhotel.activity.PaymentActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name="kr.co.kcp.android.payment.standard.ResultRcvActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="dailyHOTEL" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.twoheart.dailyhotel.activity.PushDialogActivity"
            android:screenOrientation="portrait" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyACc8hv-TecbnEBvl8Z758hBMP1ssqo4gQ" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- GCM 리시버 -->
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.twoheart.dailyhotel" /> <!-- 젤리빈 부터는 category 빼도 된다 -->
            </intent-filter>
        </receiver>
        <!-- GCM 리시버에서 돌리는 서비스 -->
        <service android:name="com.twoheart.dailyhotel.GCMIntentService" /> <!-- 서비스명 변경하면 안됨 -->
        <receiver
            android:name="com.twoheart.dailyhotel.AlarmBroadcastReceiver"
            android:process=":remote" />
        
