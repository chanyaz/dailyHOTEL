<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <!-- 예약자 정보 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_section_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingBottom="9dp"
        android:paddingLeft="13dp">

        <requestFocus/>

        <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="@string/label_booking_user_info"
            android:textColor="@color/textView_textColor_section"
            android:textSize="12.5dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/editLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="13dp">

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:id="@+id/tv_profile_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/act_profile_modify"
                android:textColor="@color/dh_theme_color"
                android:textSize="12.5dp"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/label_booking_user"
                android:textColor="@color/booking_subtext"
                android:textSize="15dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontEditText
                android:id="@+id/userNameEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="right|center_vertical"
                android:inputType="textUri"
                android:lines="1"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@drawable/selector_textview_textcolor"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/act_booking_mobile"
                android:textColor="@color/booking_subtext"
                android:textSize="15dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontEditText
                android:id="@+id/userPhoneEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="right|center_vertical"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@drawable/selector_textview_textcolor"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/act_booking_email"
                android:textColor="@color/booking_subtext"
                android:textSize="15dp"/>

            <com.twoheart.dailyhotel.view.widget.DailyCustomFontEditText
                android:id="@+id/userEmailEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="right|center_vertical"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLength="50"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@drawable/selector_textview_textcolor"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>