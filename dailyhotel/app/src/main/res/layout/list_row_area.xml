<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp">

    <com.twoheart.dailyhotel.view.widget.DailyCustomFontTextView
        android:id="@+id/areaTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_background_area"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="15dp"
        android:textColor="@drawable/selector_textview_selectarea_childcolor"
        android:textSize="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/selectarea_underline"/>

</RelativeLayout>