<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:minHeight="220dp"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@color/dh_gray96">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:background="@color/dh_dark_gray_blue">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="1dp"
            android:background="@color/white">
            
            <!-- img -->
            <RelativeLayout 
                android:layout_height="160dp"
                android:layout_width="match_parent">
                
                <ImageView 
                    android:id="@+id/iv_hotel_row_img"
                    android:layout_height="160dp"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"/>
                
                <TextView 
                    android:id="@+id/tv_hotel_row_soldout"
                    android:layout_height="160dp"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical|center"
                    android:textSize="40dp"
                    android:textColor="@color/white"
                    android:text="SOLD OUT"
                    android:background="#AF000000"/>
                
                <TextView 
                    android:id="@+id/tv_hotel_row_label"
                    android:layout_height="20dp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|center"
                    android:layout_alignParentBottom="true"
                    android:background="#7FE60000"
                    android:textColor="@color/white"/>
              
            </RelativeLayout>
            
            
           <!-- board -->
           <LinearLayout 
               android:layout_height="60dp"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:paddingLeft="5dp"
               android:paddingRight="5dp"
               android:background="@color/white"
               android:weightSum="1">
               
               <LinearLayout 
                   android:layout_weight="0.5"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:weightSum="1"
                   android:orientation="horizontal">
                   
                   <TextView
                       android:id="@+id/tv_hotel_row_name"
                       android:layout_weight="0.65"
                       android:layout_width="0dp"
                       android:layout_height="match_parent" 
                       android:gravity="center_vertical"
                       android:textSize="18dp"
                       android:singleLine="true"
                       android:textColor="@color/dh_dark_gray_blue"/>
                   
                   <TextView
                       android:id="@+id/tv_hotel_row_price"
                       android:layout_weight="0.35"
                       android:layout_width="0dp"
                       android:layout_height="match_parent" 
                       android:gravity="center_vertical|right"
                       android:textSize="12dp"
                       android:textColor="@color/dh_gray50"/>
                   
               </LinearLayout>
               
               <LinearLayout 
                   android:layout_weight="0.5"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:orientation="horizontal">
                   
                   <ImageView
                       android:id="@+id/iv_hotel_row_grade"
                       android:layout_width="50dp"
                       android:layout_height="20dp"
                       android:layout_gravity="center_vertical"/>
                   
                   <TextView
                       android:id="@+id/tv_hotel_row_address"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="0.65" 
                       android:gravity="center_vertical"
                       android:textSize="15dp"
                       android:singleLine="true"
                       android:textColor="@color/dh_gray50"/>
                   
                   <TextView
                       android:id="@+id/tv_hotel_row_discount"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="0.35" 
                       android:gravity="center_vertical|right"
                       android:textSize="18dp"
                       android:textColor="@color/dh_dark_gray_blue"/>
                   
               </LinearLayout>
               
           </LinearLayout> 
           
            
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>

