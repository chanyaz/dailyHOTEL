<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/dh_gray96"
    xmlns:app="http://schemas.android.com/apk/res/com.twoheart.dailyhotel" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/dh_dark_gray_blue"
            android:text="체크인"/>
        
        <TextView 
            android:id="@+id/tv_hotel_payment_checkin"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textColor="@color/dh_dark_gray_blue"
            android:gravity="right|center_vertical"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textColor="@color/dh_dark_gray_blue"
            android:gravity="center_vertical"
            android:text="체크아웃"/>
        
        <TextView
            android:id="@+id/tv_hotel_payment_checkout" 
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:textSize="15dp"
            android:textColor="@color/dh_dark_gray_blue"/>
    </LinearLayout>
    
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/dh_dark_gray_blue"/>
    
    <RelativeLayout 
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">
        
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="15dp"
            android:textColor="@color/dh_dark_gray_blue"
            android:gravity="center_vertical"
            android:text="적립금 사용"/>
        
        <com.twoheart.dailyhotel.utils.Switch
            android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_alignParentRight="true"
		    android:layout_marginTop="12dp"
		    android:gravity="center_vertical"
		    app:isChecked="true"
		    android:textSize="15dp"
		    app:textLeft="사용안함"
		    app:textRight="사용"
		    android:id="@+id/btn_on_off">
	    </com.twoheart.dailyhotel.utils.Switch>
	    
        
    </RelativeLayout>
    
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/dh_dark_gray_blue"/>
    
    <LinearLayout 
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="15dp"
            android:textColor="@color/dh_dark_gray_blue"
            android:gravity="center_vertical"
            android:text="비용"/>
        
        <TextView
            android:id="@+id/tv_hotel_payment_original_price" 
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="15dp"
            android:textColor="@color/dh_dark_gray_blue"
            android:gravity="right|center_vertical"
            android:text="￦0"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="15dp"
            android:textColor="@color/dh_dark_gray_blue"
            android:gravity="center_vertical"
            android:text="적립금 할인"/>
        
        <TextView 
            android:id="@+id/tv_hotel_payment_credit"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="15dp"
            android:textColor="@color/dh_dark_gray_blue"
            android:gravity="right|center_vertical"
            android:text="￦0"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="15dp"
            android:textColor="@color/dh_dark_gray_blue"
            android:gravity="center_vertical"
            android:text="결제금액"/>
        
        <TextView 
            android:id="@+id/tv_hotel_payment_price"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="15dp"
            android:textColor="@color/dh_dark_gray_blue"
            android:gravity="right|center_vertical"
            android:text="￦0"/>
    </LinearLayout>
    
    <Button 
        android:id="@+id/btn_hotel_payment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center|center_vertical"
        android:background="@drawable/dh_btn_pink"
        android:textColor="@color/white"
        android:text="결제"/>
    
</LinearLayout>